@{
    var baseUrl = ViewBag.BaseUrl as string ?? "";
    var pageParam = ViewBag.PageParam as string ?? "page";
    var currentPage = ViewBag.CurrentPage as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
    
    // Helper to get URL separator
    string GetUrlSeparator()
    {
        return baseUrl.Contains("?") ? "&" : "?";
    }
    
    // Calculate pagination values
    int startPage = 1;
    int endPage = 1;
    string urlSep = "";
    
    if (totalPages > 1)
    {
        startPage = Math.Max(1, currentPage - 2);
        endPage = Math.Min(totalPages, currentPage + 2);
        urlSep = GetUrlSeparator();
    }
}

@if (totalPages > 1)
{
    <div class="flex flex-col items-center justify-center mt-6 mb-4">
        <nav class="flex items-center gap-2" aria-label="Pagination">
            @* Previous Button *@
            @if (currentPage > 1)
            {
                <a href="@(baseUrl + urlSep + pageParam + "=" + (currentPage - 1))"
                   class="inline-flex items-center justify-center min-w-[80px] px-4 py-2 text-sm font-medium text-gray-600 bg-white border border-gray-300 rounded-md hover:bg-gray-50 transition-colors">
                    <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                    </svg>
                    Trước
                </a>
            }
            else
            {
                <span class="inline-flex items-center justify-center min-w-[80px] px-4 py-2 text-sm font-medium text-gray-400 bg-gray-50 border border-gray-200 rounded-md cursor-not-allowed">
                    <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                    </svg>
                    Trước
                </span>
            }

            @* Page number buttons *@
            <div class="flex items-center gap-2">
                @* First page *@
                @if (startPage > 1)
                {
                    <a href="@(baseUrl + urlSep + pageParam + "=1")"
                       class="inline-flex items-center justify-center w-10 h-10 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-blue-50 hover:border-blue-400 transition-colors">
                        1
                    </a>
                }
                @if (startPage > 2)
                {
                    <span class="text-gray-500 px-1">...</span>
                }
                
                @* Page number loop *@
                @for (int i = startPage; i <= endPage; i++)
                {
                    if (i == currentPage)
                    {
                        <span class="inline-flex items-center justify-center w-10 h-10 text-sm font-bold text-white bg-blue-600 border border-blue-600 rounded-md shadow-sm">
                            @i
                        </span>
                    }
                    else
                    {
                        <a href="@(baseUrl + urlSep + pageParam + "=" + i)"
                           class="inline-flex items-center justify-center w-10 h-10 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-blue-50 hover:border-blue-400 transition-colors">
                            @i
                        </a>
                    }
                }
                
                @* Last page *@
                @if (endPage < totalPages - 1)
                {
                    <span class="text-gray-500 px-1">...</span>
                }
                @if (endPage < totalPages)
                {
                    <a href="@(baseUrl + urlSep + pageParam + "=" + totalPages)"
                       class="inline-flex items-center justify-center w-10 h-10 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-blue-50 hover:border-blue-400 transition-colors">
                        @totalPages
                    </a>
                }
            </div>

            @* Next Button *@
            @if (currentPage < totalPages)
            {
                <a href="@(baseUrl + urlSep + pageParam + "=" + (currentPage + 1))"
                   class="inline-flex items-center justify-center min-w-[80px] px-4 py-2 text-sm font-medium text-gray-600 bg-white border border-gray-300 rounded-md hover:bg-gray-50 transition-colors">
                    Sau
                    <svg class="w-4 h-4 ml-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                </a>
            }
            else
            {
                <span class="inline-flex items-center justify-center min-w-[80px] px-4 py-2 text-sm font-medium text-gray-400 bg-gray-50 border border-gray-200 rounded-md cursor-not-allowed">
                    Sau
                    <svg class="w-4 h-4 ml-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                </span>
            }
        </nav>
        
        @* Page info *@
        <div class="mt-3">
            <p class="text-sm text-gray-600 font-medium">
                Trang <span class="font-bold text-gray-900">@currentPage</span> / <span class="font-bold text-gray-900">@totalPages</span>
            </p>
        </div>
    </div>
}
