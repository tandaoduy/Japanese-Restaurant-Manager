@* Component: Badge - Hiển thị badge/label *@
@model string

@{
    var badgeType = ViewBag.BadgeType as string ?? "default"; // default, success, error, warning, info
    var badgeSize = ViewBag.BadgeSize as string ?? "md"; // sm, md, lg
}

@if (!string.IsNullOrEmpty(Model))
{
    var styleClasses = "";
    switch (badgeType)
    {
        case "success":
            styleClasses = "bg-green-100 text-green-800";
            break;
        case "error":
            styleClasses = "bg-red-100 text-red-800";
            break;
        case "warning":
            styleClasses = "bg-yellow-100 text-yellow-800";
            break;
        case "info":
            styleClasses = "bg-blue-100 text-blue-800";
            break;
        default:
            styleClasses = "bg-gray-100 text-gray-800";
            break;
    }

    var sizeClasses = "";
    switch (badgeSize)
    {
        case "sm":
            sizeClasses = "px-2 py-0.5 text-xs";
            break;
        case "lg":
            sizeClasses = "px-3 py-1 text-base";
            break;
        default:
            sizeClasses = "px-2.5 py-0.5 text-sm";
            break;
    }

    <span class="@styleClasses @sizeClasses inline-flex items-center rounded-full font-medium">
        @Model
    </span>
}
