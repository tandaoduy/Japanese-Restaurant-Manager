@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto px-4 py-10 max-w-xl">
    <h1 class="text-3xl font-bold text-gray-900 mb-6 text-center">Quên mật khẩu</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="mb-6 p-4 rounded-lg bg-green-50 text-green-700 border border-green-200">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="mb-6 p-4 rounded-lg bg-red-50 text-red-700 border border-red-200">
            @TempData["ErrorMessage"]
        </div>
    }

    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "space-y-5" }))
    {
        @Html.AntiForgeryToken()

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Email đã đăng ký <span class="text-red-500">*</span></label>
            <input type="email" name="Email" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" placeholder="email@example.com" required />
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Mật khẩu mới <span class="text-red-500">*</span></label>
            <input type="password" name="NewPassword" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" required />
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Xác nhận mật khẩu mới <span class="text-red-500">*</span></label>
            <input type="password" name="ConfirmPassword" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" required />
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Mã xác nhận <span class="text-red-500">*</span></label>
            <div class="flex items-center gap-3">
                <input type="text" name="CaptchaCode" class="flex-1 px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" maxlength="5" style="text-transform: uppercase;" placeholder="Nhập mã" required />
                <img src="@Url.Action("Generate", "Captcha")" alt="CAPTCHA" class="h-10 border rounded cursor-pointer" onclick="this.src='@Url.Action("Generate", "Captcha")?t=' + new Date().getTime();" />
            </div>
        </div>

        <button type="submit" class="w-full py-2.5 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 transition-colors">Đặt lại mật khẩu</button>

        <div class="text-center text-sm text-gray-600 mt-3">
            <a href="@Url.Action("Index", "Home")#openLoginModal" class="text-red-600 hover:underline">Quay lại đăng nhập</a>
        </div>
    }
</div>
