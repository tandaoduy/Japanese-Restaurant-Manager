@model IEnumerable<Project_65133141.Models.TinTuc>
@{
    ViewBag.Title = "Tin Tức & Ưu Đãi | SAKURA KAZOKU";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section - Style like Menu page -->
<section class="hero-section relative overflow-hidden -mt-36" style="height: 60vh; min-height: 500px;">
    <style>
        .hero-section img.hero-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            animation: fadeScaleIn 1.5s ease-out;
        }
        .hero-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0, 0, 0, 0.5);
        }
        .hero-content-wrapper {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            display: flex;
            align-items: center;
            padding-top: 144px;
        }
        .hero-text {
            color: white;
            max-width: 768px;
            animation: fadeInUp 1s ease-out 0.3s both;
            text-align: left;
        }
        .hero-title {
            font-size: 3.75rem;
            font-weight: bold;
            margin-bottom: 1rem;
            text-shadow: 2px 4px 8px rgba(0,0,0,0.8);
            letter-spacing: 0.05em;
        }
        .hero-subtitle {
            font-size: 1.5rem;
            font-weight: 600;
            padding-bottom: 0.75rem;
            color: #ec4899;
            position: relative;
            display: inline-block;
        }
        .hero-subtitle::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 0;
            height: 2px;
            background-color: #ec4899;
            animation: expandWidth 1s ease-out 0.8s forwards;
        }
        @@keyframes fadeScaleIn {
            from { opacity: 0; transform: scale(1.1); }
            to { opacity: 1; transform: scale(1); }
        }
        @@keyframes fadeInUp {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 1; transform: translateY(0); }
        }
        @@keyframes expandWidth {
            to { width: 100%; }
        }
        @@media (max-width: 767px) {
            .hero-title { font-size: 2rem; }
            .hero-subtitle { font-size: 1rem; }
        }
        
        /* Restored News Card Styles */
        .news-card {
            background: white;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            transition: all 0.3s ease;
            border: 1px solid #f0f0f0;
        }
        .news-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 30px rgba(0,0,0,0.15);
        }
        .news-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
            background: linear-gradient(135deg, #f3f4f6, #e5e7eb);
        }
        .news-content {
            padding: 1.5rem;
        }
        .news-title {
            font-size: 1.1rem;
            font-weight: 600;
            color: #1f2937;
            margin-bottom: 0.75rem;
            line-height: 1.4;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
        .news-title:hover {
            color: #8B0000;
        }
        .news-desc {
            font-size: 0.9rem;
            color: #6b7280;
            line-height: 1.6;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
            margin-bottom: 1rem;
        }
        .news-meta {
            display: flex;
            align-items: center;
            justify-content: space-between;
            font-size: 0.8rem;
            color: #9ca3af;
        }
        .news-date {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        .badge-featured {
            background: linear-gradient(135deg, #D4AF37, #B8860B);
            color: white;
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
        }
        .read-more {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            color: #8B0000;
            font-weight: 600;
            font-size: 0.9rem;
            transition: all 0.3s;
        }
        .read-more:hover {
            color: #A52A2A;
            gap: 0.75rem;
        }
        .pagination-btn {
            padding: 0.75rem 1.25rem;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.3s;
        }
        .pagination-btn.active {
            background: linear-gradient(135deg, #8B0000, #A52A2A);
            color: white;
        }
        .pagination-btn:not(.active) {
            background: #f3f4f6;
            color: #374151;
        }
        .pagination-btn:not(.active):hover {
            background: #e5e7eb;
        }
        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
        }
        .empty-state svg {
            width: 100px;
            height: 100px;
            color: #d1d5db;
            margin-bottom: 1.5rem;
        }
    </style>
    
    <img src="@Url.Content("~/Images/slidetintuc.jpg")" alt="Tin Tức SAKURA KAZOKU" class="hero-image">
    <div class="hero-overlay"></div>
    <div class="hero-content-wrapper">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <div class="hero-text">
                <h1 class="hero-title">SAKURA KAZOKU</h1>
                <p class="hero-subtitle">Tin Tức & Ưu Đãi</p>
            </div>
        </div>
    </div>
</section>

<div class="container mx-auto px-4 py-12">
    @if (Model != null && Model.Any())
    {
        <!-- News Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            @foreach (var item in Model)
            {
                var imagePath = !string.IsNullOrWhiteSpace(item.HinhAnh)
                    ? Url.Content("~/Images/TinTuc/" + item.HinhAnh)
                    : Url.Content("~/Images/slide09.jpg");

                <article class="news-card">
                    <a href="@Url.Action("Details", "TinTuc", new { area = "", slug = item.Slug })">
                        <img src="@imagePath" alt="@item.TieuDe" class="news-image" 
                             onerror="this.src='@Url.Content("~/Images/slide09.jpg")'" />
                    </a>
                    <div class="news-content">
                        @if (item.IsNoiBat == true)
                        {
                            <span class="badge-featured mb-3 inline-block">⭐ Nổi bật</span>
                        }
                        <h2 class="news-title">
                            <a href="@Url.Action("Details", "TinTuc", new { area = "", slug = item.Slug })">
                                @item.TieuDe
                            </a>
                        </h2>
                        <p class="news-desc">@(item.MoTaNgan ?? "Xem chi tiết để biết thêm thông tin...")</p>
                        <div class="news-meta">
                            <div class="news-date">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                                @(item.NgayDang?.ToString("dd/MM/yyyy") ?? "N/A")
                            </div>
                            <a href="@Url.Action("Details", "TinTuc", new { area = "", slug = item.Slug })" class="read-more">
                                Đọc thêm
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                </article>
            }
        </div>

        <!-- Pagination -->
        if (ViewBag.TotalPages > 1)
        {
            <div class="flex justify-center mt-12 gap-2">
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    var isActive = i == ViewBag.CurrentPage;
                    <a href="@Url.Action("Index", new { page = i })" 
                       class="pagination-btn @(isActive ? "active" : "")">
                        @i
                    </a>
                }
            </div>
        }
    }
    else
    {
        <div class="empty-state">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="mx-auto">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
            </svg>
            <h3 class="text-xl font-semibold text-gray-700 mb-2">Chưa có tin tức nào</h3>
            <p class="text-gray-500">Vui lòng quay lại sau để xem các tin tức và ưu đãi mới nhất!</p>
            <a href="@Url.Action("Index", "Home", new { area = "" })" 
               class="inline-flex items-center gap-2 mt-6 px-6 py-3 bg-gradient-to-r from-red-600 to-red-700 text-white rounded-lg font-semibold hover:shadow-lg transition">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Về trang chủ
            </a>
        </div>
    }
</div>
