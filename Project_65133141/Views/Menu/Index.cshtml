<script>
    (function () {
        const pageSize = 12; // 12 cards per page, 4 per row
        const cards = Array.prototype.slice.call(document.querySelectorAll('#menu-grid .menu-card'));
        const paginationContainer = document.getElementById('menu-pagination');

        if (!cards.length || !paginationContainer) return;

        const totalPages = Math.max(1, Math.ceil(cards.length / pageSize));
        let currentPage = 1;

        function renderPage(page) {
            currentPage = page;

            cards.forEach(function (card, index) {
                const pageIndex = Math.floor(index / pageSize) + 1;
                if (pageIndex === page) {
                    card.style.display = '';
                    card.style.opacity = '0';
                    card.style.transform = 'translateY(12px)';
                    // small delay for animation
                    setTimeout(function () {
                        card.style.transition = 'opacity 0.35s ease, transform 0.35s ease';
                        card.style.opacity = '1';
                        card.style.transform = 'translateY(0)';
                    }, 10);
                } else {
                    card.style.display = 'none';
                }
            });

            renderPagination();
        }

        function createPageButton(page, text, isActive, isDisabled) {
            const btn = document.createElement('button');
            btn.textContent = text || page;
            btn.type = 'button';
            btn.className = 'w-9 h-9 rounded-full border border-gray-200 flex items-center justify-center text-sm font-semibold mx-1 transition-all duration-200 bg-white hover:bg-gray-100';

            if (isActive) {
                btn.className = 'w-9 h-9 rounded-full flex items-center justify-center text-sm font-semibold mx-1 transition-all duration-200 bg-red-500 text-white shadow-md hover:bg-red-600';
            }

            if (isDisabled) {
                btn.disabled = true;
                btn.className += ' text-gray-300 cursor-not-allowed hover:bg-white';
            } else if (!isActive) {
                btn.addEventListener('click', function () {
                    if (page >= 1 && page <= totalPages && page !== currentPage) {
                        renderPage(page);
                    }
                });
            }

            return btn;
        }

        function renderPagination() {
            paginationContainer.innerHTML = '';

            const wrapper = document.createElement('div');
            wrapper.className = 'flex items-center justify-center';

            // First and Prev
            wrapper.appendChild(createPageButton(1, '¬´', false, currentPage === 1));
            wrapper.appendChild(createPageButton(currentPage - 1, '‚Äπ', false, currentPage === 1));

            // Page numbers (simple version: show all if <=5, else use window + ellipsis)
            if (totalPages <= 5) {
                for (let i = 1; i <= totalPages; i++) {
                    wrapper.appendChild(createPageButton(i, String(i), i === currentPage, false));
                }
            } else {
                const addEllipsis = function () {
                    const span = document.createElement('span');
                    span.textContent = '...';
                    span.className = 'mx-1 text-gray-400 text-sm select-none';
                    wrapper.appendChild(span);
                };

                const windowSize = 3;
                let start = Math.max(1, currentPage - 1);
                let end = Math.min(totalPages, start + windowSize - 1);

                if (end - start < windowSize - 1) {
                    start = Math.max(1, end - windowSize + 1);
                }

                // First page
                wrapper.appendChild(createPageButton(1, '1', currentPage === 1, false));

                if (start > 2) {
                    addEllipsis();
                }

                for (let i = start; i <= end; i++) {
                    if (i !== 1 && i !== totalPages) {
                        wrapper.appendChild(createPageButton(i, String(i), i === currentPage, false));
                    }
                }

                if (end < totalPages - 1) {
                    addEllipsis();
                }

                if (totalPages > 1) {
                    wrapper.appendChild(createPageButton(totalPages, String(totalPages), currentPage === totalPages, false));
                }
            }

            // Next and Last
            wrapper.appendChild(createPageButton(currentPage + 1, '‚Ä∫', false, currentPage === totalPages));
            wrapper.appendChild(createPageButton(totalPages, '¬ª', false, currentPage === totalPages));

            paginationContainer.appendChild(wrapper);

            const info = document.createElement('div');
            info.className = 'text-sm text-gray-500 mt-2';
            info.textContent = 'Trang ' + currentPage + ' / ' + totalPages;
            paginationContainer.appendChild(info);
        }

        renderPage(1);
    })();
</script>

