@model IEnumerable<Project_65133141.Models.ThongBao>
@{
    ViewBag.Title = "Quản lý Thông báo";
    Layout = "~/Areas/Admin_65133141/Views/Shared/_Layout.cshtml";
}

<style>
    .notif-row {
        transition: all 0.2s;
    }
    .notif-row:hover {
        background-color: #fef2f2;
    }
    .type-badge {
        padding: 0.25rem 0.75rem;
        border-radius: 50px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
    }
    .type-thongbao { background: #dbeafe; color: #1d4ed8; }
    .type-khuyenmai { background: #dcfce7; color: #15803d; }
    .type-canh-bao { background: #fef3c7; color: #b45309; }
    .type-he-thong { background: #f3e8ff; color: #7c3aed; }
</style>

<div class="container mx-auto px-4 py-6">
    <!-- Alert Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div id="successAlert" class="bg-green-100 border border-green-200 text-green-800 px-4 py-3 rounded-xl mb-6 flex items-center justify-between shadow-sm">
            <div class="flex items-center gap-3">
                <div class="w-8 h-8 rounded-full bg-green-500 text-white flex items-center justify-center">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                </div>
                <span class="font-medium">@TempData["SuccessMessage"]</span>
            </div>
            <button onclick="this.parentElement.remove()" class="text-green-600 hover:text-green-800">✕</button>
        </div>
        <script>setTimeout(function() { var el = document.getElementById('successAlert'); if(el) el.remove(); }, 5000);</script>
    }

    <!-- Header -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6 gap-4">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Quản lý Thông báo</h1>
            <p class="text-gray-500 mt-1">Tổng cộng: <span class="font-semibold">@ViewBag.TotalItems</span> thông báo</p>
        </div>
        <a href="@Url.Action("Create")" class="px-4 py-2.5 bg-gradient-to-r from-red-600 to-rose-600 hover:from-red-700 hover:to-rose-700 text-white rounded-xl font-bold text-sm transition-all shadow-md hover:shadow-lg flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
            Tạo thông báo mới
        </a>
    </div>

    <!-- Filters & Search (Expanded) -->
    <div class="bg-white rounded-xl border border-gray-200 p-4 mb-6 relative z-30">
        <form method="get" id="notifSearchForm" class="flex flex-wrap items-center gap-3 w-full m-0">
            <!-- Search Input with AutoComplete -->
            <div class="relative flex-1 min-w-[200px]">
                <input type="text" 
    <div class="mb-4 text-gray-600">
        <p>Tổng số: <span class="font-semibold text-gray-900">@Model.Count()</span> thông báo</p>
    </div>

    <!-- Custom Search & Filter Bar (Customer Style) -->
    <div class="mb-6 flex justify-end">
        <form method="get" id="notifFilterForm" class="flex flex-wrap items-end gap-4 justify-end w-full">
            <input type="hidden" id="typeFilterInput" name="type" value="@ViewBag.Loai" />
            
            <!-- Filter Button & Panel -->
            <div class="relative">
                <button type="button" id="filterToggleBtn" onclick="toggleFilterPanel()" class="inline-flex items-center justify-center w-10 h-10 bg-white border border-gray-300 text-gray-600 rounded-lg hover:bg-gray-50 hover:border-gray-400 transition-all shadow-sm" title="Lọc">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
                    </svg>
                </button>
                <!-- Filter Dropdown Panel -->
                <div id="filterPanel" class="hidden absolute right-0 mt-2 w-52 bg-white border border-gray-200 rounded-lg shadow-xl z-20">
                    <div class="py-2">
                        <p class="px-4 pb-2 text-xs font-semibold text-gray-500 uppercase tracking-wide">Trạng thái / Loại</p>
                        <button type="button" class="w-full text-left px-4 py-2 text-sm @(string.IsNullOrEmpty(ViewBag.Loai) ? "bg-gray-100 font-semibold" : "hover:bg-gray-50 text-gray-700")" onclick="applyTypeFilter('')">
                            Tất cả
                        </button>
                        <button type="button" class="w-full text-left px-4 py-2 text-sm @(ViewBag.Loai == "khuyenmai" ? "bg-gray-100 font-semibold" : "hover:bg-gray-50 text-gray-700")" onclick="applyTypeFilter('khuyenmai')">
                            Khuyến mãi
                        </button>
                        <button type="button" class="w-full text-left px-4 py-2 text-sm @(ViewBag.Loai == "canh-bao" ? "bg-gray-100 font-semibold" : "hover:bg-gray-50 text-gray-700")" onclick="applyTypeFilter('canh-bao')">
                            Cảnh báo
                        </button>
                        <button type="button" class="w-full text-left px-4 py-2 text-sm @(ViewBag.Loai == "he-thong" ? "bg-gray-100 font-semibold" : "hover:bg-gray-50 text-gray-700")" onclick="applyTypeFilter('he-thong')">
                            Hệ thống
                        </button>
                    </div>
                </div>
            </div>

            <!-- Search Input Group -->
            <div class="w-full md:w-auto md:min-w-[300px] max-w-md relative">
                <div class="flex items-stretch relative w-full">
                    <input type="text" 
                           id="notifSearchInput" 
                           name="search" 
                           value="@ViewBag.Search"
                           placeholder="Tìm kiếm tiêu đề thông báo..." 
                           autocomplete="off"
                           class="w-full pl-10 pr-4 py-2.5 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 outline-none transition-all shadow-sm">
                    
                    <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 w-4 h-4 text-gray-400 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                    
                    <!-- Loading Spinner -->
                    <div id="searchLoading" class="hidden absolute right-3 top-1/2 transform -translate-y-1/2">
                        <svg class="animate-spin h-4 w-4 text-red-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                    </div>
                </div>

                <!-- Suggestions Dropdown -->
                <div id="notifSearchSuggestions" class="hidden absolute top-full left-0 right-0 mt-1 bg-white border border-gray-200 rounded-lg shadow-xl z-20 max-h-60 overflow-y-auto w-full"></div>
            </div>
        </form>
    </div>

    <!-- Table -->
    @if (Model != null && Model.Any())
    {
        <div class="bg-white rounded-xl border border-gray-200 overflow-hidden relative z-10" id="notifTableContainer">
            <table class="w-full">
                <thead class="bg-gray-50 border-b border-gray-200">
                    <tr>
                        <th class="text-left px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider">Tiêu đề</th>
                        <th class="text-left px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider hidden md:table-cell">Loại</th>
                        <th class="text-left px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider hidden lg:table-cell">Ngày tạo</th>
                        <th class="text-left px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider hidden lg:table-cell">Trạng thái</th>
                        <th class="text-right px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider">Thao tác</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100" id="notifTableBody">
                    @foreach (var item in Model)
                    {
                        <tr class="notif-row" id="notif-@item.ThongBaoID">
                            <td class="px-6 py-4">
                                <div class="notif-title font-semibold text-gray-900">@item.TieuDe</div>
                                <div class="text-sm text-gray-500 truncate max-w-xs">@(item.NoiDung?.Length > 50 ? item.NoiDung.Substring(0, 50) + "..." : item.NoiDung)</div>
                            </td>
                            <td class="px-6 py-4 hidden md:table-cell">
                                @{
                                    var typeClass = "type-thongbao";
                                    var typeName = "Thông báo";
                                    var typeIcon = "";
                                    
                                    if (item.LoaiThongBao == "khuyenmai") { 
                                        typeClass = "type-khuyenmai"; 
                                        typeName = "Khuyến mãi";
                                        typeIcon = "<svg class='w-4 h-4' fill='none' stroke='currentColor' viewBox='0 0 24 24'><path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7'></path></svg>";
                                    }
                                    else if (item.LoaiThongBao == "canh-bao") { 
                                        typeClass = "type-canh-bao"; 
                                        typeName = "Cảnh báo";
                                        typeIcon = "<svg class='w-4 h-4' fill='none' stroke='currentColor' viewBox='0 0 24 24'><path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z'></path></svg>";
                                    }
                                    else if (item.LoaiThongBao == "he-thong") { 
                                        typeClass = "type-he-thong"; 
                                        typeName = "Hệ thống";
                                        typeIcon = "<svg class='w-4 h-4' fill='none' stroke='currentColor' viewBox='0 0 24 24'><path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z'></path><path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M15 12a3 3 0 11-6 0 3 3 0 016 0z'></path></svg>";
                                    }
                                }
                                <div class="hidden type-icon-data">@Html.Raw(typeIcon)</div>
                                <span class="type-badge @typeClass">@typeName</span>
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-500 hidden lg:table-cell">
                                @(item.NgayTao?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")
                            </td>
                            <td class="px-6 py-4 hidden lg:table-cell">
                                @if (item.DaDoc)
                                {
                                    <span class="text-green-600 text-sm font-medium inline-flex items-center gap-1">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                                        Đã đọc
                                    </span>
                                }
                                else
                                {
                                    <span class="text-amber-600 text-sm font-medium inline-flex items-center gap-1">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                                        Chưa đọc
                                    </span>
                                }
                            </td>
                            <td class="px-6 py-4 text-right">
                                <div class="flex items-center justify-end gap-2">
                                    <a href="@Url.Action("Edit", new { id = item.ThongBaoID })" class="p-2 text-amber-600 hover:bg-amber-50 rounded-lg transition" title="Sửa">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
                                    </a>
                                    <button type="button" onclick="showConfirmDelete(@item.ThongBaoID, '@(item.TieuDe?.Replace("'", "\\'"))')" class="p-2 text-red-600 hover:bg-red-50 rounded-lg transition" title="Xóa">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <!-- Pagination -->
        if (ViewBag.TotalPages > 1)
        {
            <div class="mt-6 flex flex-col items-center gap-2">
                <div class="flex gap-2">
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <a href="@Url.Action("Index", new { page = i, search = ViewBag.Search, type = ViewBag.Loai })" 
                           class="w-9 h-9 flex items-center justify-center rounded-lg text-sm font-semibold transition-all @(i == ViewBag.CurrentPage ? "bg-red-600 text-white shadow-md shadow-red-200" : "bg-white text-gray-600 hover:bg-gray-50 border border-gray-200")">
                            @i
                        </a>
                    }
                </div>
                <div class="text-xs text-gray-400 font-medium mt-1">
                    Trang @ViewBag.CurrentPage / @ViewBag.TotalPages
                </div>
            </div>
        }
    }
    else
    {
        <div class="text-center py-16">
            <div class="w-20 h-20 bg-red-50 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-10 h-10 text-red-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path></svg>
            </div>
            <h3 class="text-xl font-bold text-gray-800 mb-2">Chưa có thông báo nào</h3>
            <p class="text-gray-500 mb-6">Tạo thông báo mới để gửi đến người dùng.</p>
            <a href="@Url.Action("Create")" class="inline-block px-6 py-3 bg-red-600 text-white rounded-lg hover:bg-red-700 font-semibold">Tạo thông báo đầu tiên</a>
        </div>
    }
</div>

<!-- Delete Modal -->
<div id="confirmDeleteModal" class="fixed inset-0 bg-black bg-opacity-50 items-center justify-center z-[9999] p-4" style="display: none;">
    <div class="bg-white rounded-2xl shadow-2xl max-w-md w-full mx-auto">
        <div class="p-6">
            <div class="flex items-start gap-4">
                <div class="w-12 h-12 rounded-full bg-red-100 flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                </div>
                <div>
                    <h3 class="text-lg font-bold text-gray-900">Xóa thông báo</h3>
                    <p id="deleteMessage" class="mt-2 text-sm text-gray-600">Bạn có chắc chắn muốn xóa thông báo này?</p>
                </div>
            </div>
        </div>
        <div class="bg-gray-50 px-6 py-4 rounded-b-2xl flex justify-end gap-3">
            <button type="button" onclick="closeDeleteModal()" class="px-5 py-2.5 bg-white hover:bg-gray-100 text-gray-700 rounded-lg font-semibold text-sm border border-gray-300">Hủy</button>
            <button type="button" id="confirmDeleteBtn" onclick="performDelete()" class="px-5 py-2.5 bg-red-600 hover:bg-red-700 text-white rounded-lg font-semibold text-sm">Xóa</button>
        </div>
    </div>
</div>

@Html.AntiForgeryToken()

<script>
    // --- FILTER PANEL LOGIC ---
    function toggleFilterPanel() {
        const panel = document.getElementById('filterPanel');
        if (panel) {
            panel.classList.toggle('hidden');
        }
    }

    function applyTypeFilter(type) {
        const input = document.getElementById('typeFilterInput');
        const form = document.getElementById('notifFilterForm');
        if (input && form) {
            input.value = type;
            form.submit();
        }
    }

    // Close panel when clicking outside
    document.addEventListener('click', function(e) {
        const panel = document.getElementById('filterPanel');
        const btn = document.getElementById('filterToggleBtn');
        if (panel && btn && !panel.contains(e.target) && !btn.contains(e.target)) {
            panel.classList.add('hidden');
        }
    });

    // --- SEARCH LOGIC ---
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('notifSearchInput');
        const suggestionsBox = document.getElementById('notifSearchSuggestions');
        if (!searchInput || !suggestionsBox) return;

        let allNotifs = [];

        function buildNotifList() {
            const rows = document.querySelectorAll('.notif-row');
            allNotifs = [];
            rows.forEach(function(row) {
                const titleEl = row.querySelector('.notif-title');
                if(titleEl) {
                    allNotifs.push({
                        id: row.id,
                        title: titleEl.textContent.trim(),
                        element: row
                    });
                }
            });
        }
        buildNotifList();

        function showSuggestions(term) {
            if(!term || term.length < 1) {
                suggestionsBox.classList.add('hidden');
                return;
            }
            const matches = allNotifs.filter(n => n.title.toLowerCase().includes(term.toLowerCase())).slice(0, 6);
            if(matches.length === 0) {
                suggestionsBox.classList.add('hidden');
                return;
            }

            let html = '';
            matches.forEach(m => {
                const highlighted = highlightMatch(m.title, term);
                html += '<div class="suggestion-item px-4 py-3 hover:bg-gray-50 cursor-pointer border-b border-gray-100 last:border-b-0 flex items-center gap-3 transition-colors" data-title="' + m.title.replace(/"/g, '&quot;') + '">' +
                            '<svg class="w-4 h-4 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path></svg>' +
                            '<span class="text-sm text-gray-700 flex-1 line-clamp-1">' + highlighted + '</span>' +
                        '</div>';
            });
            suggestionsBox.innerHTML = html;
            suggestionsBox.classList.remove('hidden');

            suggestionsBox.querySelectorAll('.suggestion-item').forEach(el => {
                el.addEventListener('click', function() {
                    const txt = this.getAttribute('data-title');
                    searchInput.value = txt;
                    suggestionsBox.classList.add('hidden');
                    performClientSearch(txt);
                });
            });
        }

        function highlightMatch(text, term) {
            if (!term) return text;
            try {
                const safe = term.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
                const rgx = new RegExp('(' + safe + ')', 'gi');
                return text.replace(rgx, '<strong class="font-semibold text-gray-900">$1</strong>');
            } catch(e) { return text; }
        }

        function performClientSearch(term) {
            const t = term.toLowerCase().trim();
            const tableBody = document.getElementById('notifTableBody');
            let hasVisible = false;

            allNotifs.forEach(n => {
                if(t === '' || n.title.toLowerCase().includes(t)) {
                    n.element.style.display = '';
                    hasVisible = true;
                } else {
                    n.element.style.display = 'none';
                }
            });

            // No results handling
            let noRes = document.getElementById('clientNoResultsTR');
            if(!hasVisible && t !== '') {
                if(!noRes && tableBody) {
                    noRes = document.createElement('tr');
                    noRes.id = 'clientNoResultsTR';
                    noRes.innerHTML = '<td colspan="5" class="py-12 text-center text-gray-500 italic">Không tìm thấy thông báo nào phù hợp</td>';
                    tableBody.appendChild(noRes);
                }
                if(noRes) noRes.style.display = '';
            } else {
                if(noRes) noRes.style.display = 'none';
            }
        }

        searchInput.addEventListener('input', function(e) {
            const v = e.target.value;
            showSuggestions(v);
            performClientSearch(v);
        });

        document.addEventListener('click', function(e) {
            if(!searchInput.contains(e.target) && !suggestionsBox.contains(e.target)) {
                suggestionsBox.classList.add('hidden');
            }
        });
    });

    // --- DELETE LOGIC ---
    var currentDeleteId = null;

    function showConfirmDelete(id, title) {
        currentDeleteId = id;
        document.getElementById('deleteMessage').textContent = 'Bạn có chắc chắn muốn xóa thông báo "' + title + '"?';
        document.getElementById('confirmDeleteModal').style.display = 'flex';
    }

    function closeDeleteModal() {
        document.getElementById('confirmDeleteModal').style.display = 'none';
        currentDeleteId = null;
    }

    function performDelete() {
        if (!currentDeleteId) return;
        
        var btn = document.getElementById('confirmDeleteBtn');
        btn.disabled = true;
        btn.innerHTML = '<svg class="animate-spin h-4 w-4 text-white inline-block mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg> Đang xóa...';
        
        var token = document.querySelector('input[name="__RequestVerificationToken"]');
        var formData = new FormData();
        formData.append('ThongBaoID', currentDeleteId);
        if (token) formData.append('__RequestVerificationToken', token.value);
        
        fetch('@Url.Action("Delete", "ThongBao", new { area = "Admin_65133141" })', {
            method: 'POST',
            body: formData,
            headers: { 'X-Requested-With': 'XMLHttpRequest' }
        })
        .then(function(res) { return res.json(); })
        .then(function(data) {
            if (data.success) {
                var row = document.getElementById('notif-' + currentDeleteId);
                if (row) {
                    row.style.transition = 'opacity 0.3s';
                    row.style.opacity = '0';
                    setTimeout(function() { row.remove(); }, 300);
                }
                closeDeleteModal();
                showAlert('success', data.message);
                
                // Refresh page after short delay to update pagination
                setTimeout(function() {
                    window.location.reload();
                }, 1000);
            } else {
                showAlert('error', data.message);
                btn.disabled = false;
                btn.innerHTML = 'Xóa';
            }
        })
        .catch(function() {
            showAlert('error', 'Lỗi kết nối server');
            btn.disabled = false;
            btn.innerHTML = 'Xóa';
        });
    }

    function showAlert(type, message) {
        var alertContainer = document.getElementById('alert-container');
        if (!alertContainer) {
            alertContainer = document.createElement('div');
            alertContainer.id = 'alert-container';
            alertContainer.className = 'fixed top-4 right-4 z-[9999]';
            document.body.appendChild(alertContainer);
        }

        var alertId = 'alert-' + Date.now();
        var config = {
            success: {
                bg: 'bg-green-100 border border-green-200 text-green-900',
                iconBg: 'bg-green-500 text-white',
                title: 'Thành công!',
                icon: '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>'
            },
            error: {
                bg: 'bg-red-100 border border-red-200 text-red-900',
                iconBg: 'bg-red-500 text-white',
                title: 'Lỗi!',
                icon: '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01M4.93 4.93l14.14 14.14"></path><circle cx="12" cy="12" r="9" stroke-width="2" fill="none"></circle></svg>'
            }
        };

        var cfg = config[type] || config.error;

        var alertHTML = `
            <div id="${alertId}" class="${cfg.bg} px-4 py-2.5 rounded-xl shadow-md mb-3 flex items-center gap-3 min-w-[280px] max-w-md transform transition-all duration-300 translate-x-full bg-opacity-95 border border-white/60">
                <div class="w-7 h-7 rounded-full ${cfg.iconBg} flex items-center justify-center flex-shrink-0">
                    ${cfg.icon}
                </div>
                <div class="flex-1">
                    <div class="font-semibold text-sm mb-0.5">${cfg.title}</div>
                    <div class="text-sm leading-snug">${message}</div>
                </div>
                <button onclick="document.getElementById('${alertId}').remove()" class="text-current opacity-70 hover:opacity-100">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
        `;

        alertContainer.insertAdjacentHTML('beforeend', alertHTML);

        // Animate in
        setTimeout(function() {
            var alert = document.getElementById(alertId);
            if (alert) {
                alert.classList.remove('translate-x-full');
            }
        }, 10);

        // Auto remove
        setTimeout(function() {
            var alert = document.getElementById(alertId);
            if (alert) {
                alert.classList.add('translate-x-full');
                setTimeout(function() { alert.remove(); }, 300);
            }
        }, 5000);
    }
</script>
