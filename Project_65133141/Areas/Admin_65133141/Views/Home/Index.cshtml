@{
    ViewBag.Title = "Quản Trị - SAKURA KAZOKU";
    Layout = "~/Areas/Admin_65133141/Views/Shared/_Layout.cshtml";
}

<style>
    /* Admin Red Theme - Consistent with Header */
    .luxury-hero {
        background: linear-gradient(135deg, #450a0a 0%, #7f1d1d 50%, #450a0a 100%); /* Red-950 to Red-900 */
        position: relative;
        overflow: hidden;
    }
    
    .luxury-hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23991b1b' fill-opacity='0.1'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
        opacity: 0.3;
    }

    .admin-card {
        background: white;
        border: 1px solid #fee2e2; /* Red-100 */
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .admin-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(153, 27, 27, 0.1), 0 0 0 1px rgba(220, 38, 38, 0.2);
        border-color: #fca5a5; /* Red-300 */
    }

    .admin-card .icon-wrapper {
        width: 64px;
        height: 64px;
        border-radius: 20px;
        background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%); /* Red-50 to Red-100 */
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.25rem;
        color: #b91c1c; /* Red-700 */
        transition: all 0.3s ease;
        border: 1px solid #fecaca; /* Red-200 */
    }

    .admin-card:hover .icon-wrapper {
        background: #dc2626; /* Red-600 */
        color: white;
        transform: scale(1.1);
        box-shadow: 0 10px 20px rgba(220, 38, 38, 0.3);
        border-color: #dc2626;
    }

    .text-accent { color: #dc2626; } /* Red-600 */
    
    .glass-dark {
        background: rgba(69, 10, 10, 0.85); /* Red-950 alpha */
        backdrop-filter: blur(20px);
        border: 1px solid rgba(220, 38, 38, 0.2);
    }

    /* Cherry Blossom Animation - Adjusted to white/pink for contrast on dark red */
    .cherry-blossom {
        position: absolute;
        width: 10px;
        height: 10px;
        background: radial-gradient(circle, #fecdd3 40%, transparent 70%);
        border-radius: 50% 50% 50% 50% / 60% 60% 40% 40%;
        opacity: 0.4;
        animation: fall linear infinite;
    }

    @@keyframes fall {
        0% { transform: translateY(-10px) rotate(0deg); opacity: 0; }
        10% { opacity: 0.4; }
        90% { opacity: 0.4; }
        100% { transform: translateY(100vh) rotate(720deg); opacity: 0; }
    }
    
    .manage-btn {
        margin-top: auto;
        padding: 0.5rem 1.5rem;
        border-radius: 50px;
        font-size: 0.875rem;
        font-weight: 600;
        background-color: transparent;
        color: #b91c1c; /* Red-700 */
        border: 1px solid #b91c1c;
        transition: all 0.3s;
    }

    .admin-card:hover .manage-btn {
        background-color: #dc2626; /* Red-600 */
        border-color: #dc2626;
        color: white;
    }

    .section-separator {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .section-line {
        height: 1px;
        flex: 1;
        background: linear-gradient(90deg, transparent, #ef4444, transparent);
        opacity: 0.3;
    }
    
    .section-title {
        font-size: 0.875rem;
        font-weight: 700;
        letter-spacing: 0.2em;
        text-transform: uppercase;
        color: #991b1b; /* Red-800 */
    }
    
    .quick-btn {
        background-color: white;
        transition: all 0.3s;
        border: 1px solid #fee2e2;
    }
    
    .quick-btn:hover {
        background-color: #fef2f2;
        border-color: #fca5a5;
        transform: translateY(-2px);
    }
    
    .quick-icon-bg {
        background-color: #fee2e2;
        color: #b91c1c;
        transition: all 0.3s;
    }
    
    .quick-btn:hover .quick-icon-bg {
        background-color: #dc2626;
        color: white;
    }
</style>

<div class="min-h-screen" style="background: linear-gradient(180deg, #fff1f2 0%, #fff 100%);">
    
    <!-- Hero Section -->
    <div class="luxury-hero pb-32 pt-16 relative">
        <!-- Cherry Blossoms -->
        <div class="cherry-blossom" style="left: 10%; animation-duration: 8s; animation-delay: 0s;"></div>
        <div class="cherry-blossom" style="left: 25%; animation-duration: 10s; animation-delay: 2s;"></div>
        <div class="cherry-blossom" style="left: 85%; animation-duration: 7s; animation-delay: 0.5s;"></div>

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-red-200 text-xs font-bold tracking-[0.3em] uppercase mb-3">Administrator Control</p>
                    <h1 class="text-5xl font-bold text-white mb-4" style="font-family: 'Inter', sans-serif;">
                        @{
                            var currentHour = DateTime.Now.Hour;
                            var greeting = currentHour < 12 ? "Chào buổi sáng" : currentHour < 18 ? "Chào buổi chiều" : "Chào buổi tối";
                        }
                        @greeting, <span class="text-red-400">Quản trị viên</span>!
                    </h1>
                    <p class="text-red-100/80 text-lg">Hệ thống hoạt động ổn định. Chọn một chức năng để bắt đầu.</p>
                </div>
                <div class="hidden lg:block">
                    <div class="glass-dark rounded-xl p-6 text-right w-64 shadow-2xl">
                         <div class="text-red-300 text-xs font-bold tracking-widest uppercase mb-1">@DateTime.Now.ToString("dddd")</div>
                         <div class="text-white text-4xl font-bold tracking-tight mb-1">@DateTime.Now.ToString("HH:mm")</div>
                         <div class="text-red-200/60 text-sm">@DateTime.Now.ToString("dd/MM/yyyy")</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 -mt-20 pb-12 relative z-20">
        
        <!-- Section: System Management -->
        <div class="section-separator">
            <div class="section-line"></div>
            <div class="section-title">Danh Mục Quản Lý</div>
            <div class="section-line"></div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 gap-6 mb-12">
            
            <!-- 1. Customers -->
            <a href="@Url.Action("Index", "Customer", new { area = "Admin_65133141" })" class="admin-card rounded-2xl p-8 group no-underline">
                <div class="icon-wrapper">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path></svg>
                </div>
                <h3 class="text-lg font-bold text-gray-900 mb-2">Khách Hàng</h3>
                <p class="text-gray-500 text-sm mb-6 leading-relaxed">Quản lý hồ sơ, lịch sử đặt bàn và thông tin thành viên.</p>
                <span class="manage-btn">Truy cập</span>
            </a>

            <!-- 2. Employees -->
            <a href="@Url.Action("Index", "Employee", new { area = "Admin_65133141" })" class="admin-card rounded-2xl p-8 group no-underline">
                <div class="icon-wrapper">
                     <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                </div>
                <h3 class="text-lg font-bold text-gray-900 mb-2">Nhân Sự</h3>
                <p class="text-gray-500 text-sm mb-6 leading-relaxed">Quản lý thông tin nhân viên, tài khoản và phân quyền.</p>
                <span class="manage-btn">Truy cập</span>
            </a>

            <!-- 3. Menu -->
            <a href="@Url.Action("Index", "Product", new { area = "Admin_65133141" })" class="admin-card rounded-2xl p-8 group no-underline">
                <div class="icon-wrapper">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path></svg>
                </div>
                <h3 class="text-lg font-bold text-gray-900 mb-2">Thực Đơn</h3>
                <p class="text-gray-500 text-sm mb-6 leading-relaxed">Cập nhật món ăn, điều chỉnh giá và danh mục.</p>
                <span class="manage-btn">Truy cập</span>
            </a>

            <!-- 4. Bookings -->
            <a href="@Url.Action("Index", "DatBan", new { area = "Admin_65133141" })" class="admin-card rounded-2xl p-8 group no-underline">
                <div class="icon-wrapper">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                </div>
                <h3 class="text-lg font-bold text-gray-900 mb-2">Đặt Bàn</h3>
                <p class="text-gray-500 text-sm mb-6 leading-relaxed">Theo dõi và phê duyệt các yêu cầu đặt bàn mới.</p>
                <span class="manage-btn">Truy cập</span>
            </a>

            <!-- 5. Orders -->
            <a href="@Url.Action("Index", "DonHang", new { area = "Admin_65133141" })" class="admin-card rounded-2xl p-8 group no-underline">
                <div class="icon-wrapper">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                </div>
                <h3 class="text-lg font-bold text-gray-900 mb-2">Đơn Hàng</h3>
                <p class="text-gray-500 text-sm mb-6 leading-relaxed">Xem lịch sử đơn hàng và thống kê doanh thu.</p>
                <span class="manage-btn">Truy cập</span>
            </a>
            
        </div>
        
        <!-- Section: Quick Actions -->
        <div class="section-separator">
             <div class="section-line"></div>
             <div class="section-title">Thao Tác Nhanh</div>
             <div class="section-line"></div>
        </div>
        
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
             <a href="@Url.Action("Index", "BanAn", new { area = "Admin_65133141" })" class="quick-btn p-4 rounded-xl shadow-sm flex items-center justify-center gap-3 no-underline group">
                 <span class="w-8 h-8 rounded-full quick-icon-bg flex items-center justify-center">🪑</span>
                 <span class="font-bold text-gray-700">Sơ Đồ Bàn</span>
             </a>
             <a href="@Url.Action("Index", "BaoCao", new { area = "Admin_65133141" })" class="quick-btn p-4 rounded-xl shadow-sm flex items-center justify-center gap-3 no-underline group">
                 <span class="w-8 h-8 rounded-full quick-icon-bg flex items-center justify-center">📊</span>
                 <span class="font-bold text-gray-700">Thống Kê</span>
             </a>
             <a href="@Url.Action("Index", "TinTuc", new { area = "Admin_65133141" })" class="quick-btn p-4 rounded-xl shadow-sm flex items-center justify-center gap-3 no-underline group">
                 <span class="w-8 h-8 rounded-full quick-icon-bg flex items-center justify-center">📰</span>
                 <span class="font-bold text-gray-700">Tin Tức</span>
             </a>
             <a href="@Url.Action("Index", "DanhGia", new { area = "Admin_65133141" })" class="quick-btn p-4 rounded-xl shadow-sm flex items-center justify-center gap-3 no-underline group">
                 <span class="w-8 h-8 rounded-full quick-icon-bg flex items-center justify-center">⭐</span>
                 <span class="font-bold text-gray-700">Đánh Giá</span>
             </a>
        </div>

    </div>
</div>
