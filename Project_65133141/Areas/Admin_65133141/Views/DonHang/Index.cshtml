    var suggestTimeout;
    var submitTimeout;
    var currentSuggestions = [];
    var activeIndex = -1;

    $('#searchSuggestions').removeAttr('style').addClass('google-suggest');

    function escapeHtml(text) {
        return String(text)
            .replace(/&/g, '&amp;')
            .replace(/</g, '&lt;')
            .replace(/>/g, '&gt;')
            .replace(/"/g, '&quot;')
            .replace(/'/g, '&#039;');
    }

    function getIconSvg() {
        return '<svg class="google-suggest-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">' +
            '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>' +
            '</svg>';
    }

    function renderSuggestions(query) {
        var suggestionsDiv = $('#searchSuggestions');
        activeIndex = -1;

        if (!currentSuggestions || currentSuggestions.length === 0) {
            suggestionsDiv.hide().empty();
            return;
        }

        var html = '';
        currentSuggestions.forEach(function(item, idx) {
            var text = item && item.text ? String(item.text) : '';
            var type = item && item.type ? String(item.type) : '';
            var safeText = escapeHtml(text);

            html += '<div class="google-suggest-item" data-index="' + idx + '">' +
                        '<div class="google-suggest-left">' +
                            getIconSvg() +
                            '<div class="google-suggest-text">' + safeText + '</div>' +
                        '</div>' +
                        (type ? ('<span class="google-suggest-badge">' + escapeHtml(type) + '</span>') : '') +
                    '</div>';
        });

        suggestionsDiv.html(html).show();
    }

    function applySuggestion(index) {
        if (index == null || index < 0 || index >= currentSuggestions.length) return;
        var text = currentSuggestions[index].text;
        $('#searchInput').val(text);
        $('#searchSuggestions').hide();
        $('#orderFilterForm').trigger('submit');
    }

    function scheduleAutoSubmit() {
        clearTimeout(submitTimeout);
        submitTimeout = setTimeout(function() {
            $('#orderFilterForm').trigger('submit');
        }, 450);
    }

    $('#searchInput').on('input', function() {
        var query = $(this).val();

        clearTimeout(suggestTimeout);
        if (!query || query.length < 2) {
            $('#searchSuggestions').hide().empty();
            currentSuggestions = [];
            activeIndex = -1;
            scheduleAutoSubmit();
            return;
        }

        suggestTimeout = setTimeout(function() {
            $.ajax({
                url: '@Url.Action("GetSearchSuggestions", "DonHang", new { area = "Admin_65133141" })',
                type: 'GET',
                data: { query: query },
                success: function(response) {
                    if (response && response.success && response.suggestions && response.suggestions.length > 0) {
                        currentSuggestions = response.suggestions;
                        renderSuggestions(query);
                    } else {
                        currentSuggestions = [];
                        $('#searchSuggestions').hide().empty();
                    }
                },
                error: function() {
                    currentSuggestions = [];
                    $('#searchSuggestions').hide().empty();
                }
            });
        }, 250);

        scheduleAutoSubmit();
    });

    $('#searchSuggestions').on('click', '.google-suggest-item', function() {
        var idx = parseInt($(this).attr('data-index'), 10);
        applySuggestion(idx);
    });

    // Date validation
    $(document).ready(function() {
        function validateDateLogic(input, errorId) {
            var val = $(input).val();
            if(!val) {
                // If empty, clear future date error (required check is handled separately on submit)
                $('#' + errorId).addClass('hidden');
                $(input).removeClass('border-red-500 focus:border-red-500 focus:ring-red-500');
                return true;
            }

            var selectedDate = new Date(val);
            // new Date("YYYY-MM-DD") parses as UTC, causing issues. 
            // We parse manually to get local time 00:00:00
            if(val) {
                var parts = val.split('-');
                selectedDate = new Date(parts[0], parts[1] - 1, parts[2]); 
            }
            
            var now = new Date();
            now.setHours(0,0,0,0);
            
            if (selectedDate > now) {
                $('#' + errorId).text('Ngày không được lớn hơn ngày hiện tại').removeClass('hidden');
                $(input).addClass('border-red-500 focus:border-red-500 focus:ring-red-500');
                return false;
            } else {
                $('#' + errorId).addClass('hidden');
                $(input).removeClass('border-red-500 focus:border-red-500 focus:ring-red-500');
                return true;
            }
        }

        $('#startDateInput').on('change', function() {
            validateDateLogic(this, 'startDateError');
            // If we have both, clear the "Required" error if it was shown
            if($(this).val() && $('#endDateInput').val()) {
                 $('#endDateError').addClass('hidden');
                 $('#endDateInput').removeClass('border-red-500 focus:border-red-500 focus:ring-red-500');
            }
        });

        $('#endDateInput').on('change', function() {
            validateDateLogic(this, 'endDateError');
            // If we have both, clear the "Required" error if it was shown
            if($(this).val() && $('#startDateInput').val()) {
                 $('#startDateError').addClass('hidden');
                 $('#startDateInput').removeClass('border-red-500 focus:border-red-500 focus:ring-red-500');
            }
        });
        
        // Prevent form submission if dates are invalid
        $('#orderFilterForm').on('submit', function(e) {
            var startVal = $('#startDateInput').val();
            var endVal = $('#endDateInput').val();
            var isValid = true;
            
            // 1. Check Pair Requirement
            if (startVal && !endVal) {
                $('#endDateError').text('Vui lòng nhập').removeClass('hidden');
                $('#endDateInput').addClass('border-red-500 focus:border-red-500 focus:ring-red-500');
                isValid = false;
            }
            if (!startVal && endVal) {
                $('#startDateError').text('Vui lòng nhập').removeClass('hidden');
                $('#startDateInput').addClass('border-red-500 focus:border-red-500 focus:ring-red-500');
                isValid = false;
            }
            
            // 2. Check Future Dates (only if present)
            if(startVal) {
                if(!validateDateLogic($('#startDateInput'), 'startDateError')) isValid = false;
            }
            if(endVal) {
                if(!validateDateLogic($('#endDateInput'), 'endDateError')) isValid = false;
            }
            
            if (!isValid) {
                e.preventDefault();
            }
        });
    });
</script>
