@model IEnumerable<Project_65133141.Models.DonHang>
@{
    ViewBag.Title = "Quản lý đơn hàng";
    Layout = "~/Areas/Admin_65133141/Views/Shared/_Layout.cshtml";
}

<div class="space-y-6">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-800">Quản lý đơn hàng</h1>
            <p class="text-sm text-gray-500 mt-1">Danh sách đơn hàng mới nhất.</p>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Mã đơn</th>
                        <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Bàn</th>
                        <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nhân viên</th>
                        <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Khách hàng</th>
                        <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ngày đặt</th>
                        <th class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Tổng tiền</th>
                        <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Trạng thái</th>
                        <th class="px-4 py-2 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Thao tác</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr class="hover:bg-gray-50">
                                <td class="px-4 py-2 text-sm font-medium text-gray-900">DH@item.DonHangID.ToString("D4")</td>
                                <td class="px-4 py-2 text-sm text-gray-700">@(item.BanAn?.TenBan ?? "N/A")</td>
                                <td class="px-4 py-2 text-sm text-gray-700">@(item.NhanVien?.HoTen ?? "N/A")</td>
                                <td class="px-4 py-2 text-sm text-gray-700">@(item.User?.HoTen ?? "Khách vãng lai")</td>
                                <td class="px-4 py-2 text-sm text-gray-700">@(item.NgayDat?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</td>
                                <td class="px-4 py-2 text-sm font-semibold text-red-600 text-right">@string.Format("{0:N0}", item.TongTien) ₫</td>
                                <td class="px-4 py-2 text-sm">
                                    @{
                                        var statusClass = item.TrangThai == "Đã thanh toán" ? "bg-green-100 text-green-800" :
                                                          item.TrangThai == "Đang chuẩn bị" ? "bg-yellow-100 text-yellow-800" :
                                                          item.TrangThai == "Đang phục vụ" ? "bg-blue-100 text-blue-800" :
                                                          "bg-gray-100 text-gray-800";
                                    }
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @statusClass">@item.TrangThai</span>
                                </td>
                                <td class="px-4 py-2 text-sm text-center">
                                    <a href="@Url.Action("Details", "DonHang", new { area = "Admin_65133141", id = item.DonHangID })" 
                                       class="text-red-600 hover:text-red-800 font-medium">Chi tiết</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="px-4 py-6 text-center text-sm text-gray-500">
                                Chưa có đơn hàng nào.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
