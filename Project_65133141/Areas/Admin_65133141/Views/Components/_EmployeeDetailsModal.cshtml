@* Employee Details Modal Component *@

<!-- Employee Details Modal -->
<div id="employeeDetailsModal" class="auth-modal-overlay" style="display: none;">
    <div class="auth-modal-container auth-modal-large">
        <button type="button" class="auth-close-btn" onclick="closeEmployeeDetailsModal()">&times;</button>
        
        <div class="auth-modal-header">
            <div class="auth-logo" id="employeeAvatar">
                <div class="w-full h-full rounded-full bg-gradient-to-br from-green-400 to-teal-500 flex items-center justify-center text-white font-bold text-2xl">
                    ?
                </div>
            </div>
            <h2 class="auth-modal-title">Chi tiết nhân viên</h2>
            <p class="auth-modal-subtitle">Thông tin chi tiết về nhân viên</p>
        </div>

        <div class="auth-modal-body">
            <div class="auth-form-row">
                <div class="auth-form-group">
                    <label class="auth-form-label">Mã nhân viên</label>
                    <div class="employee-detail-value" id="modalEmployeeCode">-</div>
                </div>
                <div class="auth-form-group">
                    <label class="auth-form-label">Họ tên</label>
                    <div class="employee-detail-value" id="modalFullName">-</div>
                </div>
            </div>

            <div class="auth-form-row">
                <div class="auth-form-group">
                    <label class="auth-form-label">Email</label>
                    <div class="employee-detail-value" id="modalEmail">-</div>
                </div>
                <div class="auth-form-group">
                    <label class="auth-form-label">Số điện thoại</label>
                    <div class="employee-detail-value" id="modalPhoneNumber">-</div>
                </div>
            </div>

            <div class="auth-form-row">
                <div class="auth-form-group">
                    <label class="auth-form-label">Ngày sinh</label>
                    <div class="employee-detail-value" id="modalDateOfBirth">-</div>
                </div>
                <div class="auth-form-group">
                    <label class="auth-form-label">Ngày vào làm</label>
                    <div class="employee-detail-value" id="modalStartDate">-</div>
                </div>
            </div>

            <div class="auth-form-group">
                <label class="auth-form-label">Địa chỉ</label>
                <div class="employee-detail-value" id="modalAddress">-</div>
            </div>

            <div class="auth-form-group">
                <label class="auth-form-label">Mật khẩu</label>
                <div class="flex items-center gap-3">
                    <span id="modalPasswordMask" class="employee-detail-value flex-1">••••••••••••••••</span>
                    <button type="button" id="modalTogglePasswordBtn" class="inline-flex items-center px-2 py-1 text-sm text-gray-600 hover:text-gray-900 transition-colors">
                        <svg id="modalEyeIcon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                        </svg>
                    </button>
                </div>
                <span id="modalPasswordFull" data-hash="" class="hidden"></span>
            </div>
        </div>
    </div>
</div>

<style>
    /* Auth Modal Styles for Employee Details */
    .auth-modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 9999;
        backdrop-filter: blur(4px);
    }

    .auth-modal-container {
        background: white;
        border-radius: 16px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        max-width: 500px;
        width: 90%;
        position: relative;
        animation: authSlideIn 0.5s ease-out;
        max-height: 90vh;
        overflow-y: auto;
        overflow-x: hidden;
        scrollbar-width: thin;
        scrollbar-color: rgba(128, 128, 128, 0.3) transparent;
    }

    /* Custom Scrollbar for Webkit browsers */
    .auth-modal-container::-webkit-scrollbar {
        width: 6px;
    }

    .auth-modal-container::-webkit-scrollbar-track {
        background: transparent;
        border-radius: 10px;
    }

    .auth-modal-container::-webkit-scrollbar-thumb {
        background: rgba(128, 128, 128, 0.3);
        border-radius: 10px;
        transition: background 0.3s ease;
    }

    .auth-modal-container::-webkit-scrollbar-thumb:hover {
        background: rgba(128, 128, 128, 0.5);
    }

    .auth-modal-large {
        max-width: 500px;
    }

    @@keyframes authSlideIn {
        from {
            transform: translateY(-50px);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    .auth-modal-header {
        text-align: center;
        padding: 30px 30px 20px;
        border-bottom: 1px solid #f0f0f0;
    }

    .auth-logo {
        width: 60px;
        height: 60px;
        margin: 0 auto 15px;
        border-radius: 50%;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    .auth-modal-title {
        font-size: 24px;
        font-weight: 600;
        color: #333;
        margin-bottom: 5px;
    }

    .auth-modal-subtitle {
        font-size: 14px;
        color: #888;
    }

    .auth-modal-body {
        padding: 30px;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        position: relative;
    }

    .auth-form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
        margin-bottom: 20px;
        width: 100%;
    }

    .auth-form-group {
        margin-bottom: 20px;
        width: 100%;
    }

    .auth-form-label {
        display: block;
        font-size: 13px;
        font-weight: 600;
        color: #555;
        margin-bottom: 8px;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    .auth-close-btn {
        position: absolute;
        top: 15px;
        right: 15px;
        background: none;
        border: none;
        font-size: 24px;
        color: #999;
        cursor: pointer;
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        transition: all 0.3s;
        z-index: 10;
    }

    .auth-close-btn:hover {
        background: rgba(220, 38, 38, 0.1);
        color: #dc2626;
        transform: scale(1.1);
    }

    /* Employee detail value styles */
    .employee-detail-value {
        color: #333;
        font-weight: 600;
        font-size: 15px;
        padding: 10px 0;
        min-height: 40px;
        display: flex;
        align-items: center;
        border-bottom: 1px solid #f0f0f0;
    }

    /* Loading state */
    #employeeDetailsModal .auth-modal-body.loading {
        opacity: 0.5;
        pointer-events: none;
    }

    #employeeDetailsModal .auth-modal-body.loading::after {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 40px;
        height: 40px;
        border: 4px solid #f3f3f3;
        border-top: 4px solid #10b981;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        0% { transform: translate(-50%, -50%) rotate(0deg); }
        100% { transform: translate(-50%, -50%) rotate(360deg); }
    }

    @@media (max-width: 600px) {
        .auth-form-row {
            grid-template-columns: 1fr;
        }
    }
</style>

<script>
    var modalPasswordShown = false;
    var modalPasswordHash = '';

    function openEmployeeDetailsModal(employeeId) {
        const modal = document.getElementById('employeeDetailsModal');
        const modalBody = modal.querySelector('.auth-modal-body');
        
        modal.style.display = 'flex';
        document.body.style.overflow = 'hidden';
        modalBody.classList.add('loading');

        // Reset password visibility
        modalPasswordShown = false;
        document.getElementById('modalPasswordMask').textContent = '••••••••••••••••';
        document.getElementById('modalEyeIcon').innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />';

        // Fetch employee details via AJAX
        fetch('/Admin_65133141/Employee/GetEmployeeDetails/' + employeeId)
            .then(function(response) {
                if (!response.ok) {
                    throw new Error('Không thể tải thông tin nhân viên');
                }
                return response.json();
            })
            .then(function(data) {
                if (data.success) {
                    populateEmployeeModal(data.employee);
                } else {
                    alert(data.message || 'Không thể tải thông tin nhân viên');
                    closeEmployeeDetailsModal();
                }
            })
            .catch(function(error) {
                console.error('Error:', error);
                alert('Đã xảy ra lỗi khi tải thông tin nhân viên');
                closeEmployeeDetailsModal();
            })
            .finally(function() {
                modalBody.classList.remove('loading');
            });
    }

    function populateEmployeeModal(employee) {
        // Employee code
        document.getElementById('modalEmployeeCode').textContent = employee.employeeCode || '-';
        
        // Full name
        document.getElementById('modalFullName').textContent = employee.fullName || '-';
        
        // Email
        document.getElementById('modalEmail').textContent = employee.email || '-';
        
        // Phone number
        document.getElementById('modalPhoneNumber').textContent = employee.phoneNumber || '-';
        
        // Date of birth
        document.getElementById('modalDateOfBirth').textContent = employee.dateOfBirth || '-';
        
        // Start date
        document.getElementById('modalStartDate').textContent = employee.startDate || '-';
        
        // Address
        document.getElementById('modalAddress').textContent = employee.address || '-';
        
        // Password hash
        modalPasswordHash = employee.passwordHash || '';
        document.getElementById('modalPasswordFull').setAttribute('data-hash', modalPasswordHash);
        
        // Avatar
        const avatarLetter = employee.fullName ? employee.fullName.substring(0, 1).toUpperCase() : '?';
        document.getElementById('employeeAvatar').innerHTML = 
            '<div class="w-full h-full rounded-full bg-gradient-to-br from-green-400 to-teal-500 flex items-center justify-center text-white font-bold text-2xl">' + 
            avatarLetter + 
            '</div>';
    }

    function closeEmployeeDetailsModal() {
        document.getElementById('employeeDetailsModal').style.display = 'none';
        document.body.style.overflow = 'auto';
    }

    // Toggle password visibility in modal
    document.addEventListener('DOMContentLoaded', function() {
        const toggleBtn = document.getElementById('modalTogglePasswordBtn');
        if (toggleBtn) {
            toggleBtn.addEventListener('click', function() {
                const maskSpan = document.getElementById('modalPasswordMask');
                const eyeIcon = document.getElementById('modalEyeIcon');
                
                modalPasswordShown = !modalPasswordShown;
                
                if (modalPasswordShown) {
                    const displayHash = modalPasswordHash.length > 36 ? modalPasswordHash.substring(0, 36) + '...' : modalPasswordHash;
                    maskSpan.textContent = displayHash || '(chưa có)';
                    eyeIcon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.542-7a9.96 9.96 0 012.563-4.304m3.106-2.038A9.956 9.956 0 0112 5c4.478 0 8.268 2.943 9.542 7a10.025 10.025 0 01-4.043 5.197M15 12a3 3 0 00-3-3m0 0a3 3 0 013 3m-3-3L4.5 4.5" />';
                } else {
                    maskSpan.textContent = '••••••••••••••••';
                    eyeIcon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />';
                }
            });
        }
    });

    // Close modal on ESC key
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            const modal = document.getElementById('employeeDetailsModal');
            if (modal && modal.style.display === 'flex') {
                closeEmployeeDetailsModal();
            }
        }
    });

    // Close modal when clicking outside
    document.addEventListener('click', function(e) {
        const modal = document.getElementById('employeeDetailsModal');
        if (e.target === modal) {
            closeEmployeeDetailsModal();
        }
    });
</script>
