<!-- Delete Product Modal Component -->
<div id="deleteProductModal" class="fixed inset-0 hidden items-center justify-center z-[9999] transition-opacity duration-300 ease-out opacity-0" 
     style="display: none; pointer-events: none; font-family: 'Noto Sans', 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif; background-color: rgba(0, 0, 0, 0.6); backdrop-filter: blur(4px);">
    <div class="bg-white rounded-3xl shadow-2xl max-w-md w-full mx-4 transform transition-all duration-300 ease-out scale-95 opacity-0" 
         id="deleteModalContent" 
         style="font-family: 'Noto Sans', 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif; will-change: transform, opacity;">
        
        <!-- Modal Header -->
        <div class="flex items-center justify-between p-6 border-b border-gray-100">
            <div class="flex items-center space-x-4">
                <!-- Icon với hiệu ứng warning -->
                <div class="w-14 h-14 rounded-full bg-gradient-to-br from-red-100 to-red-200 flex items-center justify-center flex-shrink-0 animate-pulse">
                    <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                </div>
                <div>
                    <h3 class="text-xl font-bold text-gray-900 leading-tight">Xóa món ăn</h3>
                    <p class="text-sm text-red-600 mt-0.5 font-medium">Hành động này không thể hoàn tác</p>
                </div>
            </div>
            <button type="button" onclick="closeDeleteProductModal()" 
                    class="text-gray-400 hover:text-gray-600 hover:bg-gray-100 active:bg-gray-200 rounded-full p-2 transition-all duration-200 ease-in-out flex-shrink-0 transform hover:scale-110 active:scale-95">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>

        <!-- Modal Body -->
        <div class="p-6">
            <!-- Thông tin món ăn sẽ bị xóa -->
            <div class="bg-red-50 border-l-4 border-red-600 rounded-lg p-4 mb-4">
                <div class="flex items-start">
                    <svg class="w-5 h-5 text-red-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                    </svg>
                    <div class="ml-3">
                        <p class="text-sm font-bold text-red-800">Bạn sắp xóa món ăn:</p>
                        <p id="deleteProductName" class="text-base font-black text-red-900 mt-1"></p>
                    </div>
                </div>
            </div>
            
            <p class="text-gray-700 text-base leading-relaxed font-normal">
                Món ăn này sẽ bị xóa vĩnh viễn khỏi hệ thống và không thể khôi phục. Tất cả dữ liệu liên quan sẽ bị mất.
            </p>
            
            <!-- Confirmation checkbox - Improved Clickability -->
            <div class="mt-4 bg-gray-50 rounded-lg p-4 border-2 border-gray-200 hover:border-red-400 transition-colors">
                <label for="deleteConfirmCheckbox" class="flex items-start cursor-pointer select-none group">
                    <input type="checkbox" id="deleteConfirmCheckbox" 
                           class="mt-0.5 w-5 h-5 text-red-600 border-gray-300 rounded focus:ring-red-500 focus:ring-2 cursor-pointer">
                    <span class="ml-3 text-sm text-gray-700 font-medium group-hover:text-gray-900">
                        Tôi hiểu rằng hành động này không thể hoàn tác
                    </span>
                </label>
            </div>
        </div>

        <!-- Modal Footer -->
        <div class="flex items-center justify-end space-x-3 p-6 border-t border-gray-100 bg-gray-50 rounded-b-3xl">
            <button type="button" onclick="closeDeleteProductModal()" 
                    class="px-6 py-2.5 bg-white hover:bg-gray-100 active:bg-gray-200 text-gray-700 rounded-xl font-semibold text-sm transition-all duration-200 ease-in-out border border-gray-300 shadow-sm hover:shadow-md active:shadow-sm transform hover:scale-105 active:scale-95">
                Hủy bỏ
            </button>
            <button type="button" id="confirmDeleteButton" 
                    onclick="confirmDeleteProduct()" 
                    disabled
                    class="px-6 py-2.5 rounded-xl font-semibold text-sm transition-all duration-200 ease-in-out text-white shadow-md hover:shadow-lg active:shadow-md transform hover:scale-105 active:scale-95 bg-red-600 hover:bg-red-700 active:bg-red-800 disabled:bg-gray-300 disabled:cursor-not-allowed disabled:transform-none disabled:shadow-none">
                <span class="flex items-center">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                    <span id="deleteButtonText">Xóa vĩnh viễn</span>
                </span>
            </button>
        </div>
    </div>
</div>

<script>
    // Prevent re-declaration if script is loaded multiple times
    if (typeof window.deleteProductModalInitialized === 'undefined') {
        window.deleteProductModalInitialized = true;
        
        // Store product ID to delete
        window.currentDeleteProductId = null;
        window.currentDeleteProductName = null;

        // Open Delete Product Modal
        window.openDeleteProductModal = function(productId, productName) {
            const modal = document.getElementById('deleteProductModal');
            const modalContent = document.getElementById('deleteModalContent');
            const nameElement = document.getElementById('deleteProductName');
            const checkbox = document.getElementById('deleteConfirmCheckbox');
            const confirmBtn = document.getElementById('confirmDeleteButton');
            
            if (!modal || !modalContent || !nameElement) {
                console.error('Delete modal elements not found');
                return;
            }

            // Store product info
            window.currentDeleteProductId = productId;
            window.currentDeleteProductName = productName;
            
            // Set product name
            nameElement.textContent = productName;
            
            // Reset checkbox and button state
            checkbox.checked = false;
            confirmBtn.disabled = true;
            
            // Show modal with smooth animation
            modal.style.pointerEvents = 'auto';
            modal.style.display = 'flex';
            requestAnimationFrame(() => {
                modal.classList.remove('hidden');
                requestAnimationFrame(() => {
                    modal.style.opacity = '1';
                    requestAnimationFrame(() => {
                        modalContent.classList.remove('scale-95', 'opacity-0');
                        modalContent.classList.add('scale-100', 'opacity-100');
                    });
                });
            });
        };

        // Close Delete Product Modal
        window.closeDeleteProductModal = function() {
            const modal = document.getElementById('deleteProductModal');
            const modalContent = document.getElementById('deleteModalContent');
            const checkbox = document.getElementById('deleteConfirmCheckbox');
            
            if (!modal || !modalContent) return;

            // Immediately stop blocking clicks
            modal.style.pointerEvents = 'none';
            
            // Animate out smoothly
            modalContent.classList.remove('scale-100', 'opacity-100');
            modalContent.classList.add('scale-95', 'opacity-0');
            
            // Fade out backdrop
            modal.style.opacity = '0';
            
            // Clean up after animation completes
            setTimeout(() => {
                modal.classList.add('hidden');
                modal.style.display = 'none';
                modal.style.opacity = '0';
                modal.style.pointerEvents = 'none';
                modalContent.classList.remove('scale-95', 'opacity-0');
                modalContent.classList.add('scale-95', 'opacity-0');
                
                // Reset state
                window.currentDeleteProductId = null;
                window.currentDeleteProductName = null;
                if (checkbox) checkbox.checked = false;
            }, 300);
        };

        // Confirm Delete Product
        window.confirmDeleteProduct = function() {
            const confirmBtn = document.getElementById('confirmDeleteButton');
            const buttonText = document.getElementById('deleteButtonText');
            const checkbox = document.getElementById('deleteConfirmCheckbox');
            
            if (!checkbox || !checkbox.checked) {
                showAlert('warning', 'Vui lòng xác nhận bạn hiểu hành động này không thể hoàn tác.');
                return;
            }
            
            if (!window.currentDeleteProductId) {
                showAlert('error', 'Không tìm thấy thông tin món ăn cần xóa.');
                closeDeleteProductModal();
                return;
            }
            
            // Show loading state
            if (confirmBtn && buttonText) {
                confirmBtn.disabled = true;
                const originalText = buttonText.textContent;
                buttonText.textContent = 'Đang xóa...';
                confirmBtn.classList.add('opacity-75', 'cursor-not-allowed');
            }
            
            // Get anti-forgery token
            const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
            const token = tokenInput ? tokenInput.value : '';
            
            // Perform delete request
            fetch(`/Admin_65133141/Product/Delete/${window.currentDeleteProductId}`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: `__RequestVerificationToken=${encodeURIComponent(token)}`
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    showAlert('success', data.message || 'Xóa món ăn thành công!');
                    
                    // Remove product card from DOM with animation
                    const card = document.getElementById(`product-card-${window.currentDeleteProductId}`);
                    if (card) {
                        card.style.transition = 'all 0.5s ease';
                        card.style.transform = 'scale(0.8)';
                        card.style.opacity = '0';
                        setTimeout(() => card.remove(), 500);
                    }
                    
                    // Close modal after brief delay
                    setTimeout(() => {
                        closeDeleteProductModal();
                    }, 500);
                } else {
                    showAlert('error', data.message || 'Không thể xóa món ăn.');
                    
                    // Reset button state
                    if (confirmBtn && buttonText) {
                        confirmBtn.disabled = false;
                        buttonText.textContent = 'Xóa vĩnh viễn';
                        confirmBtn.classList.remove('opacity-75', 'cursor-not-allowed');
                    }
                }
            })
            .catch(err => {
                console.error('Delete error:', err);
                showAlert('error', 'Lỗi kết nối server. Vui lòng thử lại.');
                
                // Reset button state
                if (confirmBtn && buttonText) {
                    confirmBtn.disabled = false;
                    buttonText.textContent = 'Xóa vĩnh viễn';
                    confirmBtn.classList.remove('opacity-75', 'cursor-not-allowed');
                }
            });
        };

        // Setup checkbox listener
        document.addEventListener('DOMContentLoaded', function() {
            const checkbox = document.getElementById('deleteConfirmCheckbox');
            const confirmBtn = document.getElementById('confirmDeleteButton');
            
            if (checkbox && confirmBtn) {
                checkbox.addEventListener('change', function() {
                    confirmBtn.disabled = !this.checked;
                });
            }
        });

        // Close on ESC key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeDeleteProductModal();
            }
        });

        // Close on backdrop click
        const modalElement = document.getElementById('deleteProductModal');
        if (modalElement) {
            modalElement.addEventListener('click', function(e) {
                if (e.target === this) {
                    closeDeleteProductModal();
                }
            });
        }
    }
</script>
