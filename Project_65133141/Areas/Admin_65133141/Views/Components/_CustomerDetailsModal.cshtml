@* Customer Details Modal Component *@

<!-- Customer Details Modal -->
<div id="customerDetailsModal" class="auth-modal-overlay" style="display: none;">
    <div class="auth-modal-container auth-modal-large">
        <button type="button" class="auth-close-btn" onclick="closeCustomerDetailsModal()">&times;</button>
        
        <div class="auth-modal-header">
            <div class="auth-logo" id="customerAvatar">
                <div class="w-full h-full rounded-full bg-gradient-to-br from-pink-400 to-purple-500 flex items-center justify-center text-white font-bold text-2xl">
                    ?
                </div>
            </div>
            <h2 class="auth-modal-title">Chi tiết khách hàng</h2>
            <p class="auth-modal-subtitle">Thông tin chi tiết về khách hàng</p>
        </div>

        <div class="auth-modal-body">
            <div class="auth-form-row">
                <div class="auth-form-group">
                    <label class="auth-form-label">Mã khách hàng</label>
                    <div class="customer-detail-value" id="modalCustomerCode">-</div>
                </div>
                <div class="auth-form-group">
                    <label class="auth-form-label">Họ tên</label>
                    <div class="customer-detail-value" id="modalFullName">-</div>
                </div>
            </div>

            <div class="auth-form-row">
                <div class="auth-form-group">
                    <label class="auth-form-label">Email</label>
                    <div class="customer-detail-value" id="modalEmail">-</div>
                </div>
                <div class="auth-form-group">
                    <label class="auth-form-label">Số điện thoại</label>
                    <div class="customer-detail-value" id="modalPhoneNumber">-</div>
                </div>
            </div>

            <div class="auth-form-group">
                <label class="auth-form-label">Địa chỉ</label>
                <div class="customer-detail-value" id="modalAddress">-</div>
            </div>



            <div class="auth-form-group">
                <label class="auth-form-label">Trạng thái</label>
                <div>
                    <span id="modalStatus" class="px-3 py-1 rounded-full text-sm font-semibold bg-green-100 text-green-800">Hoạt động</span>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Auth Modal Styles for Customer Details */
    .auth-modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 9999;
        backdrop-filter: blur(4px);
    }

    .auth-modal-container {
        background: white;
        border-radius: 16px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        max-width: 500px;
        width: 90%;
        position: relative;
        animation: authSlideIn 0.5s ease-out;
        max-height: 90vh;
        overflow-y: auto;
        overflow-x: hidden;
        scrollbar-width: thin;
        scrollbar-color: rgba(128, 128, 128, 0.3) transparent;
    }

    /* Custom Scrollbar for Webkit browsers */
    .auth-modal-container::-webkit-scrollbar {
        width: 6px;
    }

    .auth-modal-container::-webkit-scrollbar-track {
        background: transparent;
        border-radius: 10px;
    }

    .auth-modal-container::-webkit-scrollbar-thumb {
        background: rgba(128, 128, 128, 0.3);
        border-radius: 10px;
        transition: background 0.3s ease;
    }

    .auth-modal-container::-webkit-scrollbar-thumb:hover {
        background: rgba(128, 128, 128, 0.5);
    }

    .auth-modal-large {
        max-width: 500px;
    }

    @@keyframes authSlideIn {
        from {
            transform: translateY(-50px);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    .auth-modal-header {
        text-align: center;
        padding: 30px 30px 20px;
        border-bottom: 1px solid #f0f0f0;
    }

    .auth-logo {
        width: 60px;
        height: 60px;
        margin: 0 auto 15px;
        border-radius: 50%;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    .auth-modal-title {
        font-size: 24px;
        font-weight: 600;
        color: #333;
        margin-bottom: 5px;
    }

    .auth-modal-subtitle {
        font-size: 14px;
        color: #888;
    }

    .auth-modal-body {
        padding: 30px;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        position: relative;
    }

    .auth-form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
        margin-bottom: 20px;
        width: 100%;
    }

    .auth-form-group {
        margin-bottom: 20px;
        width: 100%;
    }

    .auth-form-label {
        display: block;
        font-size: 13px;
        font-weight: 600;
        color: #555;
        margin-bottom: 8px;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    .auth-close-btn {
        position: absolute;
        top: 15px;
        right: 15px;
        background: none;
        border: none;
        font-size: 24px;
        color: #999;
        cursor: pointer;
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        transition: all 0.3s;
        z-index: 10;
    }

    .auth-close-btn:hover {
        background: rgba(220, 38, 38, 0.1);
        color: #dc2626;
        transform: scale(1.1);
    }

    /* Reuse auth modal styles from _AuthModals.cshtml */
    .customer-detail-value {
        color: #333;
        font-weight: 600;
        font-size: 15px;
        padding: 10px 0;
        min-height: 40px;
        display: flex;
        align-items: center;
        border-bottom: 1px solid #f0f0f0;
    }

    /* Loading state */
    #customerDetailsModal .auth-modal-body.loading {
        opacity: 0.5;
        pointer-events: none;
    }

    #customerDetailsModal .auth-modal-body.loading::after {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 40px;
        height: 40px;
        border: 4px solid #f3f3f3;
        border-top: 4px solid #dc2626;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        0% { transform: translate(-50%, -50%) rotate(0deg); }
        100% { transform: translate(-50%, -50%) rotate(360deg); }
    }

    @@media (max-width: 600px) {
        .auth-form-row {
            grid-template-columns: 1fr;
        }
    }
</style>

<script>


    function openCustomerDetailsModal(customerId) {
        const modal = document.getElementById('customerDetailsModal');
        const modalBody = modal.querySelector('.auth-modal-body');
        
        modal.style.display = 'flex';
        document.body.style.overflow = 'hidden';
        modalBody.classList.add('loading');



        // Fetch customer details via AJAX
        fetch('/Admin_65133141/Customer/GetCustomerDetails/' + customerId)
            .then(function(response) {
                if (!response.ok) {
                    throw new Error('Không thể tải thông tin khách hàng');
                }
                return response.json();
            })
            .then(function(data) {
                if (data.success) {
                    populateCustomerModal(data.customer);
                } else {
                    alert(data.message || 'Không thể tải thông tin khách hàng');
                    closeCustomerDetailsModal();
                }
            })
            .catch(function(error) {
                console.error('Error:', error);
                alert('Đã xảy ra lỗi khi tải thông tin khách hàng');
                closeCustomerDetailsModal();
            })
            .finally(function() {
                modalBody.classList.remove('loading');
            });
    }

    function populateCustomerModal(customer) {
        // Customer code
        document.getElementById('modalCustomerCode').textContent = customer.customerCode || '-';
        
        // Full name
        document.getElementById('modalFullName').textContent = customer.fullName || '-';
        
        // Email
        document.getElementById('modalEmail').textContent = customer.email || '-';
        
        // Phone number
        document.getElementById('modalPhoneNumber').textContent = customer.phoneNumber || '-';
        
        // Address
        document.getElementById('modalAddress').textContent = customer.address || '-';
        

        
        // Status
        const statusBadge = document.getElementById('modalStatus');
        const status = customer.status || 'Hoạt động';
        statusBadge.textContent = status;
        statusBadge.className = 'px-3 py-1 rounded-full text-sm font-semibold ' + 
            (status === 'Hoạt động' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800');
        
        // Avatar
        const avatarLetter = customer.fullName ? customer.fullName.substring(0, 1).toUpperCase() : '?';
        document.getElementById('customerAvatar').innerHTML = 
            '<div class="w-full h-full rounded-full bg-gradient-to-br from-pink-400 to-purple-500 flex items-center justify-center text-white font-bold text-2xl">' + 
            avatarLetter + 
            '</div>';
    }

    function closeCustomerDetailsModal() {
        document.getElementById('customerDetailsModal').style.display = 'none';
        document.body.style.overflow = 'auto';
    }



    // Close modal on ESC key
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            const modal = document.getElementById('customerDetailsModal');
            if (modal && modal.style.display === 'flex') {
                closeCustomerDetailsModal();
            }
        }
    });

    // Close modal when clicking outside
    document.addEventListener('click', function(e) {
        const modal = document.getElementById('customerDetailsModal');
        if (e.target === modal) {
            closeCustomerDetailsModal();
        }
    });
</script>
