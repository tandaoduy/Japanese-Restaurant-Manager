@model Project_65133141.Models.TinTuc
@{
    ViewBag.Title = "Chi tiết tin tức";
    Layout = "~/Areas/Admin_65133141/Views/Shared/_Layout.cshtml";
}

<div class="p-6">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">Chi tiết tin tức</h2>

    @if (Model != null)
    {
        var imagePath = !string.IsNullOrWhiteSpace(Model.HinhAnh)
            ? Url.Content("~/Images/TinTuc/" + Model.HinhAnh)
            : Url.Content("~/Images/slide09.jpg");

        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 flex flex-col md:flex-row gap-6">
            <div class="md:w-1/3">
                <img src="@imagePath" alt="@Model.TieuDe" class="w-full h-56 object-cover rounded-lg border border-gray-200" onerror="this.src='@Url.Content("~/Images/slide09.jpg")'" />
            </div>
            <div class="md:w-2/3 space-y-3">
                <h3 class="text-xl font-semibold text-gray-900">@Model.TieuDe</h3>
                <p class="text-sm text-gray-500">@("Ngày đăng: " + (Model.NgayDang?.ToString("dd/MM/yyyy HH:mm") ?? "N/A"))</p>

                <div>
                    <span class="font-semibold text-gray-700">Mô tả ngắn:</span>
                    <p class="text-gray-700 mt-1">@(string.IsNullOrWhiteSpace(Model.MoTaNgan) ? "Chưa có mô tả" : Model.MoTaNgan)</p>
                </div>

                <div>
                    <span class="font-semibold text-gray-700">Nội dung:</span>
                    <div class="prose max-w-none mt-1 text-gray-800">
                        @Html.Raw((Model.NoiDung ?? string.Empty).Replace("\n", "<br />"))
                    </div>
                </div>

                <div class="flex gap-2 mt-2">
                    @if (Model.IsHienThi == true)
                    {
                        <span class="badge-active">Hiển thị</span>
                    }
                    else
                    {
                        <span class="badge-hidden">Ẩn</span>
                    }

                    @if (Model.IsNoiBat == true)
                    {
                        <span class="badge-featured">⭐ Nổi bật</span>
                    }
                </div>
            </div>
        </div>
    }

    <div class="mt-6 flex gap-3">
        @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn-secondary" })
        @if (Model != null)
        {
            @Html.ActionLink("Sửa tin này", "Edit", new { id = Model.TinTucID }, new { @class = "btn-success" })
        }
    </div>
</div>
