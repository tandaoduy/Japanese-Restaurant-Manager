@model Project_65133141.Models.DatBan

@{
    ViewBag.Title = "Sửa đặt bàn";
    Layout = "~/Areas/Admin_65133141/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto px-4 py-6">
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Sửa đặt bàn</h1>
    </div>

    @using (Html.BeginForm("Edit", "DatBan", new { area = "Admin_65133141" }, FormMethod.Post, new { @class = "bg-white rounded-lg shadow p-6" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.DatBanID)

        if (!ViewData.ModelState.IsValid)
        {
            <div class="mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg">
                @Html.ValidationSummary(true, "", new { @class = "text-red-700" })
            </div>
        }

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Họ tên khách hàng <span class="text-red-500">*</span></label>
                @Html.TextBoxFor(m => m.HoTenKhach, new { @class = "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500", required = "required" })
                @Html.ValidationMessageFor(m => m.HoTenKhach, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Số điện thoại <span class="text-red-500">*</span></label>
                @Html.TextBoxFor(m => m.SDTKhach, new { @class = "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500", required = "required" })
                @Html.ValidationMessageFor(m => m.SDTKhach, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Bàn</label>
                @Html.DropDownListFor(m => m.BanID, ViewBag.BanID as SelectList, "Chọn bàn", new { @class = "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500" })
                @Html.ValidationMessageFor(m => m.BanID, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Số người</label>
                @Html.TextBoxFor(m => m.SoNguoi, new { @class = "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500", type = "number", min = "1" })
                @Html.ValidationMessageFor(m => m.SoNguoi, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Thời gian đến <span class="text-red-500">*</span></label>
                @Html.TextBoxFor(m => m.ThoiGianDen, "{0:yyyy-MM-ddTHH:mm}", new { @class = "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500", type = "datetime-local", required = "required" })
                @Html.ValidationMessageFor(m => m.ThoiGianDen, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Trạng thái <span class="text-red-500">*</span></label>
                @Html.DropDownListFor(m => m.TrangThai, ViewBag.TrangThai as SelectList, new { @class = "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500", required = "required" })
                @Html.ValidationMessageFor(m => m.TrangThai, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <div class="md:col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-2">Ghi chú</label>
                @Html.TextAreaFor(m => m.GhiChu, new { @class = "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500", rows = "3" })
                @Html.ValidationMessageFor(m => m.GhiChu, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>
        </div>

        <div class="mt-6 flex items-center gap-3">
            <button type="submit" class="px-6 py-2 bg-orange-600 text-white rounded-lg hover:bg-orange-700 transition-colors">
                Lưu thay đổi
            </button>
            <a href="@Url.Action("Index", "DatBan", new { area = "Admin_65133141" })" 
               class="px-6 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors">
                Hủy
            </a>
        </div>
    }
</div>

