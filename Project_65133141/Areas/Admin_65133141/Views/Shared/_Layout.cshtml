    <script>
        // Session timeout management for Admin/Employee
        (function() {
            var sessionCheckInterval = null;
            var warningShown = false;
            var sessionExpired = false;
            var checkInterval = 60000; // Check every 60 seconds (for 60 minutes timeout)
            var warningTime = 1800; // Show warning 30 minutes before expiry (half of 60 minutes)

            function checkSession() {
                if (sessionExpired) return;

                fetch('@Url.Action("Check", "Session", new { area = "Admin_65133141" })', {
                    method: 'GET',
                    credentials: 'same-origin',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (!data.authenticated || data.isExpired) {
                        // Session expired
                        sessionExpired = true;
                        if (sessionCheckInterval) {
                            clearInterval(sessionCheckInterval);
                        }
                        // Show session expired modal instead of alert
                        showSessionExpiredModal();
                        return;
                    }

                    if (data.isExpiringSoon && !warningShown) {
                        // Show warning modal
                        warningShown = true;
                        // timeRemaining is in seconds
                        showSessionTimeoutModal(data.timeRemaining);
                    }
                })
                .catch(error => {
                    console.error('Session check error:', error);
                });
            }

            function showSessionTimeoutModal(timeRemaining) {
                var modal = document.getElementById('sessionTimeoutModal');
                var timeElement = document.getElementById('timeRemaining');
                var messageElement = document.getElementById('sessionTimeoutMessage');
                
                if (modal && timeElement) {
                    // timeRemaining is in seconds, convert to minutes
                    var minutes = Math.floor(timeRemaining / 60);
                    timeElement.textContent = minutes;
                    messageElement.innerHTML = 'Phiên làm việc của bạn sẽ hết hạn trong <span id="timeRemaining" class="font-bold text-red-600">' + minutes + '</span> phút.';
                    modal.classList.remove('hidden');
                    modal.classList.add('flex');
                    
                    // Update countdown every minute
                    var countdownInterval = setInterval(function() {
                        // Re-fetch timeRemaining from server
                        fetch('@Url.Action("Check", "Session", new { area = "Admin_65133141" })', {
                            method: 'GET',
                            credentials: 'same-origin',
                            headers: { 'X-Requested-With': 'XMLHttpRequest' }
                        })
                        .then(response => response.json())
                        .then(data => {
                            if (data.authenticated && data.timeRemaining) {
                                minutes = Math.floor(data.timeRemaining / 60);
                                if (minutes <= 0) {
                                    clearInterval(countdownInterval);
                                    timeElement.textContent = '0';
                                } else {
                                    timeElement.textContent = minutes;
                                    messageElement.innerHTML = 'Phiên làm việc của bạn sẽ hết hạn trong <span id="timeRemaining" class="font-bold text-red-600">' + minutes + '</span> phút.';
                                }
                            }
                        });
                    }, 60000); // Update every minute
                    
                    // Store interval to clear when modal is closed
                    modal.dataset.countdownInterval = countdownInterval;
                }
            }

            window.extendSession = function() {
                var token = document.querySelector('input[name="__RequestVerificationToken"]')?.value || '';
                var formData = new FormData();
                formData.append('__RequestVerificationToken', token);
                
                fetch('@Url.Action("Extend", "Session", new { area = "Admin_65133141" })', {
                    method: 'POST',
                    credentials: 'same-origin',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: formData
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        warningShown = false;
                        var modal = document.getElementById('sessionTimeoutModal');
                        if (modal) {
                            // Clear countdown interval if exists
                            if (modal.dataset.countdownInterval) {
                                clearInterval(parseInt(modal.dataset.countdownInterval));
                                delete modal.dataset.countdownInterval;
                            }
                            modal.classList.add('hidden');
                            modal.classList.remove('flex');
                        }
                        // Reset check interval
                        if (sessionCheckInterval) {
                            clearInterval(sessionCheckInterval);
                        }
                        startSessionCheck();
                    } else {
                        alert('Không thể mở rộng phiên làm việc: ' + (data.message || 'Lỗi không xác định'));
                    }
                })
                .catch(error => {
                    console.error('Extend session error:', error);
                    alert('Có lỗi xảy ra khi mở rộng phiên làm việc.');
                });
            };

            window.logoutSession = function() {
                if (confirm('Bạn có chắc chắn muốn đăng xuất?')) {
                    window.location.href = '@Url.Action("Logout", "Account", new { area = "" })';
                }
            };

            // Show session expired modal
            function showSessionExpiredModal() {
                var modal = document.getElementById('sessionExpiredModal');
                if (modal) {
                    modal.classList.remove('hidden');
                    modal.classList.add('flex');
                    // Prevent closing by clicking outside
                    modal.addEventListener('click', function(e) {
                        if (e.target === modal) {
                            e.preventDefault();
                            e.stopPropagation();
                        }
                    });
                }
            }

            // Redirect to login
            window.redirectToLogin = function() {
                window.location.href = '@Url.Action("Logout", "Account", new { area = "" })';
            };

            function startSessionCheck() {
                // Check immediately
                checkSession();
                // Then check every minute
                sessionCheckInterval = setInterval(checkSession, checkInterval);
            }

            // Start checking when page loads
            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', startSessionCheck);
            } else {
                startSessionCheck();
            }

            // Also check on user activity
            var activityEvents = ['mousedown', 'mousemove', 'keypress', 'scroll', 'touchstart'];
            activityEvents.forEach(function(event) {
                document.addEventListener(event, function() {
                    if (!warningShown && !sessionExpired) {
                        checkSession();
                    }
                }, { passive: true });
            });
        })();
    </script>
    
