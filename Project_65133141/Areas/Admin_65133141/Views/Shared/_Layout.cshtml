    <style>
        /* Circular Light Spot Animation for Header */
        /* Sleek Shimmer Animation for Header */
        @@keyframes shimmer-flow {
            0% {
                transform: translateX(-100%) skewX(-15deg);
            }
            100% {
                transform: translateX(200%) skewX(-15deg);
            }
        }

        .shimmer-effect {
            position: relative;
            overflow: hidden;
        }

        .shimmer-effect::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 50%;
            height: 100%;
            background: linear-gradient(
                90deg,
                transparent 0%,
                rgba(255, 255, 255, 0.1) 30%,
                rgba(255, 255, 255, 0.25) 50%,
                rgba(255, 255, 255, 0.1) 70%,
                transparent 100%
            );
            transform: translateX(-100%) skewX(-15deg);
            animation: shimmer-flow 3.5s infinite cubic-bezier(0.4, 0, 0.2, 1);
            pointer-events: none;
            z-index: 10;
        }

        /* Smooth transitions for interactive elements */
        a, button {
            transition: all 0.3s ease;
        }

        /* Table row hover effect */
        tbody tr {
            transition: all 0.2s ease;
        }

        tbody tr:hover {
            background-color: #f3f4f6; /* nhẹ hơn, không phóng to hàng */
        }

        /* Breadcrumb Styles */
        .breadcrumb {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 1rem 0;
            font-size: 0.875rem;
        }

        .breadcrumb-item {
            display: flex;
            align-items: center;
            color: #6b7280;
            transition: color 0.3s;
        }

        .breadcrumb-item:hover {
            color: #dc2626;
        }

        .breadcrumb-item.active {
            color: #dc2626;
            font-weight: 600;
        }

        .breadcrumb-separator {
            color: #d1d5db;
            margin: 0 0.5rem;
        }

        /* Sidebar Menu Styles - Matching Image Design */
        .sidebar-menu {
            position: fixed;
            left: 0;
            top: 80px;
            width: 250px;
            height: calc(100vh - 80px);
            background: linear-gradient(180deg, #1e293b 0%, #0f172a 100%);
            padding: 0;
            z-index: 40;
            overflow-y: auto;
            overflow-x: hidden;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
        }

        .sidebar-menu-item {
            position: relative;
            display: flex;
            align-items: center;
            padding: 1rem 1.5rem;
            color: #94a3b8;
            text-decoration: none;
            font-size: 0.875rem;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            transition: all 0.3s ease;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        }

        .sidebar-menu-item svg {
            width: 20px;
            height: 20px;
            margin-right: 12px;
            flex-shrink: 0;
        }

        .sidebar-menu-item::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            width: 4px;
            background: linear-gradient(180deg, #ef4444 0%, #dc2626 100%);
            transform: scaleY(0);
            transition: transform 0.3s ease;
        }

        /* Hover: Light blue-grey text */
        .sidebar-menu-item:hover {
            color: #cbd5e1 !important;
            background: rgba(255, 255, 255, 0.05);
        }

        .sidebar-menu-item:hover::before {
            transform: scaleY(1);
        }

        /* Active: Red text + Red left border */
        .sidebar-menu-item.active {
            color: #ef4444 !important;
            background: rgba(239, 68, 68, 0.1) !important;
        }

        .sidebar-menu-item.active::before {
            transform: scaleY(1);
        }

        /* Separator line after active item */
        .sidebar-menu-item.active::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 1px;
            background: linear-gradient(90deg, transparent, rgba(239, 68, 68, 0.3), transparent);
        }

        /* Adjust main content for sidebar */
        .main-content-with-sidebar {
            margin-left: 250px;
        }

        /* Hamburger Menu Button */
        .hamburger-btn {
            display: none;
            flex-direction: column;
            gap: 5px;
            background: transparent;
            border: none;
            cursor: pointer;
            padding: 8px;
            z-index: 60;
        }

        .hamburger-btn span {
            display: block;
            width: 25px;
            height: 3px;
            background: white;
            border-radius: 2px;
            transition: all 0.3s ease;
        }

        .hamburger-btn:hover span {
            background: #fecaca;
        }

        /* Mobile Overlay */
        .mobile-menu-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            z-index: 45;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .mobile-menu-overlay.active {
            opacity: 1;
        }

        /* Responsive Styles for Mobile and Tablet */
        @@media (max-width: 1023px) {
            /* Show hamburger button */
            .hamburger-btn {
                display: flex;
            }

            /* Sidebar hidden by default on mobile */
            .sidebar-menu {
                transform: translateX(-100%);
                transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
                z-index: 50;
            }

            /* Show sidebar when active */
            .sidebar-menu.active {
                transform: translateX(0);
            }

            /* Show overlay on mobile when needed */
            .mobile-menu-overlay {
                display: block;
            }

            /* Remove left margin from main content */
            .main-content-with-sidebar {
                margin-left: 0;
            }

            /* Adjust header padding for mobile */
            header .container {
                padding-left: 1rem;
                padding-right: 1rem;
            }

            /* Smaller logo on mobile */
            header .w-14 {
                width: 2.5rem;
                height: 2.5rem;
            }

            /* Smaller header height */
            header .h-20 {
                height: 4rem;
            }

            .pt-20 {
                padding-top: 4rem;
            }

            /* Adjust sidebar top position */
            .sidebar-menu {
                top: 4rem;
                height: calc(100vh - 4rem);
            }
        }

        /* Font family - Inter */
        html, body {
            font-family: 'Inter', sans-serif !important;
            font-feature-settings: "liga" 1, "kern" 1;
            text-rendering: optimizeLegibility;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        h1, h2, h3, .font-serif {
            font-family: 'Inter', sans-serif !important;
        }

        /* Force Inter font for all elements */
        *, *::before, *::after {
            font-family: 'Inter', sans-serif !important;
        }

        /* Ensure Vietnamese characters render correctly */
        input, textarea, select, button {
            font-family: 'Inter', sans-serif !important;
        }

        /* Modal text */
        #confirmModal, #confirmModal * {
            font-family: 'Inter', sans-serif !important;
        }

        /* All text elements */
        p, span, div, h4, h5, h6, a, label, td, th, li {
            font-family: 'Inter', sans-serif !important;
        }
    /* GLOBAL AUTH MODAL STYLES */
    .auth-modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 9999;
        backdrop-filter: blur(4px);
    }

    .auth-modal-container {
        background: white;
        border-radius: 16px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        max-width: 500px;
        width: 90%;
        position: relative;
        animation: authSlideIn 0.5s ease-out;
        max-height: 90vh;
        overflow-y: auto;
        overflow-x: hidden;
        scrollbar-width: thin;
        scrollbar-color: rgba(128, 128, 128, 0.3) transparent;
    }

    /* Custom Scrollbar for Webkit browsers */
    .auth-modal-container::-webkit-scrollbar {
        width: 6px;
    }

    .auth-modal-container::-webkit-scrollbar-track {
        background: transparent;
        border-radius: 10px;
    }

    .auth-modal-container::-webkit-scrollbar-thumb {
        background: rgba(128, 128, 128, 0.3);
        border-radius: 10px;
        transition: background 0.3s ease;
    }

    .auth-modal-container::-webkit-scrollbar-thumb:hover {
        background: rgba(128, 128, 128, 0.5);
    }

    .auth-modal-large {
        max-width: 700px;
    }

    @@keyframes authSlideIn {
        from {
            transform: translateY(-50px);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    .auth-modal-header {
        text-align: center;
        padding: 30px 30px 20px;
        border-bottom: 1px solid #f0f0f0;
    }
    
    .auth-logo {
        width: 60px;
        height: 60px;
        margin: 0 auto 15px;
        border-radius: 50%;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        background: #f8fafc;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #ef4444;
    }

    .auth-modal-title {
        font-size: 24px;
        font-weight: 600;
        color: #333;
        margin-bottom: 5px;
    }

    .auth-modal-subtitle {
        font-size: 14px;
        color: #888;
    }

    .auth-modal-body {
        padding: 30px;
        position: relative;
    }

    .auth-form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
        margin-bottom: 20px;
        width: 100%;
    }

    .auth-form-group {
        margin-bottom: 20px;
        width: 100%;
    }

    .auth-form-label {
        display: block;
        font-size: 13px;
        font-weight: 600;
        color: #555;
        margin-bottom: 8px;
    }

    .auth-required {
        color: #dc2626;
        margin-left: 3px;
    }

    .auth-input-wrapper {
        position: relative;
    }

    .auth-form-control {
        width: 100%;
        padding: 12px 15px;
        border: 1px solid #e5e7eb;
        border-radius: 8px;
        font-size: 14px;
        transition: all 0.3s;
        background: #f9fafb;
    }

    .auth-form-control:focus {
        background: white;
        border-color: #ef4444;
        box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.1);
        outline: none;
    }

    .auth-btn-group {
        display: flex;
        gap: 15px;
        margin-top: 30px;
    }

    .auth-btn {
        flex: 1;
        padding: 12px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.3s;
        text-align: center;
        border: none;
    }

    .auth-btn-cancel {
        background: #f3f4f6;
        color: #4b5563;
    }

    .auth-btn-cancel:hover {
        background: #e5e7eb;
    }

    .auth-btn-submit {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        color: white;
        box-shadow: 0 4px 10px rgba(220, 38, 38, 0.3);
    }

    .auth-btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 15px rgba(220, 38, 38, 0.4);
    }

    .auth-close-btn {
        position: absolute;
        top: 15px;
        right: 15px;
        background: none;
        border: none;
        font-size: 24px;
        color: #999;
        cursor: pointer;
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        transition: all 0.3s;
        z-index: 10;
    }

    .auth-close-btn:hover {
        background: rgba(220, 38, 38, 0.1);
        color: #dc2626;
        transform: scale(1.1);
    }
    
    .auth-error-message {
        display: none;
        color: #dc2626;
        font-size: 12px;
        margin-top: 5px;
    }
    
    .employee-detail-value {
        color: #333;
        font-weight: 600;
        font-size: 15px;
        padding: 10px 0;
        min-height: 40px;
        display: flex;
        align-items: center;
        border-bottom: 1px solid #f0f0f0;
    }

    /* Loading state */
    .auth-modal-body.loading {
        opacity: 0.5;
        pointer-events: none;
    }

    .auth-modal-body.loading::after {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 40px;
        height: 40px;
        border: 4px solid #f3f3f3;
        border-top: 4px solid #10b981;
        border-radius: 50%;
        animation: authSpin 1s linear infinite;
    }

    @@keyframes authSpin {
        0% { transform: translate(-50%, -50%) rotate(0deg); }
        100% { transform: translate(-50%, -50%) rotate(360deg); }
    }

    @@media (max-width: 600px) {
        .auth-form-row {
            grid-template-columns: 1fr;
        }
    }
    </style>

