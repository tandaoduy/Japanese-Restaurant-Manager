                             <div class="px-4 py-3 border-b border-gray-100 bg-gray-50/50">
                                <p class="text-sm text-gray-500">Đang đăng nhập với quyền</p>
                                <p class="text-base font-bold text-red-600">Quản Trị Viên</p>
                            </div>
                            
                            <div class="py-1">
                                <a href="@Url.Action("Index", "Account", new { area = "Admin_65133141" })" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-red-50 hover:text-red-700 transition">
                                    <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
                                    Thông tin tài khoản
                                </a>

                            </div>
                            
                            <div class="border-t border-gray-100 mt-1 pt-1">
                                <a href="@Url.Action("Logout", "Account", new { area = "" })" class="flex items-center px-4 py-2 text-sm text-red-600 hover:bg-red-50 transition font-medium">
                                    <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path></svg>
                                    Đăng xuất
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <script>
                    document.addEventListener('DOMContentLoaded', function() {
                        const profileBtn = document.getElementById('admin-profile-btn');
                        const dropdown = document.getElementById('admin-profile-dropdown');
                        
                        // Toggle dropdown
                        profileBtn.addEventListener('click', function(e) {
                            e.stopPropagation();
                            dropdown.classList.toggle('hidden');
                        });
                        
                        // Close when clicking outside
                        document.addEventListener('click', function(e) {
                            if (!dropdown.contains(e.target) && !profileBtn.contains(e.target)) {
                                dropdown.classList.add('hidden');
                            }
                        });
                    });
                </script>
