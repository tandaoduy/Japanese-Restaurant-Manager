@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@2"></script>
    <script>
        document.getElementById('filterForm').addEventListener('submit', function(e) {
            var fromDates = document.getElementsByName('fromDate');
            var toDates = document.getElementsByName('toDate');
            
            if (fromDates.length > 0 && toDates.length > 0) {
                var fromValue = fromDates[0].value;
                var toValue = toDates[0].value;
                
                if (fromValue && toValue) {
                    if (new Date(fromValue) > new Date(toValue)) {
                        e.preventDefault();
                        // Show error below input
                        var errorSpan = document.getElementById('dateError');
                        if (errorSpan) {
                            errorSpan.classList.remove('hidden');
                        }
                    } else {
                        // Hide error if valid
                        var errorSpan = document.getElementById('dateError');
                        if (errorSpan) {
                            errorSpan.classList.add('hidden');
                        }
                    }
                }
            }
        });

        (function () {
            // Revenue Chart Data
            var revenueLabels = @Html.Raw("[" + string.Join(",", (Model.RevenuePoints ?? new List<Project_65133141.Models.RevenuePoint>()).Select(r => "\"" + (r.Label ?? "").Replace("\"", "\\\"") + "\"")) + "]");
            var revenueData = @Html.Raw("[" + string.Join(",", (Model.RevenuePoints ?? new List<Project_65133141.Models.RevenuePoint>()).Select(r => r.Total.ToString(System.Globalization.CultureInfo.InvariantCulture))) + "]");

            // Dish Chart Data
            var dishLabels = @Html.Raw("[" + string.Join(",", (Model.TopDishes ?? new List<Project_65133141.Models.TopDishReport>()).Select(d => "\"" + (d.TenMon ?? "").Replace("\"", "\\\"") + "\"")) + "]");
            var dishQuantityData = @Html.Raw("[" + string.Join(",", (Model.TopDishes ?? new List<Project_65133141.Models.TopDishReport>()).Select(d => d.SoLuong.ToString(System.Globalization.CultureInfo.InvariantCulture))) + "]");

            // Employee Chart Data
            var employeeLabels = @Html.Raw("[" + string.Join(",", (Model.EmployeeStats ?? new List<Project_65133141.Models.EmployeePerformanceReport>()).Select(e => "\"" + ((e.TenNhanVien ?? "Kh√¥ng r√µ").Replace("\"", "\\\"")) + "\"")) + "]");
            var employeeInvoiceData = @Html.Raw("[" + string.Join(",", (Model.EmployeeStats ?? new List<Project_65133141.Models.EmployeePerformanceReport>()).Select(e => e.SoHoaDon.ToString(System.Globalization.CultureInfo.InvariantCulture))) + "]");
            var employeeRevenueData = @Html.Raw("[" + string.Join(",", (Model.EmployeeStats ?? new List<Project_65133141.Models.EmployeePerformanceReport>()).Select(e => e.TongDoanhThu.ToString(System.Globalization.CultureInfo.InvariantCulture))) + "]");

            // Color palette for bar charts
            var revenueColors = revenueData.map((_, i) => {
                var hue = 0; // Red hue
                var lightness = 45 + (i % 3) * 10;
                return 'hsl(' + hue + ', 75%, ' + lightness + '%)';
            });

            var dishColors = [
                'rgba(239, 68, 68, 0.85)',   // Red
                'rgba(249, 115, 22, 0.85)',  // Orange
                'rgba(234, 179, 8, 0.85)',   // Yellow
                'rgba(34, 197, 94, 0.85)',   // Green
                'rgba(59, 130, 246, 0.85)',  // Blue
                'rgba(139, 92, 246, 0.85)',  // Purple
                'rgba(236, 72, 153, 0.85)',  // Pink
                'rgba(20, 184, 166, 0.85)',  // Teal
                'rgba(99, 102, 241, 0.85)',  // Indigo
                'rgba(168, 85, 247, 0.85)'   // Violet
            ];

            // 1. Revenue Bar Chart
            var ctxRevenue = document.getElementById('revenueChart');
            if (ctxRevenue && revenueLabels.length > 0) {
                new Chart(ctxRevenue, {
                    type: 'bar',
                    data: {
                        labels: revenueLabels,
                        datasets: [{
                            label: 'Doanh thu (‚Ç´)',
                            data: revenueData,
                            backgroundColor: revenueColors,
                            borderColor: 'rgba(185, 28, 28, 1)',
                            borderWidth: 1,
                            borderRadius: 6,
                            borderSkipped: false,
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { display: false },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        return context.parsed.y.toLocaleString('vi-VN') + ' ‚Ç´';
                                    }
                                }
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    callback: function(value) {
                                        if (value >= 1000000) return (value / 1000000).toFixed(1) + 'M';
                                        if (value >= 1000) return (value / 1000).toFixed(0) + 'K';
                                        return value;
                                    }
                                },
                                grid: { color: 'rgba(0,0,0,0.05)' }
                            },
                            x: {
                                grid: { display: false }
                            }
                        }
                    }
                });
            }

            // 2. Top Dishes Pie Chart
            var ctxDish = document.getElementById('dishChart');
            if (ctxDish && dishLabels.length > 0) {
                new Chart(ctxDish, {
                    type: 'pie',
                    plugins: [ChartDataLabels],
                    data: {
                        labels: dishLabels,
                        datasets: [{
                            data: dishQuantityData,
                            backgroundColor: dishColors.slice(0, dishLabels.length),
                            borderColor: '#ffffff',
                            borderWidth: 2,
                            hoverOffset: 10
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                display: true,
                                position: 'right',
                                labels: {
                                    padding: 15,
                                    usePointStyle: true,
                                    pointStyle: 'circle',
                                    font: { size: 11 }
                                }
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        var total = context.dataset.data.reduce((a, b) => a + b, 0);
                                        var percentage = ((context.parsed / total) * 100).toFixed(1);
                                        return context.label + ': ' + context.parsed + ' m√≥n (' + percentage + '%)';
                                    }
                                }
                            },
                            datalabels: {
                                color: '#ffffff',
                                font: {
                                    weight: 'bold',
                                    size: 13
                                },
                                formatter: function(value, context) {
                                    var total = context.dataset.data.reduce((a, b) => a + b, 0);
                                    var percentage = ((value / total) * 100).toFixed(1);
                                    return percentage + '%';
                                },
                                anchor: 'center',
                                align: 'center',
                                display: function(context) {
                                    var total = context.dataset.data.reduce((a, b) => a + b, 0);
                                    var percentage = (context.dataset.data[context.dataIndex] / total) * 100;
                                    return percentage > 5; // Ch·ªâ hi·ªÉn th·ªã n·∫øu > 5%
                                }
                            }
                        }
                    }
                });
            }

            // 3. Employee Performance Bar Chart
            var ctxEmployee = document.getElementById('employeeChart');
            if (ctxEmployee && employeeLabels.length > 0) {
                new Chart(ctxEmployee, {
                    type: 'bar',
                    data: {
                        labels: employeeLabels,
                        datasets: [
                            {
                                label: 'S·ªë h√≥a ƒë∆°n',
                                data: employeeInvoiceData,
                                backgroundColor: 'rgba(59, 130, 246, 0.8)',
                                borderColor: 'rgba(59, 130, 246, 1)',
                                borderWidth: 1,
                                borderRadius: 4,
                                yAxisID: 'y1',
                            },
                            {
                                label: 'Doanh thu (‚Ç´)',
                                data: employeeRevenueData,
                                backgroundColor: 'rgba(239, 68, 68, 0.8)',
                                borderColor: 'rgba(239, 68, 68, 1)',
                                borderWidth: 1,
                                borderRadius: 4,
                                yAxisID: 'y2',
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                display: true,
                                position: 'top',
                                labels: {
                                    usePointStyle: true,
                                    padding: 20
                                }
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        if (context.dataset.yAxisID === 'y2') {
                                            return context.dataset.label + ': ' + context.parsed.y.toLocaleString('vi-VN') + ' ‚Ç´';
                                        }
                                        return context.dataset.label + ': ' + context.parsed.y;
                                    }
                                }
                            }
                        },
                        scales: {
                            y1: {
                                type: 'linear',
                                position: 'left',
                                beginAtZero: true,
                                title: {
                                    display: true,
                                    text: 'S·ªë h√≥a ƒë∆°n',
                                    color: 'rgba(59, 130, 246, 1)'
                                },
                                ticks: { color: 'rgba(59, 130, 246, 1)' },
                                grid: { color: 'rgba(0,0,0,0.05)' }
                            },
                            y2: {
                                type: 'linear',
                                position: 'right',
                                beginAtZero: true,
                                title: {
                                    display: true,
                                    text: 'Doanh thu',
                                    color: 'rgba(239, 68, 68, 1)'
                                },
                                ticks: {
                                    color: 'rgba(239, 68, 68, 1)',
                                    callback: function(value) {
                                        if (value >= 1000000) return (value / 1000000).toFixed(1) + 'M';
                                        if (value >= 1000) return (value / 1000).toFixed(0) + 'K';
                                        return value;
                                    }
                                },
                                grid: { display: false }
                            },
                            x: {
                                grid: { display: false }
                            }
                        }
                    }
                });
            }
        })();
    </script>
}
