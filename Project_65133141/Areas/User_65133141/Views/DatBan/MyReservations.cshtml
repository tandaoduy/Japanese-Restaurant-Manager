@model IEnumerable<Project_65133141.Models.DatBan>

@{
    ViewBag.Title = "Lịch sử đặt bàn của tôi";
    Layout = "~/Areas/User_65133141/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen py-12 relative overflow-hidden bg-gray-50">
    <!-- Background Elements - Exact Match to Navbar -->
    <div class="absolute top-0 left-0 w-full h-80 z-0" style="background: linear-gradient(135deg, #8B0000 0%, #A52A2A 100%); border-bottom: 3px solid #D4AF37;"></div>
    <div class="absolute top-0 left-0 w-full h-full z-0 opacity-10 pointer-events-none" style="background-image: url('data:image/svg+xml,%3Csvg width=\'60\' height=\'60\' viewBox=\'0 0 60 60\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cg fill=\'none\' fill-rule=\'evenodd\'%3E%3Cg fill=\'%23000000\' fill-opacity=\'1\'%3E%3Cpath d=\'M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>

    <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-5xl mx-auto">
            <div class="flex items-center justify-between mb-8">
                <div>
                    <h1 class="text-3xl md:text-4xl font-display font-bold text-white mb-2">Lịch Sử Đặt Bàn</h1>
                    <p class="text-red-100 opacity-90">Danh sách các đặt bàn của bạn tại Sakura Kazoku</p>
                </div>
                <a href="@Url.Action("Create", "DatBan", new { area = "User_65133141" })" class="hidden md:flex items-center gap-2 bg-yellow-500 hover:bg-yellow-400 text-red-900 font-bold px-6 py-3 rounded-xl shadow-lg transition-all transform hover:scale-105">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path></svg>
                    <span>Đặt bàn mới</span>
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="mb-6 p-4 bg-green-100 border-l-4 border-green-500 text-green-700 rounded-lg shadow-md flex items-center animate-fade-in-down">
                    <svg class="h-6 w-6 mr-3 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    @TempData["SuccessMessage"]
                </div>
            }

            @if (Model != null && Model.Any())
            {
                <div class="grid gap-6">
                    @foreach (var reservation in Model)
                    {
                        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden hover:shadow-xl transition-all duration-300">
                            <div class="flex flex-col md:flex-row md:items-stretch">
                                <!-- Status Strip -->
                                @{
                                    var statusColor = "bg-gray-500";
                                    var statusLightColor = "bg-gray-50 text-gray-600";
                                    
                                    if (reservation.TrangThai == "Đã xác nhận") 
                                    { 
                                        statusColor = "bg-green-500"; 
                                        statusLightColor = "bg-green-50 text-green-700 border-green-100";
                                    }
                                    else if (reservation.TrangThai == "Đang phục vụ") 
                                    { 
                                        statusColor = "bg-blue-500"; 
                                        statusLightColor = "bg-blue-50 text-blue-700 border-blue-100";
                                    }
                                    else if (reservation.TrangThai == "Hoàn thành") 
                                    { 
                                        statusColor = "bg-purple-500"; 
                                        statusLightColor = "bg-purple-50 text-purple-700 border-purple-100";
                                    }
                                    else if (reservation.TrangThai == "Đã hủy") 
                                    { 
                                        statusColor = "bg-red-500"; 
                                        statusLightColor = "bg-red-50 text-red-700 border-red-100";
                                    }
                                }
                                <div class="hidden md:block w-2 @statusColor"></div>
                                
                                <div class="p-6 flex-1">
                                    <div class="flex flex-col md:flex-row md:justify-between md:items-start gap-4 mb-4">
                                        <div>
                                            <div class="flex items-center gap-3 mb-1">
                                                <span class="text-sm font-bold text-gray-400 uppercase tracking-wider">Mã đặt bàn</span>
                                                <span class="font-mono font-bold text-lg text-gray-800">#@reservation.DatBanID</span>
                                            </div>
                                            <h3 class="text-xl font-bold text-gray-900 group-hover:text-red-700 transition-colors">
                                                @(reservation.ThoiGianDen.ToString("dd/MM/yyyy")) 
                                                <span class="font-normal text-gray-500 mx-2">|</span> 
                                                @(reservation.ThoiGianDen.ToString("HH:mm"))
                                            </h3>
                                        </div>
                                        
                                        <div class="flex items-center gap-3">
                                            <span class="inline-flex items-center px-4 py-1.5 rounded-full text-xs font-bold uppercase border @statusLightColor shadow-sm">
                                                <span class="w-2 h-2 rounded-full @statusColor mr-2"></span>
                                                @(reservation.TrangThai ?? "Chờ xác nhận")
                                            </span>
                                        </div>
                                    </div>
                                    
                                    <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 py-4 border-t border-dashed border-gray-200">
                                        <div>
                                            <span class="block text-xs text-gray-500 uppercase font-semibold mb-1">Số lượng khách</span>
                                            <div class="flex items-center text-gray-800 font-medium">
                                                <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>
                                                <span>@(reservation.SoNguoi?.ToString() ?? "N/A") người</span>
                                            </div>
                                        </div>
                                        
                                        <div>
                                            <span class="block text-xs text-gray-500 uppercase font-semibold mb-1">Bàn được chọn</span>
                                            <div class="flex items-center text-gray-800 font-medium">
                                                <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path></svg>
                                                <span>@(reservation.BanAn != null ? reservation.BanAn.TenBan : "Chưa xếp bàn")</span>
                                            </div>
                                        </div>
                                        
                                        <div>
                                            <span class="block text-xs text-gray-500 uppercase font-semibold mb-1">Ngày tạo</span>
                                            <div class="flex items-center text-gray-800 font-medium">
                                                <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                                                <span>@(reservation.NgayTao?.ToString("dd/MM/yyyy") ?? "N/A")</span>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    @if (!string.IsNullOrEmpty(reservation.GhiChu))
                                    {
                                        <div class="mt-4 pt-4 border-t border-gray-100">
                                            <div class="bg-gray-50 rounded-lg p-3 text-sm text-gray-600 italic border-l-4 border-gray-300">
                                                <span class="font-bold not-italic mr-1">Ghi chú:</span> "@reservation.GhiChu"
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="bg-white rounded-3xl shadow-xl p-16 text-center">
                    <div class="bg-red-50 w-24 h-24 rounded-full flex items-center justify-center mx-auto mb-6">
                        <svg class="h-12 w-12 text-red-500 opacity-80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-2">Chưa có đặt bàn nào</h3>
                    <p class="text-gray-500 mb-8 max-w-md mx-auto">Bạn chưa thực hiện đặt bàn nào tại nhà hàng. Hãy đặt bàn ngay để thưởng thức ẩm thực tuyệt vời!</p>
                    <a href="@Url.Action("Create", "DatBan", new { area = "User_65133141" })" 
                       class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-red-600 to-red-700 text-white font-bold rounded-xl shadow-lg hover:shadow-xl hover:scale-105 transition-all">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path></svg>
                        Đặt bàn ngay
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Floating Action Button for Mobile -->
<div class="md:hidden fixed bottom-6 right-6 z-30">
    <a href="@Url.Action("Create", "DatBan", new { area = "User_65133141" })" class="flex items-center justify-center w-14 h-14 bg-red-600 text-white rounded-full shadow-2xl hover:bg-red-700 focus:outline-none focus:ring-4 focus:ring-red-300">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
    </a>
</div>

