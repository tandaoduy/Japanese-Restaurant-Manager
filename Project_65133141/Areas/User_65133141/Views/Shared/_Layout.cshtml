            backdrop-filter: blur(15px);
            box-shadow: 0 6px 30px rgba(0,0,0,0.12);
        }
        
        /* Japanese Navbar - Minimalist Traditional Design */
        /* Japanese Navbar - Luxury Design */
        /* Japanese Navbar - Bright Luxury Design (White/Gold) */
        .japanese-navbar {
            position: fixed;
            top: 80px;
            left: 0;
            right: 0;
            z-index: 40;
            background: linear-gradient(135deg, #D4143D 0%, #990000 100%); /* Vibrant Japanese Red */
            border-top: 1px solid rgba(255,255,255,0.1);
            border-bottom: 2px solid #D4AF37; /* Gold border */
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
            backdrop-filter: blur(10px);
            text-align: center; /* Simple center for inline elements */
        }
        
        /* Glowing Border Animation */
        @@keyframes borderGlow {
            0%, 100% {
                box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3), 0 0 15px rgba(212, 175, 55, 0.3);
            }
            50% {
                box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3), 0 0 25px rgba(212, 175, 55, 0.6), 0 0 35px rgba(255, 215, 0, 0.4);
            }
        }
        
        .japanese-navbar {
            animation: borderGlow 3s ease-in-out infinite;
        }
        
        /* Desktop Nav Links - Modern Luxury Sans */
        .japanese-nav-link {
            position: relative;
            display: inline-block;
            color: #FFF8DC !important; /* Cornsilk */
            padding: 12px 28px;
            font-family: 'Poppins', sans-serif; /* Poppins Font */
            font-weight: 600;
            font-size: 16px;
            letter-spacing: 1.5px;
            text-decoration: none;
            transition: all 0.4s ease;
            text-transform: uppercase;
            text-shadow: 0 1px 2px rgba(0,0,0,0.15);
        }
        
        /* Simple Underline on Hover */
        .japanese-nav-link::after {
            content: '';
            position: absolute;
            bottom: 8px;
            left: 50%;
            transform: translateX(-50%);
            width: 0;
            height: 3px;
            background: #D4AF37;
            transition: width 0.3s ease;
        }
        
        .japanese-nav-link:hover {
            color: #FFD700 !important;
        }
        
        .japanese-nav-link:hover::after {
            width: 85%;
        }
        
        .japanese-nav-link.active {
            color: #FFD700 !important;
        }
        
        .japanese-nav-link.active::after {
            width: 85%;
        }
        
        /* Mobile Menu Styles */
        .mobile-menu-hidden {
            max-height: 0;
            opacity: 0;
            overflow: hidden;
            transition: max-height 0.4s cubic-bezier(0.4, 0, 0.2, 1), 
                        opacity 0.3s ease;
        }
        
        .mobile-menu-visible {
            max-height: 500px;
            opacity: 1;
            overflow-y: auto;
        }
        
        .mobile-menu-content {
            padding: 1.5rem;
            background: linear-gradient(135deg, #D4143D 0%, #990000 100%); /* Red mobile menu */
            border-bottom: 3px solid #D4AF37;
        }
        
        .japanese-mobile-link {
            display: flex;
            align-items: center;
            justify-content: flex-start;
            gap: 12px;
            padding: 14px 20px;
            color: #FFFFFF !important; /* White Text */
            font-weight: 600;
            font-size: 16px;
            letter-spacing: 1.2px;
            text-decoration: none;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            transition: all 0.3s ease;
        }
        
        .mobile-icon {
            width: 22px;
            height: 22px;
            flex-shrink: 0;
        }
        
        .japanese-mobile-link:last-child {
            border-bottom: none;
        }
        
        .japanese-mobile-link:hover,
        .japanese-mobile-link.active {
            background: rgba(212, 175, 55, 0.15);
            color: #FFD700 !important;
            padding-left: 28px;
        }
        
        @@keyframes buttonPulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }
        .btn-animated {
            transition: all 0.3s ease;
            animation: buttonPulse 2s ease-in-out infinite;
        }
        .btn-animated:hover {
            animation: none;
            transform: scale(1.08);
            box-shadow: 0 10px 25px rgba(220, 38, 38, 0.3);
        }
