        // Set active menu item based on current page - Only ONE active item at a time
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname.toLowerCase();
            const desktopNavLinks = document.querySelectorAll('.japanese-nav-link');
            const mobileNavLinks = document.querySelectorAll('.japanese-mobile-link');

            // Remove all active classes first
            desktopNavLinks.forEach(link => link.classList.remove('active'));
            mobileNavLinks.forEach(link => link.classList.remove('active'));

            // Function to extract path from href
            function getPathFromHref(href) {
                if (!href || href.startsWith('#') || href.startsWith('javascript:')) {
                    return null;
                }

                let path = href.toLowerCase();
                if (path.includes('://')) {
                    try {
                        const url = new URL(path);
                        path = url.pathname.toLowerCase();
                    } catch (e) {
                        return null;
                    }
                } else if (path.startsWith('/')) {
                    // Already a path
                } else {
                    return null;
                }

                // Remove trailing slash
                if (path.endsWith('/') && path.length > 1) {
                    path = path.slice(0, -1);
                }

                return path;
            }

            // Function to check if link matches current path
            function matchesPath(linkHref, linkText, currentPath) {
                const linkPath = getPathFromHref(linkHref);
                const linkTextLower = linkText.trim().toLowerCase();

                if (!linkPath) return false;

                // Exact match
                if (currentPath === linkPath) {
                    return true;
                }

                // Check specific pages with priority
                // 1. Menu page
                if (currentPath.includes('/menu')) {
                    return linkPath.includes('/menu') ||
                           linkTextLower.includes('thực đơn') ||
                           linkTextLower.includes('thuc don');
                }

                // 2. Contact page
                if (currentPath.includes('/home/contact') || currentPath.includes('/contact')) {
                    return linkPath.includes('/contact') ||
                           linkTextLower.includes('liên hệ') ||
                           linkTextLower.includes('lien he');
                }

                // 3. About page
                if (currentPath.includes('/home/about') || currentPath.includes('/about')) {
                    return linkPath.includes('/about') ||
                           linkTextLower.includes('giới thiệu') ||
                           linkTextLower.includes('gioi thieu');
                }

                // 4. TinTuc (News) page
                if (currentPath.includes('/tintuc')) {
                    return linkPath.includes('/tintuc') ||
                           linkTextLower.includes('tin tức') ||
                           linkTextLower.includes('tin tuc');
                }

                // 5. Home page - MUST be last to avoid false positives
                if (currentPath === '/' ||
                    currentPath === '/home' ||
                    currentPath === '/home/index' ||
                    currentPath.endsWith('/home')) {
                    return linkPath === '/' ||
                           linkPath === '/home' ||
                           (linkPath.includes('/home') && !linkPath.includes('/about') && !linkPath.includes('/contact')) ||
                           linkTextLower.includes('trang chủ') ||
                           linkTextLower.includes('trang chu');
                }

                // 5. Path starts with link path
                if (currentPath.startsWith(linkPath + '/') || currentPath.startsWith(linkPath)) {
                    return true;
                }

                return false;
            }

            // Find active link - only ONE
            let activeFound = false;

            // Check desktop links first
            for (let link of desktopNavLinks) {
                if (activeFound) break;

                const href = link.getAttribute('href');
                const linkText = link.textContent || link.innerText;

                if (matchesPath(href, linkText, currentPath)) {
                    link.classList.add('active');
                    activeFound = true;
                }
            }

            // Check mobile links - match the same link
            if (activeFound) {
                for (let link of mobileNavLinks) {
                    const href = link.getAttribute('href');
                    const linkText = link.textContent || link.innerText;

                    if (matchesPath(href, linkText, currentPath)) {
                        link.classList.add('active');
                        break; // Only one active
                    }
                }
            } else {
                // If no desktop match, check mobile
                for (let link of mobileNavLinks) {
                    if (activeFound) break;

                    const href = link.getAttribute('href');
                    const linkText = link.textContent || link.innerText;

                    if (matchesPath(href, linkText, currentPath)) {
                        link.classList.add('active');
                        activeFound = true;
                    }
                }
            }

            // Mobile menu toggle functionality
