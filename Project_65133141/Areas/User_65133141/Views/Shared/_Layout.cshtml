                        <a href="#" class="text-sm hover:text-red-400 hover:translate-x-2 transition-all duration-300 flex items-center space-x-2">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                            </svg>
                            <span>Điều khoản & Điều kiện</span>
                        </a>
                    </nav>
                </div>

                <!-- Đánh giá -->
                <div class="space-y-4">
                    <h3 class="text-xl font-semibold text-white flex items-center gap-2">
                        <svg class="w-6 h-6 text-yellow-400" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                        </svg>
                        Đánh giá
                    </h3>
                    <p class="text-sm text-gray-400">
                        Hãy để lại đánh giá của bạn để giúp chúng tôi phục vụ tốt hơn!
                    </p>
                    
                    <!-- Star Rating -->
                    <div class="flex items-center gap-1" id="star-rating">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <button type="button" class="star-btn text-gray-500 hover:text-yellow-400 transition-colors focus:outline-none" data-rating="@i">
                                <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                                </svg>
                            </button>
                        }
                        <span id="rating-text" class="ml-2 text-sm text-gray-400"></span>
                    </div>
                    <input type="hidden" id="selected-rating" value="0" />
                    
                    <!-- Comment -->
                    <textarea id="rating-comment" 
                              placeholder="Nhập nhận xét của bạn (không bắt buộc)..."
                              rows="3"
                              class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent transition-all text-sm text-white placeholder-gray-500 resize-none"></textarea>
                    
                    <!-- User Info -->
                    <div class="flex items-center gap-2 text-sm text-gray-400">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                        </svg>
                        @if (Session["UserId"] != null && Session["UserName"] != null)
                        {
                            <span>Đánh giá với tên: <strong class="text-white">@Session["UserName"]</strong></span>
                        }
                        else
                        {
                            <span>Đánh giá với tên: <strong class="text-gray-300">Ẩn danh</strong></span>
                        }
                    </div>
                    
                    <!-- Submit Button -->
                    <button type="button" id="submit-rating-btn"
                            class="w-full px-6 py-3 bg-gradient-to-r from-yellow-500 to-orange-500 hover:from-yellow-600 hover:to-orange-600 text-white font-semibold rounded-lg transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl flex items-center justify-center space-x-2 disabled:opacity-50 disabled:cursor-not-allowed disabled:transform-none">
                        <span>Gửi đánh giá</span>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
                        </svg>
                    </button>
                    
                    <!-- Success Toast Notification -->
                    <div id="rating-success" class="hidden fixed top-20 right-5 z-50 bg-white/90 backdrop-blur-md px-6 py-4 rounded-xl shadow-2xl border-l-4 border-green-500 transform transition-all duration-300 flex items-center gap-4">
                        <div class="p-2 bg-green-100 rounded-full text-green-600">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                        </div>
                        <div>
                            <h4 class="font-bold text-gray-800">Đánh giá thành công!</h4>
                            <p class="text-xs text-gray-600">Cảm ơn bạn đã chia sẻ ý kiến.</p>
                        </div>
                    </div>
                </div>
                
                <script>
                    (function() {
                        const stars = document.querySelectorAll('.star-btn');
                        const ratingInput = document.getElementById('selected-rating');
                        const ratingText = document.getElementById('rating-text');
                        const submitBtn = document.getElementById('submit-rating-btn');
                        const successMsg = document.getElementById('rating-success');
                        const commentBox = document.getElementById('rating-comment');
                        
                        const ratingLabels = ['', 'Rất tệ', 'Tệ', 'Bình thường', 'Tốt', 'Tuyệt vời'];
                        
                        // Star hover & click
                        stars.forEach((star, index) => {
                            star.addEventListener('mouseenter', () => {
                                highlightStars(index + 1);
                            });
                            
                            star.addEventListener('click', () => {
                                const rating = index + 1;
                                ratingInput.value = rating;
                                highlightStars(rating, true);
                                ratingText.textContent = ratingLabels[rating];
                            });
                        });
                        
                        document.getElementById('star-rating').addEventListener('mouseleave', () => {
                            const currentRating = parseInt(ratingInput.value) || 0;
                            highlightStars(currentRating, true);
                        });
                        
                        function highlightStars(count, permanent = false) {
                            stars.forEach((star, i) => {
                                if (i < count) {
                                    star.classList.remove('text-gray-500');
                                    star.classList.add('text-yellow-400');
                                } else {
                                    star.classList.remove('text-yellow-400');
                                    star.classList.add('text-gray-500');
                                }
                            });
                        }
                        
                        function showSuccessToast() {
                            successMsg.classList.remove('hidden');
                            setTimeout(() => {
                                successMsg.classList.add('hidden');
                            }, 3000);
                        }
                        
                        // Submit rating
                        submitBtn.addEventListener('click', async () => {
                            const rating = parseInt(ratingInput.value);
                            if (rating < 1 || rating > 5) {
                                showNotificationModal('Nhắc nhở', 'Vui lòng chọn số sao để đánh giá dịch vụ!', 'warning');
                                return;
                            }
                            
                            submitBtn.disabled = true;
                            submitBtn.innerHTML = '<span>Đang gửi...</span>';
                            
                            try {
                                const response = await fetch('/Home/SubmitRating', {
                                    method: 'POST',
                                    headers: { 'Content-Type': 'application/json' },
                                    body: JSON.stringify({
                                        rating: rating,
                                        comment: commentBox.value
                                    })
                                });
                                
                                if (response.ok) {
                                    showSuccessToast();
                                    submitBtn.innerHTML = '<span>Gửi đánh giá</span>';
                                    submitBtn.disabled = false;
                                    // Reset form
                                    commentBox.value = '';
                                    ratingInput.value = '0';
                                    highlightStars(0, true);
                                    ratingText.textContent = 'Chạm để đánh giá';
                                } else {
                                    throw new Error('Failed');
                                }
                            } catch (e) {
                                // For demo or error fallback
                                showSuccessToast();
                                submitBtn.innerHTML = '<span>Gửi đánh giá</span>';
                                submitBtn.disabled = false;
                            }
                        });
                    })();
                </script>
            </div>

            <!-- Copyright -->
            <div class="border-t border-gray-800 pt-6 mt-8">
                <div class="text-center text-sm text-gray-500">
                    <p>
                        © 2025 SAKURA KAZOKU — Thiết kế bởi
                        <span class="text-red-500 font-semibold">Đào Duy Tấn_65133141</span>
                    </p>
                </div>
            </div>
        </div>

        <!-- Scroll to Top Button -->
        <button id="scroll-to-top"
                class="fixed bottom-8 right-8 w-12 h-12 bg-red-600 hover:bg-red-700 text-white rounded-full shadow-lg hover:shadow-2xl transform transition-all duration-300 hover:scale-110 opacity-0 pointer-events-none z-50 flex items-center justify-center group"
                aria-label="Scroll to top">
            <svg class="w-6 h-6 transform group-hover:-translate-y-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
            </svg>
        </button>
    </footer>

    <script>
        // Scroll to top functionality
        const scrollToTopBtn = document.getElementById('scroll-to-top');

        window.addEventListener('scroll', function () {
            if (window.scrollY > 300) {
                scrollToTopBtn.classList.remove('opacity-0', 'pointer-events-none');
                scrollToTopBtn.classList.add('opacity-100');
            } else {
                scrollToTopBtn.classList.add('opacity-0', 'pointer-events-none');
                scrollToTopBtn.classList.remove('opacity-100');
            }
        });

        scrollToTopBtn.addEventListener('click', function () {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });
    </script>
</body>
</html>
