@{
    ViewBag.Title = "Giới thiệu - SAKURA KAZOKU";
}

<style>
    /* Reset and base styles */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    /* Container */
    .about-container {
        max-width: 1280px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    /* Hero Section */
    .hero-section {
        position: relative;
        height: 60vh;
        min-height: 500px;
        overflow: hidden;
    }

    .hero-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        animation: fadeScaleIn 1.5s ease-out;
    }

    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.5);
    }

    .hero-content {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        display: flex;
        align-items: center;
    }

    .hero-content .about-container {
        margin-left: 0;
        margin-right: auto;
    }

    .hero-text {
        color: white;
        max-width: 768px;
        animation: fadeInUp 1s ease-out 0.3s both;
        text-align: left;
    }

    .hero-title {
        font-size: 3.75rem;
        font-weight: bold;
        margin-bottom: 1rem;
        text-shadow: 2px 4px 8px rgba(0,0,0,0.8);
        letter-spacing: 0.05em;
    }

    .hero-subtitle {
        font-size: 1.5rem;
        font-weight: 600;
        padding-bottom: 0.75rem;
        color: #ec4899;
        position: relative;
        display: inline-block;
    }

    .hero-subtitle::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        height: 2px;
        background-color: #ec4899;
        animation: expandWidth 1s ease-out 0.8s forwards;
    }

    /* Animations */
    @@keyframes fadeScaleIn {
        from {
            opacity: 0;
            transform: scale(1.1);
        }
        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes expandWidth {
        to {
            width: 100%;
        }
    }

    /* Section styling */
    .section-white {
        padding: 6rem 0;
        background-color: white;
        overflow: hidden;
    }

    .section-gray {
        padding: 6rem 0;
        background: linear-gradient(to bottom, #f9fafb, white);
        overflow: hidden;
    }

    .section-black {
        padding: 6rem 0;
        background-color: #000;
        color: white;
        position: relative;
        overflow: hidden;
    }

    .section-red {
        padding: 6rem 0;
        background: linear-gradient(135deg, #7f1d1d, #991b1b, #000);
        color: white;
        position: relative;
        overflow: hidden;
    }

    /* Cherry Blossom Decoration for Titles - Background Style */
    .section-title-decorated {
        position: relative;
        padding-left: 0;
    }

    .section-title-decorated::before {
        content: '';
        position: absolute;
        left: -600px;
        top: 50%;
        transform: translateY(-50%);
        width: 700px;
        height: 750px;
        background-image: url('@Url.Content("~/Images/hoa_anh_dao.png")');
        background-repeat: no-repeat;
        background-position: right center;
        background-size: contain;
        opacity: 0.6;
        z-index: 0;
        pointer-events: none;
    }
    
    /* Separate style for "Câu chuyện" section - can adjust independently */
    .section-title-story-decoration {
        position: relative;
        padding-left: 0;
    }
    
    .section-title-story-decoration::before {
        content: '';
        position: absolute;
        left: -600px;
        top: 50%;
        transform: translateY(-50%);
        width: 1150px;
        height: 750px;
        background-image: url('@Url.Content("~/Images/hoa_anh_dao.png")');
        background-repeat: no-repeat;
        background-position: right center;
        background-size: contain;
        opacity: 0.6;
        z-index: 0;
        pointer-events: none;
    }
    
    /* Responsive adjustments for cherry blossom decoration */
    @@media (max-width: 1024px) {
        .section-title-decorated::before {
            left: -120px;
            width: 400px;
            height: 400px;
            opacity: 0.4;
        }
    }
    
    @@media (max-width: 767px) {
        .section-title-decorated::before {
            left: -80px;
            width: 250px;
            height: 250px;
            opacity: 0.3;
        }
    }

    /* Animation for underlines */
    @@keyframes slideInFromLeft {
        from {
            width: 0;
        }
        to {
            width: 128px;
        }
    }

    .animated-line {
        animation: slideInFromLeft 1s ease-out 0.5s forwards;
    }



    /* Title styling */
    .section-title {
        font-size: 3rem;
        font-weight: bold;
        color: #111827;
        margin-bottom: 1.5rem;
        position: relative;
        white-space: nowrap;
    }

    .section-title-white {
        color: white;
    }

    .title-underline {
        width: 0;
        height: 6px;
        background: linear-gradient(to right, #dc2626, #b91c1c);
        margin: 0 auto 2rem;
        border-radius: 9999px;
        animation: slideInFromLeft 1s ease-out 0.5s forwards;
    }

    .title-underline-left {
        margin: 0 0 2rem 0;
    }

    .title-underline-white {
        background: white;
    }

    /* Grid layouts */
    .grid-2 {
        display: grid;
        grid-template-columns: 1fr;
        gap: 4rem;
        align-items: center;
        position: relative;
    }

    .grid-3 {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    .grid-4 {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    @@media (min-width: 768px) {
        .grid-2 {
            grid-template-columns: repeat(2, 1fr);
        }
        .grid-3 {
            grid-template-columns: repeat(3, 1fr);
        }
        .grid-4 {
            grid-template-columns: repeat(4, 1fr);
        }
        .hero-title {
            font-size: 3.75rem;
        }
    }

    /* Image cards */
    .image-card {
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        transition: all 0.5s;
    }

    .image-card:hover {
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.2);
    }

    .image-card img {
        width: 100%;
        height: 400px;
        object-fit: cover;
        transition: transform 0.5s;
    }

    .image-card:hover img {
        transform: scale(1.05);
    }

    /* Timeline images - landscape format */
    .timeline-card ~ .image-card img,
    .grid-2:has(.timeline-card) .image-card img {
        height: 280px;
    }

    /* Text content */
    .text-content {
        color: #374151;
        font-size: 1.125rem;
        line-height: 1.75;
        margin-bottom: 1.5rem;
    }

    .text-center {
        text-align: center;
    }

    .text-gray {
        color: #4b5563;
    }

    /* Timeline container with center line */
    .space-y-12 {
        position: relative;
    }

    .space-y-12::before {
        content: '';
        position: absolute;
        left: 50%;
        top: 0;
        bottom: 0;
        width: 4px;
        background-color: #dc2626;
        transform: translateX(-50%);
        z-index: 0;
    }

    /* Timeline cards */
    .timeline-card {
        background: white;
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        position: relative;
        z-index: 1;
    }

    /* Timeline dot - positioned at center line */
    .grid-2:has(.timeline-card)::after {
        content: '';
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        width: 20px;
        height: 20px;
        background-color: #dc2626;
        border: 4px solid white;
        border-radius: 50%;
        box-shadow: 0 0 0 2px #dc2626;
        z-index: 2;
    }

    .timeline-year {
        color: #dc2626;
        font-size: 3.75rem;
        font-weight: bold;
    }

    .timeline-title {
        font-size: 1.5rem;
        font-weight: bold;
        color: #111827;
        margin-top: 1rem;
        margin-bottom: 0.75rem;
    }

    .timeline-text {
        color: #4b5563;
        line-height: 1.75;
    }

    /* Feature cards (3 điều section) */
    .feature-card {
        background: #111827;
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        transition: all 0.3s;
    }

    .feature-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 25px 50px -12px rgba(127, 29, 29, 0.5);
    }

    .feature-image-wrapper {
        position: relative;
        height: 256px;
        overflow: hidden;
    }

    .feature-image-wrapper img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s;
    }

    .feature-card:hover .feature-image-wrapper img {
        transform: scale(1.1);
    }

    .feature-number {
        position: absolute;
        top: 1rem;
        left: 1rem;
        width: 48px;
        height: 48px;
        background: #dc2626;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
        font-weight: bold;
    }

    .feature-content {
        padding: 2rem;
    }

    .feature-title {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 1rem;
        color: white;
    }

    .feature-text {
        color: #9ca3af;
        line-height: 1.75;
    }

    /* Chef cards */
    .chef-card {
        background: white;
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        transition: all 0.3s;
    }

    .chef-card:hover {
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.2);
    }

    .chef-image {
        position: relative;
        height: 320px;
        overflow: hidden;
    }

    .chef-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center top;
        transition: transform 0.3s;
    }

    .chef-card:hover .chef-image img {
        transform: scale(1.1);
    }

    .chef-info {
        padding: 1.5rem;
        text-align: center;
    }

    .chef-name {
        font-size: 1.5rem;
        font-weight: bold;
        color: #111827;
        margin-bottom: 0.5rem;
    }

    .chef-role {
        color: #dc2626;
        font-weight: 600;
        margin-bottom: 0.75rem;
    }

    .chef-bio {
        color: #4b5563;
        line-height: 1.75;
        font-size: 0.875rem;
    }

    /* Gallery grid */
    .gallery-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
        max-width: 1536px;
        margin: 0 auto;
    }

    @@media (min-width: 768px) {
        .gallery-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    .gallery-item {
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s;
    }

    .gallery-item:hover {
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.2);
    }

    .gallery-item img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .gallery-large {
        grid-column: span 2;
        grid-row: span 2;
    }

    .gallery-wide {
        grid-column: span 2;
    }

    /* Value cards */
    .value-card {
        text-align: center;
    }

    .value-icon {
        width: 180px;
        height: 180px;
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.25), rgba(255, 255, 255, 0.1));
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
    }
    
    .value-card:hover .value-icon {
        transform: translateY(-5px) scale(1.05);
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.4);
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.35), rgba(255, 255, 255, 0.15));
    }

    .value-icon img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 50%;
    }

    .value-title {
        font-size: 1.25rem;
        font-weight: bold;
        margin-bottom: 0.75rem;
    }

    .value-text {
        color: #fca5a5;
        line-height: 1.75;
    }

    /* Final image */
    .final-image-wrapper {
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        max-width: 1024px;
        margin: 0 auto;
    }

    .final-image-wrapper img {
        width: 100%;
        height: 384px;
        object-fit: cover;
    }

    /* Cherry pattern background for black section */
    .cherry-pattern-bg {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        opacity: 0.05;
    }

    /* Blob backgrounds for red section */
    .blob-bg {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        opacity: 0.1;
    }

    .blob-1 {
        position: absolute;
        top: 2.5rem;
        right: 2.5rem;
        width: 256px;
        height: 256px;
        background: white;
        border-radius: 50%;
        filter: blur(80px);
    }

    .blob-2 {
        position: absolute;
        bottom: 2.5rem;
        left: 2.5rem;
        width: 320px;
        height: 320px;
        background: white;
        border-radius: 50%;
        filter: blur(80px);
    }

    .relative-z {
        position: relative;
        z-index: 10;
    }

    .space-y-12 > * + * {
        margin-top: 3rem;
    }

    .max-w-4xl {
        max-width: 896px;
        margin: 0 auto;
    }

    .max-w-6xl {
        max-width: 1152px;
        margin: 0 auto;
    }

    .max-w-7xl {
        max-width: 1280px;
        margin: 0 auto;
    }

    .mb-16 {
        margin-bottom: 4rem;
    }

    .mt-16 {
        margin-top: 4rem;
    }

    /* Responsive Media Queries */
    /* Default: Laptop (≥1025px) - no media query needed */
    
    /* Tablet: iPad, Surface, etc. (768px - 1024px) */
    @@media (min-width: 768px) and (max-width: 1024px) {
        .hero-title {
            font-size: 2.75rem;
        }

        .hero-subtitle {
            font-size: 1.35rem;
        }

        .section-title {
            font-size: 2.5rem;
        }

        .timeline-year {
            font-size: 2.25rem;
        }

        .timeline-title {
            font-size: 1.5rem;
        }

        .timeline-text {
            font-size: 1rem;
        }

        .feature-title {
            font-size: 1.35rem;
        }

        .chef-name {
            font-size: 1.35rem;
        }

        .value-icon {
            width: 150px;
            height: 150px;
        }

        .value-title {
            font-size: 1.15rem;
        }

        .about-container {
            padding: 0 1.5rem;
        }

        .section-white,
        .section-gray,
        .section-black,
        .section-red {
            padding: 4.5rem 0;
        }

        .grid-2 {
            gap: 2.5rem;
        }

        .grid-3 {
            gap: 2.5rem;
        }

        .grid-4 {
            grid-template-columns: repeat(2, 1fr);
            gap: 2.5rem;
        }
    }

    /* iPhone và Mobile (≤767px) */
    @@media (max-width: 767px) {
        .hero-section {
            min-height: 400px;
            height: 50vh;
        }

        .hero-title {
            font-size: 2rem;
        }

        .hero-subtitle {
            font-size: 1rem;
        }

        .section-title {
            font-size: 1.75rem;
        }

        .section-white,
        .section-gray,
        .section-black,
        .section-red {
            padding: 2.5rem 0;
        }

        .timeline-year {
            font-size: 1.5rem;
        }

        .timeline-title {
            font-size: 1.125rem;
        }

        .timeline-text {
            font-size: 0.9rem;
        }

        .feature-title {
            font-size: 1.125rem;
        }

        .feature-text {
            font-size: 0.9rem;
        }

        .chef-name {
            font-size: 1.25rem;
        }

        .chef-role {
            font-size: 0.95rem;
        }

        .chef-bio {
            font-size: 0.9rem;
        }

        .value-icon {
            width: 110px;
            height: 110px;
        }

        .value-title {
            font-size: 1rem;
        }

        .value-text {
            font-size: 0.9rem;
        }

        .text-content {
            font-size: 0.95rem;
            line-height: 1.7;
        }

        .about-container {
            padding: 0 1rem;
        }

        .mb-16 {
            margin-bottom: 2.5rem;
        }

        /* Layout changes */
        .grid-2 {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .grid-3 {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .grid-4 {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .gallery-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        /* Image adjustments */
        .image-card img {
            height: 250px;
        }

        .timeline-card ~ .image-card img,
        .grid-2:has(.timeline-card) .image-card img {
            height: 220px;
        }

        .chef-image {
            height: 280px;
        }

        /* Timeline adjustments */
        .timeline-card {
            padding: 1.5rem;
        }
    }
</style>

<!-- Hero Section -->
<section class="hero-section">
    <img src="@Url.Content("~/Images/intro_4.jpg")" alt="SAKURA KAZOKU Restaurant" class="hero-image">
    <div class="hero-overlay"></div>
    <div class="hero-content">
        <div class="about-container">
            <div class="hero-text">
                <h1 class="hero-title">SAKURA KAZOKU</h1>
                <p class="hero-subtitle">Giới thiệu</p>
            </div>
        </div>
    </div>
</section>

<!-- Câu chuyện nhà hàng -->
<section class="section-white">
    <div class="about-container">
        <div class="grid-2">
            <div style="display: flex; flex-direction: column; justify-content: center; height: 100%;">
                <h2 class="section-title section-title-story-decoration">Câu chuyện của chúng tôi</h2>
