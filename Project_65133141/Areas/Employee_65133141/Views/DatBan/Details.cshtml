@model Project_65133141.Models.DatBan

@{
    ViewBag.Title = "Chi tiết đặt bàn";
    Layout = "~/Areas/Employee_65133141/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto px-4 py-6">
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Chi tiết đặt bàn</h1>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-xl font-semibold text-gray-900">Thông tin đặt bàn #@Model.DatBanID</h2>
        </div>
        <div class="px-6 py-4">
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <dt class="text-sm font-medium text-gray-500">Mã đặt bàn</dt>
                    <dd class="mt-1 text-sm text-gray-900">#@Model.DatBanID</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">Trạng thái</dt>
                    <dd class="mt-1">
                        @{
                            var statusClass = "bg-gray-100 text-gray-800";
                            if (Model.TrangThai == "Đã xác nhận") { statusClass = "bg-green-100 text-green-800"; }
                            else if (Model.TrangThai == "Đang phục vụ") { statusClass = "bg-blue-100 text-blue-800"; }
                            else if (Model.TrangThai == "Hoàn thành") { statusClass = "bg-purple-100 text-purple-800"; }
                            else if (Model.TrangThai == "Đã hủy") { statusClass = "bg-red-100 text-red-800"; }
                        }
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @statusClass">
                            @(Model.TrangThai ?? "Chờ xác nhận")
                        </span>
                    </dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">Họ tên khách hàng</dt>
                    <dd class="mt-1 text-sm text-gray-900">@(Model.HoTenKhach ?? "N/A")</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">Số điện thoại</dt>
                    <dd class="mt-1 text-sm text-gray-900">@(Model.SDTKhach ?? "N/A")</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">Bàn</dt>
                    <dd class="mt-1">
                        @if (Model.BanAn != null)
                        {
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                @Model.BanAn.TenBan
                                @if (Model.BanAn.SucChua.HasValue)
                                {
                                    <span class="ml-1">(@Model.BanAn.SucChua người)</span>
                                }
                            </span>
                        }
                        else
                        {
                            <span class="text-gray-400">Chưa chọn</span>
                        }
                    </dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">Số người</dt>
                    <dd class="mt-1 text-sm text-gray-900">@(Model.SoNguoi?.ToString() ?? "N/A")</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">Thời gian đến</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Model.ThoiGianDen.ToString("dd/MM/yyyy HH:mm")</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">Ngày tạo</dt>
                    <dd class="mt-1 text-sm text-gray-900">
                        @(Model.NgayTao?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")
                    </dd>
                </div>
                @if (Model.User != null)
                {
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Tài khoản đặt</dt>
                        <dd class="mt-1 text-sm text-gray-900">@Model.User.HoTen (@Model.User.Email)</dd>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.GhiChu))
                {
                    <div class="md:col-span-2">
                        <dt class="text-sm font-medium text-gray-500">Ghi chú</dt>
                        <dd class="mt-1 text-sm text-gray-900">@Model.GhiChu</dd>
                    </div>
                }
            </dl>
        </div>
        <div class="px-6 py-4 border-t border-gray-200 bg-gray-50">
            <div class="flex items-center gap-3">
                <a href="@Url.Action("Edit", "DatBan", new { area = "Employee_65133141", id = Model.DatBanID })" 
                   class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    Sửa đặt bàn
                </a>
                <a href="@Url.Action("Index", "DatBan", new { area = "Employee_65133141" })" 
                   class="inline-flex items-center px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors">
                    Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>

