<script>
    // Global variables
    let allProducts = [];
    let filteredProducts = [];
    let currentCategory = 'all';
    let currentSearchTerm = '';
    const itemsPerPage = 9;
    let currentPage = 1;
    let totalPages = 1;

    // Initialize on page load
    document.addEventListener('DOMContentLoaded', function() {
        // Collect all products
        collectAllProducts();
        
        // Initialize search autocomplete
        initSearchAutocomplete();
        
        // Show all products initially (don't hide anything on first load)
        showAllProducts();
        
        // Initialize pagination
        updatePagination();
        
        // Close autocomplete when clicking outside
        document.addEventListener('click', function(e) {
            const searchContainer = document.querySelector('.search-container');
            if (!searchContainer || !searchContainer.contains(e.target)) {
                closeAutocomplete();
            }
        });
    });
    
    // Show all products initially
    function showAllProducts() {
        allProducts.forEach(p => {
            p.element.style.display = '';
            p.element.style.opacity = '1';
            p.element.style.transform = 'scale(1)';
        });
    }

    // Collect all product cards into an array
    function collectAllProducts() {
        const productCards = document.querySelectorAll('.product-card');
        allProducts = Array.from(productCards).map(card => {
            const h3 = card.querySelector('h3');
            return {
                element: card,
                name: h3 ? h3.textContent.trim() : '',
                category: card.getAttribute('data-category') || ''
            };
        });
        filteredProducts = [...allProducts];
    }

    // Search Autocomplete
    function initSearchAutocomplete() {
        const searchInput = document.getElementById('searchInput');
        const dropdown = document.getElementById('autocompleteDropdown');
        let debounceTimer;

        searchInput.addEventListener('input', function() {
            clearTimeout(debounceTimer);
            const query = this.value.trim();

            if (query.length === 0) {
                closeAutocomplete();
                currentSearchTerm = '';
                applyFilters();
                return;
            }

            debounceTimer = setTimeout(() => {
                currentSearchTerm = query;
                showAutocompleteSuggestions(query);
                applyFilters();
            }, 300);
        });

        searchInput.addEventListener('focus', function() {
            if (this.value.trim().length > 0) {
                showAutocompleteSuggestions(this.value.trim());
            }
        });
    }

    function showAutocompleteSuggestions(query) {
        const dropdown = document.getElementById('autocompleteDropdown');
        const lowerQuery = query.toLowerCase();
        
        // Get unique matching product names
        const matches = allProducts
            .filter(p => p.name.toLowerCase().includes(lowerQuery))
            .map(p => p.name)
            .filter((name, index, self) => self.indexOf(name) === index)
            .slice(0, 5);

        if (matches.length === 0) {
            dropdown.innerHTML = '<div class="autocomplete-item" style="color: #9ca3af;">Kh√¥ng t√¨m th·∫•y k·∫øt qu·∫£</div>';
            dropdown.classList.add('active');
            return;
        }

        dropdown.innerHTML = matches.map(name => {
            const highlighted = highlightMatch(name, query);
            return `<div class="autocomplete-item" onclick="selectSuggestion('${escapeHtml(name)}')">${highlighted}</div>`;
        }).join('');

        dropdown.classList.add('active');
    }

    function highlightMatch(text, query) {
        const regex = new RegExp(`(${escapeRegex(query)})`, 'gi');
        return text.replace(regex, '<mark>$1</mark>');
    }

    function escapeHtml(text) {
        return text.replace(/'/g, "\\'").replace(/"/g, '\\"');
    }

    function escapeRegex(text) {
        return text.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
    }

    function selectSuggestion(name) {
        document.getElementById('searchInput').value = name;
        currentSearchTerm = name;
        closeAutocomplete();
        applyFilters();
    }

    function closeAutocomplete() {
        document.getElementById('autocompleteDropdown').classList.remove('active');
    }

    // Category filter functionality
    function filterByCategory(categoryId) {
        currentCategory = categoryId;
        currentPage = 1; // Reset to first page
        
        const categoryPills = document.querySelectorAll('.category-pill');
        categoryPills.forEach(pill => {
            if (pill.getAttribute('data-category') == categoryId) {
                pill.classList.add('category-pill-active');
            } else {
                pill.classList.remove('category-pill-active');
            }
        });

        applyFilters();
    }

    // Apply both category and search filters
    function applyFilters() {
        // If no filters, show all
        if (currentCategory === 'all' && currentSearchTerm === '') {
            filteredProducts = [...allProducts];
            currentPage = 1;
            totalPages = 1;
            showAllProducts();
            updatePagination();
            return;
        }
        
        filteredProducts = allProducts.filter(product => {
            // Category filter
            const categoryMatch = currentCategory === 'all' || product.category == currentCategory;
            
            // Search filter
            const searchMatch = currentSearchTerm === '' || 
                                product.name.toLowerCase().includes(currentSearchTerm.toLowerCase());
            
            return categoryMatch && searchMatch;
        });

        // Update pagination
        totalPages = Math.ceil(filteredProducts.length / itemsPerPage) || 1;
        if (currentPage > totalPages) {
            currentPage = totalPages;
        }
        if (currentPage < 1) {
            currentPage = 1;
        }
        
        showCurrentPage();
        updatePagination();
    }

    // Pagination functions
    function showCurrentPage() {
        // If no filters applied, show all products
        if (currentCategory === 'all' && currentSearchTerm === '') {
            showAllProducts();
            return;
        }
        
        const start = (currentPage - 1) * itemsPerPage;
        const end = start + itemsPerPage;

        // Hide all products first
        allProducts.forEach(p => {
            p.element.style.display = 'none';
            p.element.style.opacity = '0';
        });

        // Show only products on current page
        filteredProducts.slice(start, end).forEach(p => {
            p.element.style.display = '';
            p.element.style.opacity = '0';
            p.element.style.transform = 'scale(0.95)';
            
            // Animate in
            setTimeout(() => {
                p.element.style.opacity = '1';
                p.element.style.transform = 'scale(1)';
            }, 50);
        });
    }

    function updatePagination() {
        const pageNumbersContainer = document.getElementById('pageNumbers');
        const paginationInfo = document.getElementById('paginationInfo');
        const firstBtn = document.getElementById('firstPageBtn');
        const prevBtn = document.getElementById('prevPageBtn');
        const nextBtn = document.getElementById('nextPageBtn');
        const lastBtn = document.getElementById('lastPageBtn');

        // Update info text
        paginationInfo.textContent = `Trang ${currentPage} / ${totalPages}`;

        // Update button states
        firstBtn.disabled = currentPage === 1;
        prevBtn.disabled = currentPage === 1;
        nextBtn.disabled = currentPage === totalPages;
        lastBtn.disabled = currentPage === totalPages;

        // Generate page numbers (show max 5 pages)
        pageNumbersContainer.innerHTML = '';
        const maxPages = 5;
        let startPage = Math.max(1, currentPage - Math.floor(maxPages / 2));
        let endPage = Math.min(totalPages, startPage + maxPages - 1);
        
        if (endPage - startPage < maxPages - 1) {
            startPage = Math.max(1, endPage - maxPages + 1);
        }

        for (let i = startPage; i <= endPage; i++) {
            const pageBtn = document.createElement('button');
            pageBtn.className = `pagination-btn ${i === currentPage ? 'active' : ''}`;
            pageBtn.textContent = i;
            pageBtn.onclick = () => goToPage(i);
            pageNumbersContainer.appendChild(pageBtn);
        }
    }

    function changePage(delta) {
        const newPage = currentPage + delta;
        if (newPage >= 1 && newPage <= totalPages) {
            currentPage = newPage;
            showCurrentPage();
            updatePagination();
            
            // Scroll to top of products grid
            document.getElementById('products-grid').scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
    }

    function goToPage(page) {
        if (page === 'last') {
            page = totalPages;
        }
        if (page >= 1 && page <= totalPages) {
            currentPage = page;
            showCurrentPage();
            updatePagination();
            
            // Scroll to top of products grid
            document.getElementById('products-grid').scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
    }
</script>
