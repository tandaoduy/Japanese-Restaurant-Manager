@model Project_65133141.Models.BanAn

@{
    ViewBag.Title = "Thêm bàn mới";
    Layout = "~/Areas/Employee_65133141/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 py-6">
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Thêm bàn mới</h1>
        <p class="text-gray-600">Thêm bàn hoặc phòng mới vào hệ thống</p>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="mb-4 p-4 bg-red-100 border-l-4 border-red-500 text-red-700 rounded">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="bg-white rounded-lg shadow-md p-6">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-red-600 mb-4" })

            <div class="space-y-4">
                <div>
                    @Html.LabelFor(model => model.TenBan, new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                    @Html.TextBoxFor(model => model.TenBan, new { @class = "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500", placeholder = "Ví dụ: Bàn 1, Phòng VIP 1" })
                    @Html.ValidationMessageFor(model => model.TenBan, "", new { @class = "text-red-600 text-sm mt-1" })
                </div>

                <div>
                    @Html.LabelFor(model => model.ViTri, new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                    @Html.TextBoxFor(model => model.ViTri, new { @class = "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500", placeholder = "Ví dụ: Tầng trệt, Tầng 1, Phòng VIP, Phòng đôi" })
                    @Html.ValidationMessageFor(model => model.ViTri, "", new { @class = "text-red-600 text-sm mt-1" })
                </div>

                <div>
                    @Html.LabelFor(model => model.SucChua, new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                    @Html.TextBoxFor(model => model.SucChua, new { @class = "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500", type = "number", min = "1", placeholder = "Số lượng người" })
                    @Html.ValidationMessageFor(model => model.SucChua, "", new { @class = "text-red-600 text-sm mt-1" })
                </div>
            </div>

            <div class="mt-6 flex gap-4">
                <button type="submit" class="px-6 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors font-medium">
                    Thêm bàn
                </button>
                <a href="@Url.Action("Index")" class="px-6 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors font-medium">
                    Hủy
                </a>
            </div>
        }
    </div>
</div>

