    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    
    <!-- Alert Container -->
    <div id="alertContainer" style="position: fixed; top: 20px; right: 20px; z-index: 9999; display: flex; flex-direction: column; gap: 10px;"></div>
    
    <script>
        // Show alert function (gi·ªëng Admin)
        function showAlert(type, message) {
            var container = document.getElementById('alertContainer');
            if (!container) {
                // Fallback to browser alert
                alert(message);
                return;
            }

            var alertId = 'alert-' + Date.now();

            var config = {
                success: {
                    bg: 'bg-green-100 border border-green-200 text-green-900',
                    iconBg: 'bg-green-500 text-white',
                    title: 'Th√†nh c√¥ng!',
                    icon: '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>'
                },
                error: {
                    bg: 'bg-red-100 border border-red-200 text-red-900',
                    iconBg: 'bg-red-500 text-white',
                    title: 'L·ªói!',
                    icon: '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01M4.93 4.93l14.14 14.14"></path><circle cx="12" cy="12" r="9" stroke-width="2" fill="none"></circle></svg>'
                },
                warning: {
                    bg: 'bg-amber-100 border border-amber-200 text-amber-900',
                    iconBg: 'bg-amber-500 text-white',
                    title: 'C·∫£nh b√°o!',
                    icon: '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 3h.01M10.29 4.21l-6.6 11.45A1 1 0 004.53 18h14.94a1 1 0 00.86-1.5l-6.6-11.45a1 1 0 00-1.74 0z"/></svg>'
                },
                info: {
                    bg: 'bg-sky-100 border border-sky-200 text-sky-900',
                    iconBg: 'bg-sky-500 text-white',
                    title: 'Th√¥ng tin',
                    icon: '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01" /><circle cx="12" cy="12" r="9" stroke-width="2" fill="none"></circle></svg>'
                }
            };

            var cfg = config[type] || config.info;

            var html = `
            <div id="${alertId}" class="${cfg.bg} px-3 py-2 rounded-lg shadow-md flex items-center gap-2 max-w-md transition-all duration-300 translate-x-full bg-opacity-95 border border-white/60">
                <div class="w-7 h-7 rounded-full ${cfg.iconBg} flex items-center justify-center flex-shrink-0">
                    ${cfg.icon}
                </div>
                <div class="flex-1">
                    <div class="font-semibold text-sm mb-0.5">${cfg.title}</div>
                    <div class="text-sm leading-snug">${message}</div>
                </div>
                <button type="button" class="ml-2 text-current/70 hover:text-current" aria-label="ƒê√≥ng th√¥ng b√°o"
                        onclick="(function(){ var el = document.getElementById('${alertId}'); if(el){ el.classList.add('translate-x-full'); setTimeout(function(){ el.remove(); }, 250); } })()">
                    &#10005;
                </button>
            </div>`;

            container.insertAdjacentHTML('beforeend', html);

            setTimeout(function () {
                var el = document.getElementById(alertId);
                if (el) el.classList.remove('translate-x-full');
            }, 10);

            setTimeout(function () {
                var el = document.getElementById(alertId);
                if (el) {
                    el.classList.add('translate-x-full');
                    setTimeout(function () { el.remove(); }, 250);
                }
            }, 4000);
        }

        // Modal functions
        function openConfirmPaymentModal() {
            var modal = document.getElementById('confirmPaymentModal');
            if (modal) {
                modal.classList.add('show');
                modal.style.display = 'flex';
                document.body.style.overflow = 'hidden';
                console.log('Modal opened');
            } else {
                console.error('Modal not found');
            }
        }

        function closeConfirmPaymentModal() {
            var modal = document.getElementById('confirmPaymentModal');
            if (modal) {
                modal.classList.remove('show');
                modal.style.display = 'none';
                document.body.style.overflow = 'auto';
                console.log('Modal closed');
            }
        }

        // ƒê·∫£m b·∫£o jQuery ƒë√£ load
        if (typeof jQuery === 'undefined') {
            document.write('<script src="https://code.jquery.com/jquery-3.7.0.min.js"><\/script>');
        }

        // S·ª≠ d·ª•ng c·∫£ vanilla JS v√† jQuery ƒë·ªÉ ƒë·∫£m b·∫£o ho·∫°t ƒë·ªông
        document.addEventListener('DOMContentLoaded', function() {
            // M·ªü modal khi b·∫•m n√∫t x√°c nh·∫≠n thanh to√°n (vanilla JS)
            var confirmBtn = document.getElementById('confirmPaymentBtn');
            if (confirmBtn) {
                confirmBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    console.log('Confirm payment button clicked');
                    openConfirmPaymentModal();
                });
            }

            // ƒê√≥ng modal khi b·∫•m h·ªßy
            var cancelBtn = document.getElementById('cancelPaymentBtn');
            if (cancelBtn) {
                cancelBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    closeConfirmPaymentModal();
                });
            }
        });

        jQuery(document).ready(function($) {
            console.log('Payment Preview page loaded');
            
            // M·ªü modal khi b·∫•m n√∫t x√°c nh·∫≠n thanh to√°n (jQuery backup)
            $('#confirmPaymentBtn').on('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                console.log('Confirm payment button clicked (jQuery)');
                openConfirmPaymentModal();
            });

            // ƒê√≥ng modal khi b·∫•m h·ªßy (jQuery backup)
            $('#cancelPaymentBtn').on('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                closeConfirmPaymentModal();
            });

            // X√°c nh·∫≠n thanh to√°n t·ª´ modal
            $('#confirmPaymentModalBtn').on('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                var $btn = $(this);
                $btn.prop('disabled', true).text('ƒêang x·ª≠ l√Ω...');

                var data = {
                    banId: '@banId',
                    paymentMethod: '@Html.Raw(HttpUtility.JavaScriptStringEncode(paymentMethod))',
                    cashAmount: '@(cashAmount.HasValue ? cashAmount.Value.ToString("F2", System.Globalization.CultureInfo.InvariantCulture) : "")',
                    customerType: '@Html.Raw(HttpUtility.JavaScriptStringEncode(customerType))',
                    userId: '@(userId.HasValue ? userId.Value.ToString() : "")',
                    customerName: '@Html.Raw(HttpUtility.JavaScriptStringEncode(customerNameInput ?? ""))',
                    customerPhone: '@Html.Raw(HttpUtility.JavaScriptStringEncode(customerPhoneInput ?? ""))'
                };

                var token = $('input[name="__RequestVerificationToken"]').val();

                $.ajax({
                    url: '@Url.Action("ConfirmPayment", "Payment", new { area = "Employee_65133141" })',
                    type: 'POST',
                    data: $.extend(data, { __RequestVerificationToken: token }),
                    dataType: 'json',
                    contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                    success: function(response) {
                        closeConfirmPaymentModal();
                        if (response && response.success) {
                            // Redirect to Order/Index - alert s·∫Ω hi·ªÉn th·ªã t·ª´ TempData
                            window.location.href = '@Url.Action("Index", "Order", new { area = "Employee_65133141" })';
                        } else {
                            showAlert('error', response && response.message ? response.message : 'C√≥ l·ªói x·∫£y ra');
                            $btn.prop('disabled', false).text('X√°c nh·∫≠n');
                        }
                    },
                    error: function(xhr, status, error) {
                        closeConfirmPaymentModal();
                        console.error('Payment error:', { xhr: xhr, status: status, error: error });
                        
                        var errorMessage = 'C√≥ l·ªói x·∫£y ra khi x·ª≠ l√Ω thanh to√°n';
                        if (xhr.responseJSON && xhr.responseJSON.message) {
                            errorMessage = xhr.responseJSON.message;
                        } else if (xhr.responseText) {
                            // N·∫øu response l√† HTML (c√≥ th·ªÉ do redirect ho·∫∑c l·ªói server)
                            if (xhr.responseText.indexOf('<!DOCTYPE') !== -1) {
                                errorMessage = 'L·ªói: Server tr·∫£ v·ªÅ HTML thay v√¨ JSON. C√≥ th·ªÉ do session h·∫øt h·∫°n ho·∫∑c l·ªói x√°c th·ª±c.';
                            } else {
                                try {
                                    var errorData = JSON.parse(xhr.responseText);
                                    if (errorData.message) {
                                        errorMessage = errorData.message;
                                    }
                                } catch (e) {
                                    // Ignore parse error
                                }
                            }
                        }
                        
                        showAlert('error', errorMessage);
                        $btn.prop('disabled', false).text('X√°c nh·∫≠n');
                    }
                });
            });
        });
    </script>
