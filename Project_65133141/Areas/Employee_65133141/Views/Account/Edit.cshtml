@model Project_65133141.Models.NhanVien
@{
    ViewBag.Title = "Thay đổi thông tin cá nhân";
    Layout = "~/Areas/Employee_65133141/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen bg-gray-50 py-6">
    <div class="max-w-3xl mx-auto px-4">
        <div class="mb-6 flex items-center justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">Thay đổi thông tin cá nhân</h1>
                <p class="text-sm text-gray-600 mt-1">Cập nhật họ tên, số điện thoại và địa chỉ</p>
            </div>
            <a href="@Url.Action("Profile", "Account", new { area = "Employee_65133141" })"
               class="inline-flex items-center px-4 py-2 rounded-lg bg-gray-100 text-sm font-semibold text-gray-700 hover:bg-gray-200 transition-colors">
                Quay lại hồ sơ
            </a>
        </div>

        @using (Html.BeginForm("Edit", "Account", new { area = "Employee_65133141" }, FormMethod.Post, new { @class = "space-y-6" }))
        {
            @Html.AntiForgeryToken()

            <div class="bg-white rounded-lg shadow-md p-6 space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Họ và tên</label>
                    <input type="text" name="HoTen" value="@Model.HoTen" required
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500" />
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Số điện thoại</label>
                    <input type="text" name="SDT" value="@Model.SDT" maxlength="10"
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500" />
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Địa chỉ</label>
                    <input type="text" name="DiaChi" value="@Model.DiaChi"
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500" />
                </div>
            </div>

            <div class="mt-4 flex justify-end gap-3">
                <a href="@Url.Action("Profile", "Account", new { area = "Employee_65133141" })"
                   class="px-4 py-2 rounded-lg border border-gray-300 text-sm font-medium text-gray-700 hover:bg-gray-100">
                    Hủy
                </a>
                <button type="submit"
                        class="px-5 py-2 rounded-lg bg-gradient-to-r from-amber-500 to-amber-600 text-white text-sm font-semibold hover:from-amber-600 hover:to-amber-700 transition-colors shadow-md">
                    Lưu thay đổi
                </button>
            </div>
        }
    </div>
</div>
