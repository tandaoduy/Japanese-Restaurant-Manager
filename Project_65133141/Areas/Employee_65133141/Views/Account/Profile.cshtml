@model Project_65133141.Models.NhanVien
@{
    ViewBag.Title = "Hồ sơ của tôi";
    Layout = "~/Areas/Employee_65133141/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen bg-gray-50 py-6">
    <div class="max-w-4xl mx-auto px-4">
        <!-- Header -->
        <div class="mb-6">
            <h1 class="text-3xl font-bold text-gray-900">Hồ sơ của tôi</h1>
            <p class="text-sm text-gray-600 mt-1">Thông tin chi tiết và quản lý tài khoản</p>
        </div>

        <!-- Success/Error Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="mb-6 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative">
                <span class="block sm:inline">@TempData["SuccessMessage"]</span>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="mb-6 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative">
                <span class="block sm:inline">@TempData["ErrorMessage"]</span>
            </div>
        }

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Profile Card -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <!-- Profile Header -->
                    <div class="bg-gradient-to-r from-teal-500 to-cyan-500 px-6 py-8">
                        <div class="flex items-center space-x-4">
                            <div class="w-20 h-20 rounded-full bg-white flex items-center justify-center text-teal-600 font-bold text-3xl shadow-lg overflow-hidden">
                                @if (!string.IsNullOrEmpty(Model.Avatar))
                                {
                                    <img src="@Url.Content("~/Images/Employees/" + Model.Avatar)" alt="@Model.HoTen" class="w-full h-full object-cover" />
                                }
                                else if (!string.IsNullOrEmpty(Model.HoTen))
                                {
                                    @Model.HoTen.Substring(0, 1).ToUpper()
                                }
                            </div>
                            <div class="text-white">
                                <h2 class="text-2xl font-bold">@Model.HoTen</h2>
                                <p class="text-teal-100">@(Model.VaiTro?.TenVaiTro ?? "Nhân viên")</p>
                            </div>
                        </div>
                    </div>

                    <!-- Profile Details -->
                    <div class="p-6">
                        <h3 class="text-lg font-semibold text-gray-900 mb-4">Thông tin cá nhân</h3>
                        <div class="space-y-4">
                            <div class="grid grid-cols-3 gap-4">
                                <div class="text-sm font-medium text-gray-500">Mã nhân viên:</div>
                                <div class="col-span-2 text-sm text-gray-900 font-medium">NV@Model.NhanVienID.ToString("D5")</div>
                            </div>

                            <div class="grid grid-cols-3 gap-4">
                                <div class="text-sm font-medium text-gray-500">Họ và tên:</div>
                                <div class="col-span-2 text-sm text-gray-900">@Model.HoTen</div>
                            </div>

                            <div class="grid grid-cols-3 gap-4">
                                <div class="text-sm font-medium text-gray-500">Email:</div>
                                <div class="col-span-2 text-sm text-gray-900">@Model.Email</div>
                            </div>

                            <div class="grid grid-cols-3 gap-4">
                                <div class="text-sm font-medium text-gray-500">Số điện thoại:</div>
                                <div class="col-span-2 text-sm text-gray-900">@(Model.SDT ?? "Chưa cập nhật")</div>
                            </div>

                            <div class="grid grid-cols-3 gap-4">
                                <div class="text-sm font-medium text-gray-500">Địa chỉ:</div>
                                <div class="col-span-2 text-sm text-gray-900">@(Model.DiaChi ?? "Chưa cập nhật")</div>
                            </div>

                            <div class="grid grid-cols-3 gap-4">
                                <div class="text-sm font-medium text-gray-500">Vai trò:</div>
                                <div class="col-span-2">
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-teal-100 text-teal-800">
                                        @(Model.VaiTro?.TenVaiTro ?? "Nhân viên")
                                    </span>
                                </div>
                            </div>

                            <div class="grid grid-cols-3 gap-4">
                                <div class="text-sm font-medium text-gray-500">Trạng thái:</div>
                                <div class="col-span-2">
                                    @if (Model.TrangThai == "Hoạt động")
                                    {
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                                            </svg>
                                            Hoạt động
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                            Vô hiệu hóa
                                        </span>
                                    }
                                </div>
                            </div>

                            <div class="grid grid-cols-3 gap-4">
                                <div class="text-sm font-medium text-gray-500">Ngày vào làm:</div>
                                <div class="col-span-2 text-sm text-gray-900">@(Model.NgayVaoLam?.ToString("dd/MM/yyyy") ?? "N/A")</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar Actions -->
            <div class="space-y-6">
                <!-- Change Password Card -->
                <div class="bg-white rounded-lg shadow-md p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Bảo mật</h3>
                    <div class="space-y-3">
                        <a href="@Url.Action("ChangePassword", "Account", new { area = "Employee_65133141" })" 
                           class="flex items-center justify-between px-4 py-3 bg-blue-50 hover:bg-blue-100 rounded-lg transition-colors group">
                            <div class="flex items-center space-x-3">
                                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
                                </svg>
                                <span class="text-sm font-medium text-gray-900">Đổi mật khẩu</span>
                            </div>
                            <svg class="w-4 h-4 text-gray-400 group-hover:text-blue-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                            </svg>
                        </a>
                    </div>
                </div>

                <!-- Quick Links Card -->
                <div class="bg-white rounded-lg shadow-md p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Liên kết nhanh</h3>
                    <div class="space-y-2">
                        <a href="@Url.Action("Index", "Home", new { area = "Employee_65133141" })" 
                           class="flex items-center space-x-2 text-sm text-gray-600 hover:text-teal-600 transition-colors">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                            </svg>
                            <span>Trang chủ</span>
                        </a>
                        <a href="@Url.Action("Logout", "Account", new { area = "" })" 
                           class="flex items-center space-x-2 text-sm text-red-600 hover:text-red-700 transition-colors">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                            </svg>
                            <span>Đăng xuất</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
