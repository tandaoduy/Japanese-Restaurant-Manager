@model Project_65133141.Models.NhanVien
@{
    ViewBag.Title = "Thông tin cá nhân";
    Layout = "~/Areas/Employee_65133141/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen bg-gray-50 py-6">
    <div class="max-w-4xl mx-auto px-4">
        <div class="mb-6 flex items-center justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">Hồ sơ cá nhân</h1>
                <p class="text-sm text-gray-600 mt-1">Xem thông tin tài khoản nhân viên</p>
            </div>
            <a href="@Url.Action("Edit", "Account", new { area = "Employee_65133141" })"
               class="inline-flex items-center px-4 py-2 rounded-lg bg-gradient-to-r from-amber-500 to-amber-600 text-white text-sm font-semibold hover:from-amber-600 hover:to-amber-700 transition-colors shadow-md">
                Chỉnh sửa thông tin
            </a>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="mb-4 rounded-lg bg-green-50 border border-green-200 px-4 py-3 text-sm text-green-800">
                @TempData["SuccessMessage"]
            </div>
        }

        <div class="bg-white rounded-lg shadow-md p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-1">Họ và tên</p>
                    <p class="text-base font-medium text-gray-900">@Model.HoTen</p>
                </div>
                <div>
                    <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-1">Email</p>
                    <p class="text-base text-gray-900">@Model.Email</p>
                </div>
                <div>
                    <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-1">Số điện thoại</p>
                    <p class="text-base text-gray-900">@(Model.SDT ?? "Chưa cập nhật")</p>
                </div>
                <div>
                    <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-1">Địa chỉ</p>
                    <p class="text-base text-gray-900">@(Model.DiaChi ?? "Chưa cập nhật")</p>
                </div>
                <div>
                    <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-1">Vai trò</p>
                    <p class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-amber-100 text-amber-800">
                        @(Model.VaiTro?.TenVaiTro ?? "Nhân viên")
                    </p>
                </div>
                <div>
                    <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-1">Ngày vào làm</p>
                    <p class="text-base text-gray-900">@(Model.NgayVaoLam?.ToString("dd/MM/yyyy") ?? "N/A")</p>
                </div>
            </div>
        </div>
    </div>
</div>
