<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Employee Panel</title>
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="@Url.Content("~/Images/logoNhaHang.png")" />
    <link rel="shortcut icon" type="image/png" href="@Url.Content("~/Images/logoNhaHang.png")" />
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="bg-gray-50">
    <nav class="bg-green-600 text-white shadow-lg">
        <div class="container mx-auto px-4">
            <div class="flex items-center justify-between h-16">
                <div class="flex items-center space-x-4">
                    <h1 class="text-xl font-bold">Employee Panel</h1>
                </div>
                <div class="flex items-center space-x-4">
                    <span class="text-sm">
                        Employee <strong>@(User.Identity.IsAuthenticated ? User.Identity.Name : "Guest")</strong>
                    </span>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a href="@Url.Action("Logout", "Account", new { area = "" })" 
                           class="bg-red-500 hover:bg-red-600 px-4 py-2 rounded text-sm transition">
                            Đăng xuất
                        </a>
                    }
                </div>
            </div>
        </div>
    </nav>
    
    <div class="container mx-auto px-4 py-8">
        @RenderBody()
    </div>

    <footer class="bg-gray-800 text-white mt-8 py-4">
        <div class="container mx-auto px-4 text-center">
            <p>&copy; @DateTime.Now.Year - Employee Panel - Quản lý nhà hàng</p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
