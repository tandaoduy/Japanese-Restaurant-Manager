@model Project_65133141.Models.DonHang
@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Areas/Employee_65133141/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen bg-gray-50 py-6">
    <div class="max-w-7xl mx-auto px-4">
        <div class="mb-6 flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-bold text-gray-900">Chi tiết đơn hàng</h1>
                <p class="text-sm text-gray-600 mt-1">Mã đơn: DH@Model.DonHangID.ToString("D4")</p>
            </div>
            <a href="@Url.Action("Index", "DonHang", new { area = "Employee_65133141" })" 
               class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300">
                Quay lại
            </a>
        </div>

        <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div>
                    <h3 class="text-sm font-semibold text-teal-700 mb-2">Thông tin đơn hàng</h3>
                    <div class="space-y-2 text-sm">
                        <p><span class="font-medium text-gray-700">Mã đơn:</span> <span class="text-gray-900">DH@Model.DonHangID.ToString("D4")</span></p>
                        <p><span class="font-medium text-gray-700">Bàn:</span> <span class="text-gray-900">@(Model.BanAn?.TenBan ?? "N/A") - @(Model.BanAn?.ViTri ?? "N/A")</span></p>
                        <p><span class="font-medium text-gray-700">Ngày đặt:</span> <span class="text-gray-900">@(Model.NgayDat?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</span></p>
                        <p><span class="font-medium text-gray-700">Trạng thái:</span> 
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                                @(Model.TrangThai == "Đã thanh toán" ? "bg-green-100 text-green-800" : 
                                  Model.TrangThai == "Đang chuẩn bị" ? "bg-yellow-100 text-yellow-800" : 
                                  "bg-gray-100 text-gray-800")">
                                @Model.TrangThai
                            </span>
                        </p>
                    </div>
                </div>
                <div>
                    <h3 class="text-sm font-semibold text-teal-700 mb-2">Thông tin khách hàng</h3>
                    <div class="space-y-2 text-sm">
                        <p><span class="font-medium text-gray-700">Khách hàng:</span> <span class="text-gray-900">@(Model.User?.HoTen ?? "Khách vãng lai")</span></p>
                        @if (Model.User != null)
                        {
                            <p><span class="font-medium text-gray-700">Email:</span> <span class="text-gray-900">@(Model.User.Email ?? "N/A")</span></p>
                            <p><span class="font-medium text-gray-700">SĐT:</span> <span class="text-gray-900">@(Model.User.SDT ?? "N/A")</span></p>
                        }
                    </div>
                </div>
            </div>

            <div class="border-t pt-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Chi tiết món ăn</h3>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-teal-50">
                            <tr>
                                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase">STT</th>
                                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Tên món</th>
                                <th class="px-4 py-3 text-center text-xs font-semibold text-gray-700 uppercase">SL</th>
                                <th class="px-4 py-3 text-right text-xs font-semibold text-gray-700 uppercase">Đơn giá</th>
                                <th class="px-4 py-3 text-right text-xs font-semibold text-gray-700 uppercase">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @{ int stt = 1; }
                            @foreach (var detail in Model.ChiTietDonHangs)
                            {
                                <tr>
                                    <td class="px-4 py-3 text-sm text-gray-700">@stt</td>
                                    <td class="px-4 py-3 text-sm text-gray-900">@detail.MonAn.TenMon</td>
                                    <td class="px-4 py-3 text-sm text-gray-700 text-center">@detail.SoLuong</td>
                                    <td class="px-4 py-3 text-sm text-gray-700 text-right">@string.Format("{0:N0}", detail.DonGia) ₫</td>
                                    <td class="px-4 py-3 text-sm font-semibold text-gray-900 text-right">@string.Format("{0:N0}", detail.ThanhTien ?? (detail.DonGia * detail.SoLuong)) ₫</td>
                                </tr>
                                stt++;
                            }
                        </tbody>
                        <tfoot class="bg-teal-50">
                            <tr>
                                <td colspan="4" class="px-4 py-3 text-right text-lg font-bold text-gray-900">Tổng cộng:</td>
                                <td class="px-4 py-3 text-right text-lg font-bold text-teal-600">@string.Format("{0:N0}", Model.TongTien) ₫</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>




