@model IEnumerable<Project_65133141.Models.DonHang>
@{ 
    ViewBag.Title = "Quản lý đơn hàng";
    Layout = "~/Areas/Employee_65133141/Views/Shared/_Layout.cshtml";

    var currentPage = ViewBag.CurrentPage ?? 1;
    var totalPages = ViewBag.TotalPages ?? 1;
}

<div class="min-h-screen bg-gray-50 py-6">
    <div class="max-w-7xl mx-auto px-4">
        <div class="mb-6">
            <h1 class="text-2xl font-bold text-gray-900">Quản lý đơn hàng</h1>
            <p class="text-sm text-gray-600 mt-1">Danh sách đơn hàng của bạn</p>
        </div>

        <!-- Alert Container (Fixed Top Right) -->
        <div id="alertContainer" class="fixed top-20 right-4 z-[10000] space-y-2 max-w-md"></div>


        <!-- Filter Section -->
        <div class="mb-6">
            <form id="orderFilterForm" method="get" action="@Url.Action("Index", "DonHang", new { area = "Employee_65133141" })" class="space-y-4">
                <input type="hidden" name="page" value="1" />
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Tìm kiếm</label>
                        <div style="position: relative;">
                            <input type="text" id="searchInput" name="searchTerm" value="@ViewBag.SearchTerm" 
                                   placeholder="Mã đơn, tên khách, bàn..." 
                                   autocomplete="off"
                                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-teal-500">
                            <div id="searchSuggestions" style="display: none; position: absolute; top: 100%; left: 0; right: 0; background: white; border: 1px solid #d1d5db; border-radius: 8px; margin-top: 4px; max-height: 200px; overflow-y: auto; z-index: 1000; box-shadow: 0 4px 6px rgba(0,0,0,0.1);"></div>
                        </div>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Từ ngày</label>
                        <input type="date" name="startDate" max="2100-12-31" value="@(ViewBag.StartDate?.ToString("yyyy-MM-dd") ?? "")" 
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-teal-500">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Đến ngày</label>
                        <input type="date" name="endDate" max="2100-12-31" value="@(ViewBag.EndDate?.ToString("yyyy-MM-dd") ?? "")" 
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-teal-500">
                    </div>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div class="flex gap-3">
                        <button type="submit" class="px-6 py-2 bg-teal-500 text-white rounded-lg hover:bg-teal-600 font-medium transition-all">
                            Lọc
                        </button>
                        <a href="@Url.Action("Index", "DonHang", new { area = "Employee_65133141" })" 
                           class="px-6 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 font-medium transition-all">
                            Xóa bộ lọc
                        </a>
                    </div>
                    <div></div>
                    <!-- Export Dropdown - Aligned with Đến ngày (third column) -->
                    <div class="relative h-10" id="exportDropdown">
                        <button type="button" onclick="toggleExportDropdown()" 
                                class="absolute right-0 top-0 px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 font-medium text-sm flex items-center justify-center gap-2 shadow-sm hover:shadow transition-all">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                            Export
                            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                            </svg>
                        </button>
                        
                        <!-- Dropdown Menu -->
                        <div id="exportDropdownMenu" class="hidden absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 z-50">
                            <a href="@Url.Action("ExportPDF", "DonHang", new { area = "Employee_65133141", searchTerm = ViewBag.SearchTerm, startDate = ViewBag.StartDate?.ToString("yyyy-MM-dd"), endDate = ViewBag.EndDate?.ToString("yyyy-MM-dd") })" 
                               target="_blank"
                               class="flex items-center gap-3 px-4 py-3 hover:bg-red-50 text-gray-700 hover:text-red-600 transition-colors first:rounded-t-lg">
                                <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                                </svg>
                                <span class="font-medium">Xuất PDF</span>
                            </a>
                            <a href="@Url.Action("ExportExcel", "DonHang", new { area = "Employee_65133141", searchTerm = ViewBag.SearchTerm, startDate = ViewBag.StartDate?.ToString("yyyy-MM-dd"), endDate = ViewBag.EndDate?.ToString("yyyy-MM-dd") })" 
                               class="flex items-center gap-3 px-4 py-3 hover:bg-green-50 text-gray-700 hover:text-green-600 transition-colors border-t border-gray-100 last:rounded-b-lg">
                                <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                </svg>
                                <span class="font-medium">Xuất Excel</span>
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <div class="bg-white rounded-lg shadow overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-teal-50">
                        <tr>
                            <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Mã đơn</th>
                            <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Bàn</th>
                            <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Tên khách hàng</th>
                            <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">SĐT</th>
                            <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Ngày đặt</th>
                            <th class="px-4 py-3 text-right text-xs font-semibold text-gray-700 uppercase tracking-wider">Tổng tiền</th>
                            <th class="px-4 py-3 text-center text-xs font-semibold text-gray-700 uppercase tracking-wider">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                // Lấy mã hóa đơn từ HoaDon
                                var hoaDon = item.HoaDons?.FirstOrDefault();
                                var maDon = hoaDon != null ? "HD" + hoaDon.HoaDonID.ToString("D5") : "DH" + item.DonHangID.ToString("D4");
                                
                                // Lấy thông tin khách hàng
                                string customerName = "";
                                string customerPhone = "";
                                if (item.User != null)
                                {
                                    // Khách hàng trong hệ thống
                                    customerName = item.User.HoTen ?? "";
                                    customerPhone = item.User.SDT ?? "";
                                }
                                else
                                {
                                    // Khách vãng lai - tên lưu trong GhiChu, SĐT lưu trong SoDienThoai
                                    customerName = !string.IsNullOrEmpty(item.GhiChu) ? item.GhiChu : "Khách vãng lai";
                                    customerPhone = item.SoDienThoai ?? "";
                                }
                                
                                <tr class="hover:bg-gray-50">
                                    <td class="px-4 py-3 text-sm font-medium text-gray-900">@maDon</td>
                                    <td class="px-4 py-3 text-sm text-gray-700">@(item.BanAn?.TenBan ?? "")</td>
                                    <td class="px-4 py-3 text-sm text-gray-700">@customerName</td>
                                    <td class="px-4 py-3 text-sm text-gray-700">@customerPhone</td>
                                    <td class="px-4 py-3 text-sm text-gray-700">@(item.NgayDat?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</td>
                                    <td class="px-4 py-3 text-sm font-semibold text-teal-600 text-right">@string.Format("{0:N0}", item.TongTien) ₫</td>
                                    <td class="px-4 py-3 text-sm text-center">
                                        <button type="button" onclick="openOrderDetailsModal(@item.DonHangID)" 
                                                class="text-teal-600 hover:text-teal-800 transition-colors" 
                                                title="Xem chi tiết">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                            </svg>
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="px-4 py-8 text-center text-sm text-gray-500">
                                    Chưa có đơn hàng nào.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        @Html.Partial("~/Views/Components/_Pagination.cshtml", new ViewDataDictionary
        {
            { "BaseUrl", ViewBag.BaseUrl },
            { "PageParam", "page" },
            { "CurrentPage", currentPage },
            { "TotalPages", totalPages }
        })
    </div>
</div>

<!-- Modal Chi tiết đơn hàng -->
<div id="orderDetailsModal" style="display: none; position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0, 0, 0, 0.5); z-index: 9999; align-items: center; justify-content: center; padding: 20px;">
    <div style="background: white; border-radius: 20px; max-width: 860px; width: 100%; max-height: 90vh; overflow-y: auto; box-shadow: 0 30px 60px rgba(0, 0, 0, 0.25); position: relative;">
        <button type="button" onclick="closeOrderDetailsModal()" style="position:absolute;top:16px;right:16px;background:#f3f4f6;border:none;font-size:20px;color:#6b7280;cursor:pointer;width:36px;height:36px;border-radius:9999px;display:flex;align-items:center;justify-content:center;">&times;</button>

        <div style="padding: 26px 28px 18px 28px; border-bottom: 1px solid #e5e7eb; text-align: center;">
            <div style="width:64px;height:64px;border-radius:9999px;background:#ccfbf1;margin:0 auto 12px auto;display:flex;align-items:center;justify-content:center;box-shadow:0 8px 18px rgba(13, 148, 136, 0.15);">
                <svg style="width:28px;height:28px;color:#0f766e;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m2 8H7a2 2 0 01-2-2V6a2 2 0 012-2h6l4 4v10a2 2 0 01-2 2z"></path>
                </svg>
            </div>
            <h2 style="font-size: 22px; font-weight: 800; color: #111827;">Chi tiết đơn hàng</h2>
            <p style="margin-top:6px;color:#6b7280;font-size:14px;">Xem thông tin đơn và các món đã gọi</p>
        </div>

        <div id="orderDetailsContent" style="padding: 22px 28px 26px 28px;">
            <div style="text-align: center; padding: 40px;">
                <div style="width: 40px; height: 40px; border: 4px solid #e5e7eb; border-top-color: #0d9488; border-radius: 50%; animation: spin 1s linear infinite; margin: 0 auto;"></div>
                <p style="margin-top: 16px; color: #6b7280;">Đang tải...</p>
            </div>
        </div>
    </div>
</div>

<style>
    @@keyframes spin {
        to { transform: rotate(360deg); }
    }

    .google-suggest {
        display: none;
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        background: white;
        border: 1px solid #e5e7eb;
        border-radius: 12px;
        margin-top: 8px;
        max-height: 320px;
        overflow-y: auto;
        z-index: 1000;
        box-shadow: 0 20px 25px -5px rgba(0,0,0,0.1), 0 8px 10px -6px rgba(0,0,0,0.1);
    }

    .google-suggest-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        padding: 10px 14px;
        cursor: pointer;
        border-bottom: 1px solid #f3f4f6;
        font-size: 14px;
        color: #111827;
    }

    .google-suggest-item:last-child {
        border-bottom: none;
    }

    .google-suggest-item:hover,
    .google-suggest-item.active {
        background: #f9fafb;
    }

    .google-suggest-left {
        display: flex;
        align-items: center;
        gap: 10px;
        min-width: 0;
    }

    .google-suggest-icon {
        width: 18px;
        height: 18px;
        flex-shrink: 0;
        color: #9ca3af;
    }

    .google-suggest-text {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .google-suggest-badge {
        flex-shrink: 0;
        font-size: 11px;
        font-weight: 700;
        padding: 3px 10px;
        border-radius: 9999px;
        background: #f0fdfa;
        color: #0f766e;
        border: 1px solid rgba(20, 184, 166, 0.25);
    }
</style>

<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script>
    // ==========================================================
    // ALERT SYSTEM (Matched with Admin)
    // ==========================================================
    function showAlert(type, message) {
        var container = document.getElementById('alertContainer');
        if (!container) return;

        var alertId = 'alert-' + Date.now();

        var config = {
            success: {
                bg: 'bg-green-100 border border-green-200 text-green-900',
                iconBg: 'bg-green-500 text-white',
                title: 'Thành công!',
                icon: '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>'
            },
            error: {
                bg: 'bg-red-100 border border-red-200 text-red-900',
                iconBg: 'bg-red-500 text-white',
                title: 'Lỗi!',
                icon: '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01M4.93 4.93l14.14 14.14"></path><circle cx="12" cy="12" r="9" stroke-width="2" fill="none"></circle></svg>'
            },
            warning: {
                bg: 'bg-amber-100 border border-amber-200 text-amber-900',
                iconBg: 'bg-amber-500 text-white',
                title: 'Cảnh báo!',
                icon: '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 3h.01M10.29 4.21l-6.6 11.45A1 1 0 004.53 18h14.94a1 1 0 00.86-1.5l-6.6-11.45a1 1 0 00-1.74 0z"/></svg>'
            },
            info: {
                bg: 'bg-sky-100 border border-sky-200 text-sky-900',
                iconBg: 'bg-sky-500 text-white',
                title: 'Thông tin',
                icon: '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01" /><circle cx="12" cy="12" r="9" stroke-width="2" fill="none"></circle></svg>'
            }
        };

        var cfg = config[type] || config.info;

        var html = `
        <div id="${alertId}" class="${cfg.bg} px-3 py-2 rounded-lg shadow-md flex items-center gap-2 max-w-md transition-all duration-300 translate-x-full bg-opacity-95 border border-white/60">
            <div class="w-7 h-7 rounded-full ${cfg.iconBg} flex items-center justify-center flex-shrink-0">
                ${cfg.icon}
            </div>
            <div class="flex-1">
                <div class="font-semibold text-sm mb-0.5">${cfg.title}</div>
                <div class="text-sm leading-snug">${message}</div>
            </div>
            <button type="button" class="ml-2 text-current/70 hover:text-current" aria-label="Đóng thông báo"
                    onclick="(function(){ var el = document.getElementById('${alertId}'); if(el){ el.classList.add('translate-x-full'); setTimeout(function(){ el.remove(); }, 250); } })()">
                &#10005;
            </button>
        </div>`;

        container.insertAdjacentHTML('beforeend', html);

        setTimeout(function () {
            var el = document.getElementById(alertId);
            if (el) el.classList.remove('translate-x-full');
        }, 10);

        setTimeout(function () {
            var el = document.getElementById(alertId);
            if (el) {
                el.classList.add('translate-x-full');
                setTimeout(function () { el.remove(); }, 250);
            }
        }, 4000);
    }

    // Export Dropdown Toggle
    function toggleExportDropdown() {
        var menu = document.getElementById('exportDropdownMenu');
        menu.classList.toggle('hidden');
    }

    // Close dropdown when clicking outside
    document.addEventListener('click', function(e) {
        var dropdown = document.getElementById('exportDropdown');
        var menu = document.getElementById('exportDropdownMenu');
        if (dropdown && !dropdown.contains(e.target)) {
            menu.classList.add('hidden');
        }
    });

    function openOrderDetailsModal(donHangId) {
        var modal = document.getElementById('orderDetailsModal');
        modal.style.display = 'flex';
        document.body.style.overflow = 'hidden';

        // Load order details
        $.ajax({
            url: '@Url.Action("GetOrderDetails", "DonHang", new { area = "Employee_65133141" })',
            type: 'GET',
            data: { id: donHangId },
            success: function(response) {
                if (response && response.success) {
                    var data = response.data;
                    var html = `
                        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 22px;">
                            <div>
                                <h3 style="font-size: 14px; font-weight: 800; color: #0f766e; margin-bottom: 12px;">Thông tin đơn hàng</h3>
                                <div style="display: flex; flex-direction: column; gap: 8px; font-size: 14px;">
                                    <p><span style="font-weight: 500; color: #374151;">Mã đơn:</span> <span style="color: #111827;">${data.MaDon}</span></p>
                                    <p><span style="font-weight: 500; color: #374151;">Bàn:</span> <span style="color: #111827;">${data.BanAn}</span></p>
                                    <p><span style="font-weight: 500; color: #374151;">Ngày đặt:</span> <span style="color: #111827;">${data.NgayDat}</span></p>
                                    <p><span style="font-weight: 500; color: #374151;">Nhân viên:</span> <span style="color: #111827;">${data.NhanVien}</span></p>
                                    <p><span style="font-weight: 500; color: #374151;">Trạng thái:</span> 
                                        <span style="display: inline-flex; align-items: center; padding: 4px 12px; border-radius: 9999px; font-size: 12px; font-weight: 500; 
                                            ${data.TrangThai === 'Đã thanh toán' ? 'background: #d1fae5; color: #065f46;' : 
                                              data.TrangThai === 'Đang chuẩn bị' ? 'background: #fef3c7; color: #92400e;' : 
                                              'background: #e5e7eb; color: #374151;'}">
                                            ${data.TrangThai}
                                        </span>
                                    </p>
                                </div>
                            </div>
                            <div>
                                <h3 style="font-size: 14px; font-weight: 800; color: #0f766e; margin-bottom: 12px;">Thông tin khách hàng</h3>
                                <div style="display: flex; flex-direction: column; gap: 8px; font-size: 14px;">
                                    <p><span style="font-weight: 500; color: #374151;">Khách hàng:</span> <span style="color: #111827;">${data.CustomerName || ''}</span></p>
                                    ${data.CustomerPhone ? `<p><span style="font-weight: 500; color: #374151;">SĐT:</span> <span style="color: #111827;">${data.CustomerPhone}</span></p>` : ''}
                                </div>
                            </div>
                        </div>
                        <div style="border-top: 1px solid #e5e7eb; padding-top: 24px;">
                            <h3 style="font-size: 16px; font-weight: 600; color: #111827; margin-bottom: 16px;">Chi tiết món ăn</h3>
                            <div style="overflow-x: auto;">
                                <table style="width: 100%; border-collapse: collapse;">
                                    <thead style="background: #f0fdfa;">
                                        <tr>
                                            <th style="padding: 12px; text-align: left; font-size: 12px; font-weight: 600; color: #374151; text-transform: uppercase;">STT</th>
                                            <th style="padding: 12px; text-align: left; font-size: 12px; font-weight: 600; color: #374151; text-transform: uppercase;">Tên món</th>
                                            <th style="padding: 12px; text-align: center; font-size: 12px; font-weight: 600; color: #374151; text-transform: uppercase;">SL</th>
                                            <th style="padding: 12px; text-align: right; font-size: 12px; font-weight: 600; color: #374151; text-transform: uppercase;">Đơn giá</th>
                                            <th style="padding: 12px; text-align: right; font-size: 12px; font-weight: 600; color: #374151; text-transform: uppercase;">Thành tiền</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                    `;
                    
                    data.OrderDetails.forEach(function(item, index) {
                        html += `
                            <tr style="border-top: 1px solid #e5e7eb;">
                                <td style="padding: 12px; font-size: 14px; color: #374151;">${index + 1}</td>
                                <td style="padding: 12px; font-size: 14px; color: #111827;">${item.TenMon}</td>
                                <td style="padding: 12px; font-size: 14px; color: #374151; text-align: center;">${item.SoLuong}</td>
                                <td style="padding: 12px; font-size: 14px; color: #374151; text-align: right;">${formatCurrency(item.DonGia)} ₫</td>
                                <td style="padding: 12px; font-size: 14px; font-weight: 600; color: #111827; text-align: right;">${formatCurrency(item.ThanhTien)} ₫</td>
                            </tr>
                        `;
                    });
                    
                    html += `
                                    </tbody>
                                    <tfoot style="background: #f0fdfa; border-top: 2px solid #0d9488;">
                                        <tr>
                                            <td colspan="4" style="padding: 16px; text-align: right; font-size: 16px; font-weight: bold; color: #111827;">Tổng cộng:</td>
                                            <td style="padding: 16px; text-align: right; font-size: 16px; font-weight: bold; color: #0d9488;">${formatCurrency(data.TongTien)} ₫</td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                        <div style="display:flex;gap:12px;margin-top:18px;justify-content:flex-end;">
                            <button type="button" onclick="closeOrderDetailsModal()" style="padding:10px 16px;background:#f3f4f6;border:1px solid #e5e7eb;border-radius:12px;font-weight:800;color:#374151;">Đóng</button>
                        </div>
                    `;
                    
                    document.getElementById('orderDetailsContent').innerHTML = html;
                } else {
                    var msg = response && response.message ? response.message : 'Không thể tải thông tin đơn hàng';
                    showAlert('error', msg);
                    closeOrderDetailsModal();
                }

            },
            error: function() {
                showAlert('error', 'Có lỗi xảy ra khi tải thông tin đơn hàng.');
                closeOrderDetailsModal();

            }
        });
    }

    function closeOrderDetailsModal() {
        var modal = document.getElementById('orderDetailsModal');
        modal.style.display = 'none';
        document.body.style.overflow = 'auto';
    }

    function formatCurrency(amount) {
        return new Intl.NumberFormat('vi-VN').format(amount);
    }

    // Đóng modal khi click bên ngoài
    document.getElementById('orderDetailsModal').addEventListener('click', function(e) {
        if (e.target === this) {
            closeOrderDetailsModal();
        }
    });

    // Đóng modal khi nhấn ESC
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            closeOrderDetailsModal();
        }
    });

    // Autocomplete cho tìm kiếm (Google-like)
    var suggestTimeout;
    var submitTimeout;
    var currentSuggestions = [];
    var activeIndex = -1;

    // Ensure dropdown uses improved style
    $('#searchSuggestions').removeAttr('style').addClass('google-suggest');

    function escapeHtml(text) {
        return String(text)
            .replace(/&/g, '&amp;')
            .replace(/</g, '&lt;')
            .replace(/>/g, '&gt;')
            .replace(/"/g, '&quot;')
            .replace(/'/g, '&#039;');
    }

    function escapeRegExp(str) {
        return str.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
    }

    function getIconSvg() {
        return '<svg class="google-suggest-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">' +
            '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>' +
            '</svg>';
    }

    function renderSuggestions(query) {
        var suggestionsDiv = $('#searchSuggestions');
        activeIndex = -1;

        if (!currentSuggestions || currentSuggestions.length === 0) {
            suggestionsDiv.hide().empty();
            return;
        }

        var q = String(query || '').trim();
        var html = '';

        currentSuggestions.forEach(function(item, idx) {
            var text = item && item.text ? String(item.text) : '';
            var type = item && item.type ? String(item.type) : '';
            var safeText = escapeHtml(text);

            html += '<div class="google-suggest-item" data-index="' + idx + '">' +
                        '<div class="google-suggest-left">' +
                            getIconSvg() +
                            '<div class="google-suggest-text">' + safeText + '</div>' +
                        '</div>' +
                        (type ? ('<span class="google-suggest-badge">' + escapeHtml(type) + '</span>') : '') +
                    '</div>';
        });

        suggestionsDiv.html(html).show();
    }

    function setActive(index) {
        var suggestionsDiv = $('#searchSuggestions');
        var items = suggestionsDiv.find('.google-suggest-item');
        if (!items.length) return;

        if (index < 0) index = items.length - 1;
        if (index >= items.length) index = 0;
        activeIndex = index;

        items.removeClass('active');
        var activeItem = items.eq(activeIndex).addClass('active');

        // Ensure visible in scroll
        var container = suggestionsDiv.get(0);
        var el = activeItem.get(0);
        if (container && el) {
            var cTop = container.scrollTop;
            var cBottom = cTop + container.clientHeight;
            var eTop = el.offsetTop;
            var eBottom = eTop + el.offsetHeight;
            if (eBottom > cBottom) container.scrollTop = eBottom - container.clientHeight;
            if (eTop < cTop) container.scrollTop = eTop;
        }
    }

    function applySuggestion(index) {
        if (index == null || index < 0 || index >= currentSuggestions.length) return;
        var text = currentSuggestions[index].text;
        $('#searchInput').val(text);
        $('#searchSuggestions').hide();
        $('#orderFilterForm').trigger('submit');
    }

    function scheduleAutoSubmit() {
        clearTimeout(submitTimeout);
        submitTimeout = setTimeout(function() {
            $('#orderFilterForm').trigger('submit');
        }, 450);
    }

    $('#searchInput').on('input', function() {
        var query = $(this).val();

        clearTimeout(suggestTimeout);
        if (!query || query.length < 2) {
            $('#searchSuggestions').hide().empty();
            currentSuggestions = [];
            activeIndex = -1;
            scheduleAutoSubmit();
            return;
        }

        suggestTimeout = setTimeout(function() {
            $.ajax({
                url: '@Url.Action("GetSearchSuggestions", "DonHang", new { area = "Employee_65133141" })',
                type: 'GET',
                data: { query: query },
                success: function(response) {
                    if (response && response.success && response.suggestions && response.suggestions.length > 0) {
                        currentSuggestions = response.suggestions;
                        renderSuggestions(query);
                    } else {
                        currentSuggestions = [];
                        $('#searchSuggestions').hide().empty();
                    }
                },
                error: function() {
                    currentSuggestions = [];
                    $('#searchSuggestions').hide().empty();
                }
            });
        }, 250);

        // Tự lọc theo nội dung đang gõ (debounce)
        scheduleAutoSubmit();
    });

    // Mouse click on item
    $('#searchSuggestions').on('click', '.google-suggest-item', function() {
        var idx = parseInt($(this).attr('data-index'), 10);
        applySuggestion(idx);
    });

    // Keyboard navigation
    $('#searchInput').on('keydown', function(e) {
        var isOpen = $('#searchSuggestions').is(':visible');
        if (!isOpen) return;

        if (e.key === 'ArrowDown') {
            e.preventDefault();
            setActive(activeIndex + 1);
        } else if (e.key === 'ArrowUp') {
            e.preventDefault();
            setActive(activeIndex - 1);
        } else if (e.key === 'Enter') {
            if (activeIndex >= 0) {
                e.preventDefault();
                applySuggestion(activeIndex);
            }
        } else if (e.key === 'Escape') {
            $('#searchSuggestions').hide();
        }
    });

    // Ẩn suggestions khi click bên ngoài
    $(document).on('click', function(e) {
        if (!$(e.target).closest('#searchInput, #searchSuggestions').length) {
            $('#searchSuggestions').hide();
        }
    });

    // Date Validation Logic
    const filterFormElement = document.getElementById('orderFilterForm');
    if (filterFormElement) {
        filterFormElement.addEventListener('submit', function(e) {
            const startDateInput = document.querySelector('input[name="startDate"]');
            const endDateInput = document.querySelector('input[name="endDate"]');
            
            if (!startDateInput || !endDateInput) return;

            const startDateVal = startDateInput.value;
            const endDateVal = endDateInput.value;

            // Validate Year Range (e.g., 1900 - 2100)
            const minYear = 1900;
            const maxYear = 2100;

            if (startDateVal) {
                const startYear = new Date(startDateVal).getFullYear();
                if (startYear < minYear || startYear > maxYear) {
                    alert('Năm của "Từ ngày" không hợp lệ. Vui lòng nhập năm trong khoảng 1900 - 2100.');
                    e.preventDefault();
                    return false;
                }
            }

            if (endDateVal) {
                const endYear = new Date(endDateVal).getFullYear();
                if (endYear < minYear || endYear > maxYear) {
                    alert('Năm của "Đến ngày" không hợp lệ. Vui lòng nhập năm trong khoảng 1900 - 2100.');
                    e.preventDefault();
                    return false;
                }
            }

            // Validate Start Date <= End Date
            if (startDateVal && endDateVal) {
                if (new Date(startDateVal) > new Date(endDateVal)) {
                    alert('"Từ ngày" không được lớn hơn "Đến ngày".');
                    e.preventDefault();
                    return false;
                }
            }
        });
    }
</script>
